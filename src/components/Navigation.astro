        <div class="nav-item has-dropdown">
            <a href="/services" class="nav-link">Services</a>
            <div class="dropdown">
                <a href="/house-cleaning" class="dropdown-item" style="font-weight: 600; color: #ff8057;">House Cleaning Guide</a>
                <div class="dropdown-section">Residential</div>
                <a href="/residential-cleaning" class="dropdown-item">Standard House Cleaning</a>
                <a href="/deep-cleaning" class="dropdown-item">Deep Cleaning</a>
                <a href="/move-in-out-cleaning" class="dropdown-item">Move-in/Move-out</a>
                <div class="dropdown-section">Commercial</div>
                <a href="/commercial-cleaning" class="dropdown-item">Office Cleaning</a>
