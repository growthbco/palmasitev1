---
// Weekly Cleaning Service Ocala - SEO optimized page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Weekly House Cleaning Service Ocala FL | Recurring Maid Service";
const description = "Weekly house cleaning service in Ocala FL. Consistent, reliable cleaning every week. Save 10% with regular service. Serving Marion County families since 2020. Book your weekly cleaner today.";

const benefits = [
  {
    icon: "fa-solid fa-home",
    title: "Always Guest-Ready",
    copy: "Your home stays consistently clean and welcoming. No more last-minute panic cleaning before guests arrive."
  },
  {
    icon: "fa-solid fa-dollar-sign",
    title: "Save 10% Every Week",
    copy: "Weekly customers get our best rates. More frequent cleaning means less time needed, passing savings to you."
  },
  {
    icon: "fa-solid fa-user",
    title: "Same Trusted Cleaner",
    copy: "Build a relationship with your dedicated cleaner who knows your home and preferences perfectly."
  },
  {
    icon: "fa-solid fa-heart",
    title: "Healthier Home",
    copy: "Regular cleaning reduces allergens, dust mites, and bacteria. Essential for Florida's humid climate."
  },
  {
    icon: "fa-solid fa-clock",
    title: "Get Your Weekends Back",
    copy: "Spend weekends enjoying Ocala's attractions instead of cleaning. More time for family and fun."
  },
  {
    icon: "fa-solid fa-calendar-check",
    title: "Priority Scheduling",
    copy: "Weekly customers get first choice of time slots and priority during busy seasons."
  }
];

const weeklyTasks = [
  "Dust all surfaces & furniture",
  "Vacuum carpets & rugs",
  "Mop all hard floors",
  "Clean & disinfect bathrooms",
  "Clean kitchen thoroughly",
  "Empty all trash bins",
  "Make beds (if requested)",
  "Wipe down appliances"
];

const monthlyTasks = [
  "Baseboards & window sills",
  "Light fixtures & fans",
  "Inside microwave & oven",
  "Behind/under furniture",
  "Door frames & switches",
  "Detailed grout cleaning",
  "Refrigerator exterior",
  "Cabinet fronts"
];

const personas = [
  {
    icon: "fa-solid fa-user-doctor",
    title: "Healthcare Professionals",
    copy: "Doctors and nurses at AdventHealth Ocala trust us for reliable weekly cleaning that fits their schedules."
  },
  {
    icon: "fa-solid fa-users",
    title: "Growing Families",
    copy: "Parents in Marion County love coming home to a clean house without sacrificing family time."
  },
  {
    icon: "fa-solid fa-horse",
    title: "Equestrian Community",
    copy: "Horse owners near WEC appreciate weekly service that handles Florida's dust and dirt."
  },
  {
    icon: "fa-solid fa-umbrella-beach",
    title: "Active Seniors",
    copy: "Retirees in The Villages and Oak Run enjoy maintenance-free living with our help."
  }
];

const neighborhoods = [
  "Downtown Ocala",
  "Silver Springs Shores",
  "Marion Oaks",
  "The Villages",
  "Oak Run",
  "Stone Creek",
  "Ocala Estates",
  "Golden Hills",
  "WEC Area",
  "Belleview",
  "Dunnellon",
  "Southwest Ocala"
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="weekly cleaning service Ocala, weekly house cleaning Ocala FL, recurring cleaning Ocala, weekly maid service Marion County, every week cleaning Ocala">
    <link rel="canonical" href="https://palmacleaningco.com/weekly-cleaning-service-ocala">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Weekly House Cleaning Service Ocala FL",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Ocala",
                "addressRegion": "FL",
                "postalCode": "34471",
                "addressCountry": "US"
            }
        },
        "offers": {
            "@type": "Offer",
            "name": "Weekly Cleaning Service",
            "description": "Save 10% with weekly recurring service",
            "priceCurrency": "USD"
        },
        "areaServed": [
            "Ocala, FL",
            "Marion County, FL",
            "Silver Springs Shores, FL",
            "Marion Oaks, FL",
            "The Villages, FL"
        ],
        "serviceType": "Weekly Recurring House Cleaning",
        "description": "Professional weekly house cleaning service in Ocala. Same cleaner every week, consistent quality, 10% discount."
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />
    <Navigation />
    
    <main>
        <!-- Hero -->
        <section class="bg-[#F4F7F6]">
            <div class="container mx-auto px-6 py-20 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div class="text-center lg:text-left">
                    <h1 class="text-5xl md:text-6xl font-bold leading-tight">Weekly House Cleaning Service in Ocala, FL</h1>
                    <p class="mt-6 text-lg text-gray-600">Come home to a clean house every week. Save 10% with regular service. Same trusted cleaner every week, guaranteed arrival times, and the peace of mind you deserve.</p>
                    <a href="/book-now" class="mt-8 inline-block bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300">Start Weekly Service</a>
                    <p class="mt-6 text-sm text-gray-500">Perfect for busy professionals and active families throughout Marion County.</p>
                    <div class="mt-6 flex items-center justify-center lg:justify-start space-x-6">
                        <div class="flex items-center">
                            <span class="font-semibold text-gray-700">Same cleaner every week</span>
                            <div class="flex ml-2 text-[#FF8057]">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="relative h-[500px]">
                    <div class="absolute top-0 left-0 w-2/3 h-2/3 rounded-xl overflow-hidden shadow-2xl z-10">
                        <img class="w-full h-full object-cover" src="/images/3485b789a3de7f5469fe8cfe29e87a33l-m1671343361rd-w1280_h960.webp" alt="Weekly cleaning service in Ocala FL" loading="lazy" />
                    </div>
                    <div class="absolute bottom-0 right-0 w-1/2 h-1/2 rounded-xl overflow-hidden shadow-2xl">
                        <img class="w-full h-full object-cover" src="/images/3485b789a3de7f5469fe8cfe29e87a33l-m1724902688rd-w1280_h960.webp" alt="Trusted weekly cleaning team" loading="lazy" />
                    </div>
                    <div class="absolute bottom-1/4 right-1/2 translate-x-1/4 bg-[#FF8057] text-[#305048] px-5 py-4 rounded-lg shadow-lg z-20 flex items-center space-x-3">
                        <i class="fa-solid fa-percent text-2xl"></i>
                        <span class="font-bold text-sm leading-tight">SAVE 10%<br>WEEKLY SERVICE</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Benefits Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <h2 class="text-4xl font-bold">Why Ocala Families Choose Weekly Cleaning</h2>
                    <p class="mt-4 text-gray-600">Never worry about house cleaning again. Our weekly service keeps your home consistently spotless.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {benefits.map((benefit) => (
                        <div class="bg-white p-8 rounded-xl shadow-2xl border border-[#E3EAE8]/40">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mb-6">
                                <i class={benefit.icon}></i>
                            </div>
                            <h3 class="text-xl font-bold text-[#305048] mb-3">{benefit.title}</h3>
                            <p class="text-gray-600 text-sm leading-relaxed">{benefit.copy}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- What's Included Section -->
        <section class="py-24 bg-white border-t border-[#E3EAE8]/40">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <h2 class="text-4xl font-bold">What's Included in Weekly Cleaning</h2>
                    <p class="mt-4 text-gray-600">Comprehensive cleaning tasks to keep your home spotless every week.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
                    <div class="bg-white p-8 rounded-xl shadow-2xl border border-[#E3EAE8]/40">
                        <h3 class="text-2xl font-bold text-[#305048] mb-6 flex items-center gap-3">
                            <i class="fa-solid fa-calendar-week text-[#FF8057]"></i>
                            Every Week We:
                        </h3>
                        <ul class="space-y-3">
                            {weeklyTasks.map((task) => (
                                <li class="flex items-start gap-3 text-gray-700">
                                    <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                    <span>{task}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                    <div class="bg-white p-8 rounded-xl shadow-2xl border border-[#E3EAE8]/40">
                        <h3 class="text-2xl font-bold text-[#305048] mb-6 flex items-center gap-3">
                            <i class="fa-solid fa-calendar-days text-[#FF8057]"></i>
                            Monthly Deep Tasks:
                        </h3>
                        <ul class="space-y-3">
                            {monthlyTasks.map((task) => (
                                <li class="flex items-start gap-3 text-gray-700">
                                    <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                    <span>{task}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Perfect For Section -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <h2 class="text-4xl font-bold">Perfect for Busy Ocala Residents</h2>
                    <p class="mt-4 text-gray-600">Weekly cleaning service designed for your lifestyle.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {personas.map((persona) => (
                        <div class="text-center bg-white rounded-xl p-6 shadow-xl border border-[#E3EAE8]/40">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mx-auto mb-4">
                                <i class={persona.icon}></i>
                            </div>
                            <h3 class="text-lg font-bold text-[#305048] mb-3">{persona.title}</h3>
                            <p class="text-gray-600 text-sm">{persona.copy}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- How It Works Section -->
        <section id="why" class="bg-[#305048] py-24 text-white">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-4xl font-bold">How <span class="text-[#FF8057]">Weekly Service</span> Works</h2>
                <div class="mt-12 max-w-3xl mx-auto space-y-8">
                    <div class="flex items-start gap-6 text-left">
                        <div class="flex-shrink-0 w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl font-bold">
                            1
                        </div>
                        <div>
                            <h3 class="text-xl font-bold mb-2">Initial Deep Clean</h3>
                            <p class="text-white/80">We start with a thorough deep clean to bring your home to our standard. First-time customers save $20!</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-6 text-left">
                        <div class="flex-shrink-0 w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl font-bold">
                            2
                        </div>
                        <div>
                            <h3 class="text-xl font-bold mb-2">Choose Your Day & Time</h3>
                            <p class="text-white/80">Pick your preferred weekly slot. Same day, same time every week. We work around your Ocala schedule.</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-6 text-left">
                        <div class="flex-shrink-0 w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl font-bold">
                            3
                        </div>
                        <div>
                            <h3 class="text-xl font-bold mb-2">Meet Your Dedicated Cleaner</h3>
                            <p class="text-white/80">Get matched with a trusted, background-checked cleaner who will service your home every week.</p>
                        </div>
                    </div>
                    <div class="flex items-start gap-6 text-left">
                        <div class="flex-shrink-0 w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl font-bold">
                            4
                        </div>
                        <div>
                            <h3 class="text-xl font-bold mb-2">Enjoy Consistent Clean</h3>
                            <p class="text-white/80">Come home to a spotless house every week. Adjust preferences anytime. Cancel or pause with 24-hour notice.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Neighborhoods Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <h2 class="text-4xl font-bold">Weekly Cleaning Available Throughout Ocala</h2>
                    <p class="mt-4 text-gray-600">We provide reliable weekly cleaning service to all Ocala neighborhoods and surrounding Marion County communities.</p>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
                    {neighborhoods.map((neighborhood) => (
                        <div class="bg-[#F4F7F6] rounded-xl p-4 text-center shadow-sm border border-[#E3EAE8]/60 font-semibold text-[#305048]">
                            {neighborhood}
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section id="quote" class="bg-[#FF8057] py-24">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-4xl font-bold text-[#305048]">Ready for Weekly Cleaning Service?</h2>
                <p class="mt-4 text-[#305048]/90 text-lg max-w-2xl mx-auto">Join hundreds of Ocala families who enjoy a consistently clean home. Save 10% with weekly service, no contracts, cancel anytime.</p>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div class="bg-white text-[#305048] p-8 rounded-xl shadow-xl">
                        <i class="fas fa-phone text-[#FF8057] text-3xl"></i>
                        <h3 class="mt-4 text-xl font-bold">Phone</h3>
                        <p class="mt-2 text-gray-600 text-sm"><a href="tel:+13527644747" class="hover:text-[#FF8057] transition">(352) 764-4747</a></p>
                        <p class="mt-1 text-gray-600 text-sm">Call or text us anytime</p>
                    </div>
                    <div class="bg-white text-[#305048] p-8 rounded-xl shadow-xl">
                        <i class="fas fa-envelope text-[#FF8057] text-3xl"></i>
                        <h3 class="mt-4 text-xl font-bold">Email</h3>
                        <p class="mt-2 text-gray-600 text-sm"><a href="mailto:hello@palmacleaningco.com" class="hover:text-[#FF8057] transition">hello@palmacleaningco.com</a></p>
                        <p class="mt-1 text-gray-600 text-sm">We respond within 24 hours</p>
                    </div>
                    <div class="bg-white text-[#305048] p-8 rounded-xl shadow-xl">
                        <i class="fas fa-calendar-check text-[#FF8057] text-3xl"></i>
                        <h3 class="mt-4 text-xl font-bold">Book Online</h3>
                        <p class="mt-2 text-gray-600 text-sm">Instant pricing & scheduling</p>
                        <p class="mt-1 text-gray-600 text-sm">Available 24/7</p>
                    </div>
                </div>
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#305048] text-white font-bold py-4 px-10 rounded-md hover:bg-[#305048]/90 transition duration-300 text-sm uppercase"><i class="fas fa-calendar-check mr-2"></i>Book Weekly Service</a>
                    <a href="tel:+13527644747" class="bg-transparent text-[#305048] font-bold py-4 px-10 rounded-md border border-[#305048] transition duration-300 text-sm uppercase"><i class="fas fa-phone mr-2"></i>Call (352) 764-4747</a>
                </div>
                <p class="mt-6 text-[#305048]/80 text-sm">First deep clean only $20 off • Same cleaner every week • 100% satisfaction guaranteed</p>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
