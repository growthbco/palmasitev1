---
// Standard cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Standard House Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Professional standard house cleaning services in Ocala, FL. Regular maintenance cleaning for your entire home, including dusting, vacuuming, and sanitizing all living areas.";

const bathroomChecklist = [
  { text: "Scrub and disinfect sinks" },
  { text: "Wipe/clean tub and shower tiles" },
  { text: "Disinfect toilets inside and out" },
  { text: "Clean and shine chrome fixtures" },
  { text: "Hang and fold towels neatly" },
  { text: "Disinfect countertops" },
  { text: "Clean cabinet front" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Empty trash" },
  { text: "Clean mirrors" },
  { text: "Hand wash baseboards", addOn: true },
  { text: "Scrub shower and bathtubs", addOn: true }
];

const bedroomChecklist = [
  { text: "Make beds" },
  { text: "Dust lamps and lampshades (int/ext)" },
  { text: "Dust picture frames" },
  { text: "Dust furniture (top, front, and under)" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Remove cobwebs" },
  { text: "Empty trash" },
  { text: "Clean mirrors" },
  { text: "Wipe door handles & light switches" },
  { text: "Basic organizing" },
  { text: "Hand-wash baseboards", addOn: true }
];

const kitchenChecklist = [
  { text: "Clean appliance exteriors" },
  { text: "Wipe down microwave (int/ext)" },
  { text: "Clean tables and chairs" },
  { text: "Disinfect countertops and backsplash" },
  { text: "Wipe cabinet fronts" },
  { text: "Scrub and disinfect sinks" },
  { text: "Wash dishes or load dishwasher" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Remove cobwebs" },
  { text: "Empty trash" },
  { text: "Wipe door handles & light switches" },
  { text: "Degrease and clean oven interior", addOn: true },
  { text: "Hand-wash baseboards", addOn: true },
  { text: "Scrub & wipe inside refrigerator", addOn: true },
  { text: "Wipe inside cabinets and drawers", addOn: true },
  { text: "Wipe inside pantry and closets", addOn: true }
];

const allRoomsChecklist = [
  { text: "Fluff and straighten cushions and pillows" },
  { text: "Dust ceiling fans (if accessible)" },
  { text: "Dust lamps and lampshades" },
  { text: "Dust picture frames" },
  { text: "Dust furniture" },
  { text: "Vacuum and/or wash floor" },
  { text: "Vacuum and/or wash hallways/stairs" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Remove cobwebs" },
  { text: "Wipe door handles & light switches" },
  { text: "Empty trash" },
  { text: "Basic organizing" },
  { text: "Wipe down/vacuum furniture", addOn: true },
  { text: "Clean windows and blinds", addOn: true },
  { text: "Hand-wash baseboards", addOn: true },
  { text: "Vacuum exterior air vents & return", addOn: true },
  { text: "Sweep garage floors (if vacant)", addOn: true }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="standard cleaning Ocala FL, regular house cleaning, weekly cleaning, bi-weekly cleaning, maintenance cleaning">
    <link rel="canonical" href="https://palmacleaningco.com/standard-cleaning">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Standard House Cleaning Services",
        "alternateName": ["Regular Cleaning", "Maintenance Cleaning", "Routine House Cleaning"],
        "description": "Regular maintenance cleaning services including all essential areas - kitchens, bathrooms, bedrooms, living areas. Weekly, bi-weekly, and monthly schedules available.",
        "url": "https://palmacleaningco.com/standard-cleaning",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "email": "hello@palmacleaningco.com",
            "url": "https://palmacleaningco.com"
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />
    
    <main>
        <!-- Hero -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">Standard cleaning</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Our standard cleaning provides a refresh for your entire home, including dusting furniture and surfaces, cleaning appliances (exterior), vacuuming and mopping floors (excluding basement), and sanitizing bathrooms and bedrooms.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    VIEW PRICING
                </a>
        </div>
    </section>

        <!-- Checklist Section -->
        <section class="py-12 md:py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-8 md:gap-y-20">
                    
                    <!-- Bathroom Checklist -->
                    <div>
                        <div class="flex items-center justify-between mb-4 md:mb-6">
                            <h2 class="text-3xl font-bold text-[#305048]">Bathroom checklist</h2>
                            <a href="/bathroom-cleaning" class="text-sm font-semibold text-[#FF8057] hover:text-[#ff996f] transition">Deep bathroom cleaning <i class="fa-solid fa-arrow-right text-xs ml-1"></i></a>
                        </div>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                            <img class="w-full h-64 object-cover" src="/images/bathrrom.webp" alt="a person with yellow gloves cleaning a white bathroom sink, detailed, professional cleaning service photo" loading="lazy" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {bathroomChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.addOn ? 'fa-square text-gray-400' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.addOn && <strong class="text-[#305048]"> (add-on)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>
                    
                    <!-- Bedroom Checklist -->
                    <div>
                        <div class="flex items-center justify-between mb-4 md:mb-6">
                            <h2 class="text-3xl font-bold text-[#305048]">Bedroom checklist</h2>
                            <a href="/mirror-cleaning" class="text-sm font-semibold text-[#FF8057] hover:text-[#ff996f] transition">Mirror cleaning <i class="fa-solid fa-arrow-right text-xs ml-1"></i></a>
                        </div>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                           <img class="w-full h-64 object-cover" src="/images/bedrom2.webp" alt="a neatly made bed in a modern sunlit bedroom, with a person spraying a cleaning solution on a nightstand, professional cleaning service photo" loading="lazy" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {bedroomChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.addOn ? 'fa-square text-gray-400' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.addOn && <strong class="text-[#305048]"> (add-on)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>
                    
                    <!-- Kitchen Checklist -->
                    <div>
                        <div class="flex items-center justify-between mb-4 md:mb-6">
                            <h2 class="text-3xl font-bold text-[#305048]">Kitchen checklist</h2>
                            <div class="flex gap-3">
                                <a href="/refrigerator-cleaning" class="text-sm font-semibold text-[#FF8057] hover:text-[#ff996f] transition">Refrigerator <i class="fa-solid fa-arrow-right text-xs ml-1"></i></a>
                                <a href="/countertop-cleaning" class="text-sm font-semibold text-[#FF8057] hover:text-[#ff996f] transition">Countertops <i class="fa-solid fa-arrow-right text-xs ml-1"></i></a>
                            </div>
                        </div>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                           <img class="w-full h-64 object-cover" src="/images/Kitchen.jpg" alt="a person carefully washing a glass plate in a clean kitchen sink, close-up shot, professional cleaning service photo" loading="lazy" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {kitchenChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.addOn ? 'fa-square text-gray-400' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.addOn && <strong class="text-[#305048]"> (add-on)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Other Living Areas -->
                    <div>
                        <div class="flex items-center justify-between mb-4 md:mb-6">
                            <h2 class="text-3xl font-bold text-[#305048]">Other living areas</h2>
                            <div class="flex gap-3 flex-wrap">
                                <a href="/window-cleaning" class="text-sm font-semibold text-[#FF8057] hover:text-[#ff996f] transition">Windows <i class="fa-solid fa-arrow-right text-xs ml-1"></i></a>
                                <a href="/ceiling-fan-cleaning" class="text-sm font-semibold text-[#FF8057] hover:text-[#ff996f] transition">Ceiling Fans <i class="fa-solid fa-arrow-right text-xs ml-1"></i></a>
                                <a href="/stair-cleaning" class="text-sm font-semibold text-[#FF8057] hover:text-[#ff996f] transition">Stairs <i class="fa-solid fa-arrow-right text-xs ml-1"></i></a>
                            </div>
                        </div>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                            <img class="w-full h-64 object-cover" src="/images/Living Room.jpg" alt="a person in yellow gloves using a squeegee to clean a large window in a living room, bright and airy, professional cleaning service photo" loading="lazy" />
                    </div>
                        <ul class="space-y-3 text-gray-700">
                            {allRoomsChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.addOn ? 'fa-square text-gray-400' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.addOn && <strong class="text-[#305048]"> (add-on)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>
                    
            </div>
        </div>
    </section>

        <!-- Coupon Section -->
        <section class="bg-[#305048] py-20">
            <div class="container mx-auto px-6 text-center text-white">
                <h2 class="text-4xl font-bold text-[#FF8057] mb-4">Get $25 OFF your first standard clean</h2>
                <p class="max-w-2xl mx-auto mb-8 text-lg">
                    If you're a new customer, save $25 on your first cleaning with us. To claim, use code <strong>NEW25</strong> during your booking process.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    BOOK NOW
                </a>
        </div>
    </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
