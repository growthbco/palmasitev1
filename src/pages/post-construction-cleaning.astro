---
// Post-construction cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Post-Construction Cleanup Services in Ocala FL | Palma Cleaning";
const description = "Professional post-construction cleanup services in Ocala, FL. Complete debris removal, dust elimination, and detailed cleaning after renovations, new builds, and remodels.";

const services = [
  {
    title: "Rough Construction Cleanup",
    icon: "fa-solid fa-hard-hat",
    description: "Initial cleanup during construction phase to keep the worksite safe and organized.",
    items: [
      "Debris removal and disposal",
      "Drywall dust removal",
      "Paint and material cleanup",
      "Window cleaning (inside and out)",
      "Floor cleaning and protection",
      "HVAC vent cleaning",
      "Light fixture cleaning",
      "Bathroom and kitchen cleanup"
    ]
  },
  {
    title: "Final Construction Cleaning",
    icon: "fa-solid fa-broom",
    description: "Detailed final cleaning to make the space move-in ready and perfect for occupancy.",
    items: [
      "Deep cleaning of all surfaces",
      "Cabinet cleaning inside and out",
      "Appliance cleaning and polishing",
      "Baseboard and trim detailing",
      "Floor polishing and sealing",
      "Fixture and hardware polishing",
      "Final window and mirror cleaning",
      "Touch-up cleaning throughout"
    ]
  },
  {
    title: "Renovation Cleanup",
    icon: "fa-solid fa-tools",
    description: "Specialized cleaning for home and office renovation projects of all sizes.",
    items: [
      "Dust containment and removal",
      "Paint splatter cleanup",
      "Adhesive and residue removal",
      "Tile and grout cleaning",
      "Carpet and upholstery cleaning",
      "Air duct cleaning coordination",
      "Sanitization and disinfection",
      "Final quality inspection"
    ]
  }
];

const whyChoose = [
  {
    icon: "fa-solid fa-calendar-check",
    title: "Flexible Scheduling",
    copy: "We work around your construction timeline and can provide same-day or emergency cleaning services."
  },
  {
    icon: "fa-solid fa-users-cog",
    title: "Experienced Team",
    copy: "Our team is experienced with construction sites and understands safety protocols and requirements."
  },
  {
    icon: "fa-solid fa-truck",
    title: "Proper Equipment",
    copy: "Industrial-grade equipment and specialized tools for handling construction dust and debris removal."
  },
  {
    icon: "fa-solid fa-handshake",
    title: "Builder Partnerships",
    copy: "We work closely with contractors, builders, and project managers throughout Marion County."
  }
];

const projectTypes = [
  {
    icon: "fa-solid fa-home",
    title: "Residential New Construction",
    copy: "New homes, custom builds, and residential developments"
  },
  {
    icon: "fa-solid fa-building",
    title: "Commercial Construction",
    copy: "Office buildings, retail spaces, and commercial properties"
  },
  {
    icon: "fa-solid fa-paint-roller",
    title: "Renovation Projects",
    copy: "Kitchen remodels, bathroom renovations, and home additions"
  },
  {
    icon: "fa-solid fa-hammer",
    title: "Remodeling Projects",
    copy: "Interior remodels, flooring installation, and fixture updates"
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="post-construction cleaning Ocala FL, construction cleanup, renovation cleaning, new construction cleaning, dust removal">
    <link rel="canonical" href="https://palmacleaningco.com/post-construction-cleaning">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Post-Construction Cleaning Services",
        "alternateName": ["Construction Cleanup", "Renovation Cleaning", "New Construction Cleaning"],
        "description": "Complete post-construction cleanup services for new construction and renovation projects including dust removal, debris cleanup, and final cleaning.",
        "url": "https://palmacleaningco.com/post-construction-cleaning",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "email": "hello@palmacleaningco.com",
            "url": "https://palmacleaningco.com"
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">Post-construction cleaning</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Professional construction cleanup for new builds, renovations, and remodeling projects. From rough cleanup to final cleaning.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    VIEW PRICING
                </a>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Our Services</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Post-Construction Cleaning Services</h2>
                    <p class="mt-4 text-gray-600">Comprehensive cleaning solutions for every stage of your construction project.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {services.map((service) => (
                        <div class="bg-[#F4F7F6] rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mb-6">
                                <i class={service.icon}></i>
                            </div>
                            <h3 class="text-xl font-bold text-[#305048] mb-3">{service.title}</h3>
                            <p class="text-gray-600 mb-6 text-sm">{service.description}</p>
                            <ul class="space-y-2">
                                {service.items.map((item) => (
                                    <li class="flex items-start gap-2 text-sm text-gray-700">
                                        <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                        <span>{item}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Why Choose Us Section -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Why Choose Us</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Why Choose Us for Post-Construction Cleaning</h2>
                    <p class="mt-4 text-white/80">We understand construction timelines and deliver cleaning services that meet your project needs.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {whyChoose.map((item) => (
                        <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-center">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mx-auto mb-4">
                                <i class={item.icon}></i>
                            </div>
                            <h3 class="text-lg font-semibold mb-3">{item.title}</h3>
                            <p class="text-sm text-white/80 leading-relaxed">{item.copy}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Project Types Section -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">We Service All Types</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Construction Project Types We Service</h2>
                    <p class="mt-4 text-gray-600">From small renovations to large-scale construction projects, we handle them all.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    {projectTypes.map((project) => (
                        <div class="bg-white rounded-xl p-6 shadow-sm border border-[#E3EAE8]/60 text-center">
                            <i class={`${project.icon} text-3xl text-[#FF8057] mb-4`}></i>
                            <h3 class="text-lg font-semibold text-[#305048] mb-2">{project.title}</h3>
                            <p class="text-sm text-gray-600">{project.copy}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Pro Tip Section -->
        <section class="py-16 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto bg-[#FF8057]/10 border border-[#FF8057]/30 rounded-2xl p-8 text-center">
                    <div class="text-4xl mb-4">ðŸ’¡</div>
                    <h3 class="text-2xl font-bold text-[#305048] mb-4">Construction Pro Tip</h3>
                    <p class="text-gray-700 text-lg leading-relaxed">
                        Schedule your final post-construction cleaning 24-48 hours before the final walkthrough or occupancy. This ensures everything is spotless and ready for inspection or move-in!
                    </p>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready for Post-Construction Cleaning?</h2>
                <p class="text-lg text-white/90 max-w-2xl mx-auto mb-8">
                    Contact us early in your construction timeline. We'll coordinate with your contractors to provide cleaning services exactly when you need them.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300 text-sm uppercase">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border border-white text-white font-bold py-4 px-10 rounded-md hover:bg-white hover:text-[#305048] transition duration-300 text-sm uppercase">
                        Call (352) 764-4747
                    </a>
                </div>
                <p class="mt-6 text-white/70 text-sm">Emergency cleanup available â€¢ Licensed & Insured â€¢ Free project consultations</p>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
