---
// Residential cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const title = "Residential House Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Professional residential house cleaning services in Ocala, FL. Regular weekly, bi-weekly, and monthly cleaning for busy families and professionals. Licensed & insured.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="residential cleaning Ocala FL, house cleaning services, weekly cleaning, bi-weekly cleaning, monthly cleaning, home cleaning Ocala">
    <link rel="canonical" href="https://palmacleaningco.com/residential-cleaning">
    <link rel="stylesheet" href="/styles-clean.css?v=3">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Residential House Cleaning Services",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Ocala",
                "addressRegion": "FL",
                "postalCode": "34471",
                "addressCountry": "US"
            }
        },
        "areaServed": [
            "Ocala, FL",
            "Stone Creek",
            "Oak Run", 
            "The Villages",
            "Marion County, FL"
        ],
        "serviceType": "Residential House Cleaning",
        "description": "Professional residential house cleaning services including regular weekly, bi-weekly, and monthly cleaning for homes in Ocala, FL and surrounding areas."
    }
    </script>
</head>

<body>
    <Navigation />
    
    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">Professional Residential House Cleaning in Ocala, FL</h1>
                <p class="hero-description">Reliable, thorough house cleaning services for busy families and professionals throughout Ocala and Marion County.</p>
                <div class="hero-buttons">
                    <a href="/book-now" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
        </div>
    </section>

    <section class="services" id="services">
        <div class="container">
            <h2 class="section-title">Our Residential Cleaning Services</h2>
            
            <div class="services-grid">
                <div class="service-card featured">
                    <div class="service-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3>Standard House Cleaning</h3>
                    <p>Our most popular service - regular weekly, bi-weekly, or monthly cleaning to keep your home consistently clean and fresh.</p>
                    <ul class="service-list">
                        <li>Kitchen cleaning and sanitization</li>
                        <li>Bathroom deep cleaning</li>
                        <li>Dusting all surfaces and furniture</li>
                        <li>Vacuuming carpets and rugs</li>
                        <li>Mopping all hard floors</li>
                        <li>Trash removal and fresh liners</li>
                        <li>Bed making</li>
                        <li>Light fixture cleaning</li>
                    </ul>
                </div>

                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h3>Flexible Scheduling</h3>
                    <ul class="service-list">
                        <li><strong>Weekly Cleaning:</strong> Best for busy families with children or pets</li>
                        <li><strong>Bi-weekly Cleaning:</strong> Perfect balance of cleanliness and budget</li>
                        <li><strong>Monthly Cleaning:</strong> Great for maintaining already clean homes</li>
                        <li><strong>One-time Cleaning:</strong> Special occasions or trial service</li>
                        <li>Same-day service available</li>
                        <li>Holiday cleaning specials</li>
                    </ul>
                </div>

                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-shield-check"></i>
                    </div>
                    <h3>Why Choose Us</h3>
                    <ul class="service-list">
                        <li>Licensed & insured professionals</li>
                        <li>Background-checked team members</li>
                        <li>Eco-friendly cleaning products</li>
                        <li>100% satisfaction guarantee</li>
                        <li>Consistent cleaning teams</li>
                        <li>Free estimates</li>
                        <li>No contracts required</li>
                        <li>Easy online booking</li>
                    </ul>
                </div>
            </div>

            <div style="margin-top: 3rem; text-align: center; background: #f8fafa; padding: 2rem; border-radius: 15px;">
                <h3 style="color: #2f5047; margin-bottom: 2rem;">Service Areas for Residential Cleaning</h3>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                    <div>
                        <h4 style="color: #ff8057;">Stone Creek</h4>
                        <p>Luxury home cleaning for Stone Creek's beautiful community</p>
                        <a href="/stone-creek" class="btn btn-secondary" style="margin-top: 0.5rem;">Learn More</a>
                    </div>
                    <div>
                        <h4 style="color: #ff8057;">Oak Run</h4>
                        <p>Professional cleaning for Oak Run's 55+ active adult community</p>
                        <a href="/oak-run" class="btn btn-secondary" style="margin-top: 0.5rem;">Learn More</a>
                    </div>
                    <div>
                        <h4 style="color: #ff8057;">The Villages</h4>
                        <p>Trusted cleaning services throughout The Villages</p>
                        <a href="/the-villages" class="btn btn-secondary" style="margin-top: 0.5rem;">Learn More</a>
                    </div>
                    <div>
                        <h4 style="color: #ff8057;">Golden Hills</h4>
                        <p>Horse country home cleaning for Golden Hills residents</p>
                        <a href="/golden-hills" class="btn btn-secondary" style="margin-top: 0.5rem;">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contact" id="contact">
        <div class="container">
            <h2 class="section-title">Ready for a Cleaner Home?</h2>
            <div style="text-align: center; max-width: 600px; margin: 0 auto;">
                <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">
                    Contact us today for a free, no-obligation quote for residential house cleaning. We'll create a custom cleaning plan that fits your schedule and budget.
                </p>
                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                    <a href="/book-now" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
        </div>
    </section>

    <Footer />

    <script src="/script-clean.js" is:inline></script>
</body>
</html>