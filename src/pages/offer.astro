        <section id="quote-form" style="padding: 60px 0; background: white;">
            <div class="container">
                <div class="border rounded-2xl shadow-2xl" style="background: white; padding: 48px 24px;">
                    <div class="text-center" style="margin-bottom: 32px;">
                        <h2>Get Your Free Quote</h2>
                        <p class="text-gray" style="font-size: 1.125rem; max-width: 600px; margin: 16px auto 0;">
                            Fill out the form below to get an instant quote and book your cleaning service.
                        </p>
                    </div>
                    <form id="quote-form-element" style="max-width: 700px; margin: 0 auto;">
                        <div style="margin-bottom: 20px;">
                            <label for="name" style="display: block; margin-bottom: 8px; font-weight: 600; color: #305048;">Full Name *</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                required 
                                style="width: 100%; padding: 14px; border: 2px solid #E3EAE8; border-radius: 8px; font-size: 1rem; font-family: 'Poppins', sans-serif; transition: border-color 0.3s;"
                                onfocus="this.style.borderColor='#FF8057';"
                                onblur="this.style.borderColor='#E3EAE8';">
                        </div>
                        
                        <div style="margin-bottom: 20px;">
                            <label for="phone" style="display: block; margin-bottom: 8px; font-weight: 600; color: #305048;">Phone Number *</label>
                            <input 
                                type="tel" 
                                id="phone" 
                                name="phone" 
                                required 
                                placeholder="(352) 123-4567"
                                style="width: 100%; padding: 14px; border: 2px solid #E3EAE8; border-radius: 8px; font-size: 1rem; font-family: 'Poppins', sans-serif; transition: border-color 0.3s;"
                                onfocus="this.style.borderColor='#FF8057';"
                                onblur="this.style.borderColor='#E3EAE8';">
                        </div>
                        
                        <div style="margin-bottom: 20px;">
                            <label for="email" style="display: block; margin-bottom: 8px; font-weight: 600; color: #305048;">Email Address *</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                required 
                                style="width: 100%; padding: 14px; border: 2px solid #E3EAE8; border-radius: 8px; font-size: 1rem; font-family: 'Poppins', sans-serif; transition: border-color 0.3s;"
