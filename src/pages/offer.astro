---
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';

const title = "Get Your Free Quote - Professional Cleaning in Ocala FL | Palma Cleaning";
const description = "Get a free quote for professional house cleaning in Ocala, FL. Licensed, insured, and trusted by families across Marion County. Book in under 60 seconds.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href="https://palmacleaningco.com/offer">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: 'Poppins', sans-serif; 
            background: #fff; 
            color: #305048; 
            line-height: 1.6;
        }
        .container { max-width: 900px; margin: 0 auto; padding: 0 24px; }
        h1 { font-size: 2.5rem; font-weight: 700; line-height: 1.2; margin-bottom: 24px; }
        h2 { font-size: 2rem; font-weight: 700; margin-bottom: 16px; }
        p { margin-bottom: 16px; }
        a { text-decoration: none; transition: all 0.3s; }
        .btn { display: inline-block; padding: 18px 40px; border-radius: 8px; font-weight: 700; font-size: 1.125rem; }
        .btn-primary { background: #FF8057; color: #305048; }
        .btn-primary:hover { background: #ff996f; transform: translateY(-2px); box-shadow: 0 10px 25px rgba(255,128,87,0.3); }
        .btn:hover { transform: translateY(-2px); transition: all 0.3s; }
        .text-center { text-align: center; }
        .text-accent { color: #FF8057; }
        .text-gray { color: #666; }
        .rounded-xl { border-radius: 12px; }
        .rounded-2xl { border-radius: 16px; }
        .shadow-2xl { box-shadow: 0 20px 50px rgba(0,0,0,0.15); }
        .border { border: 2px solid #E3EAE8; }
        @media (min-width: 768px) {
            h1 { font-size: 3.5rem; }
            h2 { font-size: 2.5rem; }
        }
        @media (max-width: 768px) {
            .trust-grid { grid-template-columns: 1fr !important; }
            iframe { height: 300px !important; }
            #image-slideshow { height: 300px !important; }
            .slide-nav { width: 40px !important; height: 40px !important; font-size: 1.2rem !important; }
        }
        .floating-call-btn {
            position: fixed;
            bottom: 24px;
            right: 24px;
            z-index: 1000;
            background: #FF8057;
            color: #305048;
            padding: 16px 24px;
            border-radius: 50px;
            box-shadow: 0 10px 30px rgba(255,128,87,0.4);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            transition: all 0.3s;
            animation: pulse 2s infinite;
        }
        .floating-call-btn:hover {
            background: #ff996f;
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(255,128,87,0.5);
        }
        @keyframes pulse {
            0%, 100% { box-shadow: 0 10px 30px rgba(255,128,87,0.4); }
            50% { box-shadow: 0 10px 30px rgba(255,128,87,0.7); }
        }
        @media (max-width: 768px) {
            .floating-call-btn {
                bottom: 16px;
                right: 16px;
                padding: 14px 20px;
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <GTMBody />

    <main>
        <!-- Hero Section -->
        <section style="background: linear-gradient(135deg, #F4F7F6 0%, #ffffff 100%); padding: 80px 0 60px;">
            <div class="container text-center">
                <h1>
                    Get Your Free Cleaning Quote<br>
                    <span class="text-accent">In Under 60 Seconds</span>
                </h1>
                <p style="font-size: 1.25rem; max-width: 600px; margin: 0 auto 40px; color: #666;">
                    Professional house cleaning in Ocala, The Villages & Marion County<br>
                    Licensed • Insured • 5-Star Rated
                </p>
                
                <!-- Primary CTA -->
                <div style="display: flex; flex-wrap: wrap; gap: 16px; justify-content: center; align-items: center; margin-bottom: 20px;">
                    <a href="#quote-form" class="btn btn-primary">
                        Get Free Quote Now →
                    </a>
                    <a href="tel:+13527644747" class="btn" style="background: #305048; color: white; border: 2px solid #305048;">
                        <i class="fa-solid fa-phone" style="margin-right: 8px;"></i>Call Now (352) 764-4747
                    </a>
                </div>
                <p style="margin-top: 20px; font-size: 0.875rem; color: #666;">No obligation • Instant pricing</p>
            </div>
        </section>

        <!-- Trust Features Section -->
        <section style="padding: 60px 0; background: #F4F7F6;">
            <div class="container">
                <div style="display: grid; grid-template-columns: 1fr; gap: 40px; align-items: center;">
                    <!-- Image Slideshow -->
                    <div style="position: relative; max-width: 800px; margin: 0 auto 40px; border-radius: 16px; overflow: hidden; box-shadow: 0 20px 50px rgba(0,0,0,0.15);">
                        <div id="image-slideshow" style="position: relative; width: 100%; height: 500px;">
                            <img 
                                src="/images/3485b789a3de7f5469fe8cfe29e87a33l-m1955838466rd-w1280_h960.webp" 
                                alt="Professional Cleaning Service" 
                                class="slide-image active"
                                style="width: 100%; height: 100%; object-fit: cover; display: block;">
                            <img 
                                src="/images/3485b789a3de7f5469fe8cfe29e87a33l-m1984629877rd-w1280_h960.webp" 
                                alt="Trusted Cleaning Team" 
                                class="slide-image"
                                style="width: 100%; height: 100%; object-fit: cover; display: none; position: absolute; top: 0; left: 0;">
                            <img 
                                src="/images/3485b789a3de7f5469fe8cfe29e87a33l-m1986674535rd-w1280_h960.webp" 
                                alt="Quality House Cleaning" 
                                class="slide-image"
                                style="width: 100%; height: 100%; object-fit: cover; display: none; position: absolute; top: 0; left: 0;">
                            <img 
                                src="/images/3485b789a3de7f5469fe8cfe29e87a33l-m2096433027rd-w1280_h960.webp" 
                                alt="Professional Cleaning Services" 
                                class="slide-image"
                                style="width: 100%; height: 100%; object-fit: cover; display: none; position: absolute; top: 0; left: 0;">
                        </div>
                        <!-- Navigation Arrows -->
                        <button class="slide-nav prev" onclick="changeSlide(-1)" style="position: absolute; top: 50%; left: 20px; transform: translateY(-50%); background: rgba(255,255,255,0.9); border: none; width: 50px; height: 50px; border-radius: 50%; cursor: pointer; font-size: 1.5rem; color: #305048; display: flex; align-items: center; justify-content: center; transition: all 0.3s; z-index: 10;" onmouseover="this.style.background='white'; this.style.transform='translateY(-50%) scale(1.1)'" onmouseout="this.style.background='rgba(255,255,255,0.9)'; this.style.transform='translateY(-50%)'">
                            ‹
                        </button>
                        <button class="slide-nav next" onclick="changeSlide(1)" style="position: absolute; top: 50%; right: 20px; transform: translateY(-50%); background: rgba(255,255,255,0.9); border: none; width: 50px; height: 50px; border-radius: 50%; cursor: pointer; font-size: 1.5rem; color: #305048; display: flex; align-items: center; justify-content: center; transition: all 0.3s; z-index: 10;" onmouseover="this.style.background='white'; this.style.transform='translateY(-50%) scale(1.1)'" onmouseout="this.style.background='rgba(255,255,255,0.9)'; this.style.transform='translateY(-50%)'">
                            ›
                        </button>
                        <!-- Dots Indicator -->
                        <div style="position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%); display: flex; gap: 10px; z-index: 10;">
                            <span class="slide-dot active" onclick="currentSlide(1)" style="width: 12px; height: 12px; border-radius: 50%; background: white; cursor: pointer; opacity: 0.7; transition: opacity 0.3s;"></span>
                            <span class="slide-dot" onclick="currentSlide(2)" style="width: 12px; height: 12px; border-radius: 50%; background: white; cursor: pointer; opacity: 0.7; transition: opacity 0.3s;"></span>
                            <span class="slide-dot" onclick="currentSlide(3)" style="width: 12px; height: 12px; border-radius: 50%; background: white; cursor: pointer; opacity: 0.7; transition: opacity 0.3s;"></span>
                            <span class="slide-dot" onclick="currentSlide(4)" style="width: 12px; height: 12px; border-radius: 50%; background: white; cursor: pointer; opacity: 0.7; transition: opacity 0.3s;"></span>
                        </div>
                    </div>
                    
                    <script>
                        let slideIndex = 0;
                        const slides = document.querySelectorAll('.slide-image');
                        const dots = document.querySelectorAll('.slide-dot');
                        
                        function showSlide(n) {
                            slideIndex = n;
                            if (slideIndex >= slides.length) slideIndex = 0;
                            if (slideIndex < 0) slideIndex = slides.length - 1;
                            
                            slides.forEach((slide, i) => {
                                slide.style.display = i === slideIndex ? 'block' : 'none';
                            });
                            
                            dots.forEach((dot, i) => {
                                dot.classList.toggle('active', i === slideIndex);
                            });
                        }
                        
                        function changeSlide(n) {
                            showSlide(slideIndex + n);
                        }
                        
                        function currentSlide(n) {
                            showSlide(n - 1);
                        }
                        
                        // Auto-advance slides every 5 seconds
                        setInterval(() => {
                            changeSlide(1);
                        }, 5000);
                        
                        // Update active dot style
                        const style = document.createElement('style');
                        style.textContent = `
                            .slide-dot.active {
                                opacity: 1 !important;
                                background: #FF8057 !important;
                            }
                        `;
                        document.head.appendChild(style);
                    </script>
                    
                    <!-- Trust Badges -->
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 24px;">
                        <!-- Google Reviews Badge -->
                        <div style="background: white; padding: 32px; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center;">
                            <div style="margin-bottom: 16px;">
                                <i class="fa-brands fa-google" style="font-size: 3rem; color: #4285F4;"></i>
                            </div>
                            <div style="display: flex; justify-content: center; gap: 4px; margin-bottom: 12px;">
