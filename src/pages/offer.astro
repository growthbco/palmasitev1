---
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';

const title = "Get Your Free Quote - Professional Cleaning in Ocala FL | Palma Cleaning";
const description = "Get a free quote for professional house cleaning in Ocala, FL. Licensed, insured, and trusted by families across Marion County. Book in under 60 seconds.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href="https://palmacleaningco.com/offer">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://convertlabs.io/js/booking_embed.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: 'Poppins', sans-serif; 
            background: #fff; 
            color: #305048; 
            line-height: 1.6;
        }
        .container { max-width: 900px; margin: 0 auto; padding: 0 24px; }
        h1 { font-size: 2.5rem; font-weight: 700; line-height: 1.2; margin-bottom: 24px; }
        h2 { font-size: 2rem; font-weight: 700; margin-bottom: 16px; }
        p { margin-bottom: 16px; }
        a { text-decoration: none; transition: all 0.3s; }
        .btn { display: inline-block; padding: 18px 40px; border-radius: 8px; font-weight: 700; font-size: 1.125rem; }
        .btn-primary { background: #FF8057; color: #305048; }
        .btn-primary:hover { background: #ff996f; transform: translateY(-2px); box-shadow: 0 10px 25px rgba(255,128,87,0.3); }
        .btn:hover { transform: translateY(-2px); transition: all 0.3s; }
        .text-center { text-align: center; }
        .text-accent { color: #FF8057; }
        .text-gray { color: #666; }
        .rounded-xl { border-radius: 12px; }
        .rounded-2xl { border-radius: 16px; }
        .shadow-2xl { box-shadow: 0 20px 50px rgba(0,0,0,0.15); }
        .border { border: 2px solid #E3EAE8; }
        @media (min-width: 768px) {
            h1 { font-size: 3.5rem; }
            h2 { font-size: 2.5rem; }
        }
        @media (max-width: 768px) {
            .trust-grid { grid-template-columns: 1fr !important; }
            iframe { height: 300px !important; }
        }
        .floating-call-btn {
            position: fixed;
            bottom: 24px;
            right: 24px;
            z-index: 1000;
            background: #FF8057;
            color: #305048;
            padding: 16px 24px;
            border-radius: 50px;
            box-shadow: 0 10px 30px rgba(255,128,87,0.4);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            transition: all 0.3s;
            animation: pulse 2s infinite;
        }
        .floating-call-btn:hover {
            background: #ff996f;
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(255,128,87,0.5);
        }
        @keyframes pulse {
            0%, 100% { box-shadow: 0 10px 30px rgba(255,128,87,0.4); }
            50% { box-shadow: 0 10px 30px rgba(255,128,87,0.7); }
        }
        @media (max-width: 768px) {
            .floating-call-btn {
                bottom: 16px;
                right: 16px;
                padding: 14px 20px;
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <GTMBody />

    <main>
        <!-- Hero Section -->
        <section style="background: linear-gradient(135deg, #F4F7F6 0%, #ffffff 100%); padding: 80px 0 60px;">
            <div class="container text-center">
                <h1>
                    Get Your Free Cleaning Quote<br>
                    <span class="text-accent">In Under 60 Seconds</span>
                </h1>
                <p style="font-size: 1.25rem; max-width: 600px; margin: 0 auto 40px; color: #666;">
                    Professional house cleaning in Ocala, The Villages & Marion County<br>
                    Licensed • Insured • 5-Star Rated
                </p>
                
                <!-- Primary CTA -->
                <div style="display: flex; flex-wrap: wrap; gap: 16px; justify-content: center; align-items: center; margin-bottom: 20px;">
                    <a href="#quote-form" class="btn btn-primary">
                        Get Free Quote Now →
                    </a>
                    <a href="tel:+13527644747" class="btn" style="background: #305048; color: white; border: 2px solid #305048;">
                        <i class="fa-solid fa-phone" style="margin-right: 8px;"></i>Call Now (352) 764-4747
                    </a>
                </div>
                <p style="margin-top: 20px; font-size: 0.875rem; color: #666;">No obligation • Instant pricing</p>
            </div>
        </section>

        <!-- Trust Features Section -->
        <section style="padding: 60px 0; background: #F4F7F6;">
            <div class="container">
                <div style="display: grid; grid-template-columns: 1fr; gap: 40px; align-items: center;">
                    <!-- Trust Image -->
                    <div style="text-align: center;">
                        <img 
                            src="/images/3485b789a3de7f5469fe8cfe29e87a33l-m1984629877rd-w1280_h960.webp" 
                            alt="Trusted Professional Cleaning Service in Ocala" 
                            style="width: 100%; max-width: 600px; border-radius: 16px; box-shadow: 0 20px 50px rgba(0,0,0,0.15);"
                            loading="lazy">
                    </div>
                    
                    <!-- Trust Badges -->
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 24px;">
                        <!-- Google Reviews Badge -->
                        <div style="background: white; padding: 32px; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center;">
                            <div style="margin-bottom: 16px;">
                                <i class="fa-brands fa-google" style="font-size: 3rem; color: #4285F4;"></i>
                            </div>
                            <div style="display: flex; justify-content: center; gap: 4px; margin-bottom: 12px;">
                                <i class="fa-solid fa-star" style="color: #FF8057; font-size: 1.5rem;"></i>
                                <i class="fa-solid fa-star" style="color: #FF8057; font-size: 1.5rem;"></i>
                                <i class="fa-solid fa-star" style="color: #FF8057; font-size: 1.5rem;"></i>
                                <i class="fa-solid fa-star" style="color: #FF8057; font-size: 1.5rem;"></i>
                                <i class="fa-solid fa-star" style="color: #FF8057; font-size: 1.5rem;"></i>
                            </div>
                            <h3 style="font-size: 1.5rem; font-weight: 700; color: #305048; margin-bottom: 8px;">5.0 Rating</h3>
                            <p style="color: #666; font-size: 0.95rem;">21+ Google Reviews</p>
                            <a href="https://g.page/r/CcQuC91RfHgYEBM/review" target="_blank" rel="noopener noreferrer" style="display: inline-block; margin-top: 12px; color: #4285F4; font-weight: 600; font-size: 0.9rem;">
                                Read Reviews →
                            </a>
                        </div>
                        
                        <!-- Licensed & Insured -->
                        <div style="background: white; padding: 32px; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center;">
                            <div style="margin-bottom: 16px;">
                                <i class="fa-solid fa-shield-halved" style="font-size: 3rem; color: #FF8057;"></i>
                            </div>
                            <h3 style="font-size: 1.25rem; font-weight: 700; color: #305048; margin-bottom: 8px;">Licensed & Insured</h3>
                            <p style="color: #666; font-size: 0.95rem;">Fully protected service for your peace of mind</p>
                        </div>
                        
                        <!-- Background Checked -->
                        <div style="background: white; padding: 32px; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center;">
                            <div style="margin-bottom: 16px;">
                                <i class="fa-solid fa-user-check" style="font-size: 3rem; color: #FF8057;"></i>
                            </div>
                            <h3 style="font-size: 1.25rem; font-weight: 700; color: #305048; margin-bottom: 8px;">Background Checked</h3>
                            <p style="color: #666; font-size: 0.95rem;">Every team member is carefully vetted</p>
                        </div>
                        
                        <!-- Satisfaction Guarantee -->
                        <div style="background: white; padding: 32px; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center;">
                            <div style="margin-bottom: 16px;">
                                <i class="fa-solid fa-handshake" style="font-size: 3rem; color: #FF8057;"></i>
                            </div>
                            <h3 style="font-size: 1.25rem; font-weight: 700; color: #305048; margin-bottom: 8px;">48-Hour Guarantee</h3>
                            <p style="color: #666; font-size: 0.95rem;">We'll make it right or return free</p>
                        </div>
                        
                        <!-- Eco-Friendly -->
                        <div style="background: white; padding: 32px; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center;">
                            <div style="margin-bottom: 16px;">
                                <i class="fa-solid fa-leaf" style="font-size: 3rem; color: #FF8057;"></i>
                            </div>
                            <h3 style="font-size: 1.25rem; font-weight: 700; color: #305048; margin-bottom: 8px;">Eco-Friendly</h3>
                            <p style="color: #666; font-size: 0.95rem;">Safe for kids, pets & the environment</p>
                        </div>
                        
                        <!-- Local & Trusted -->
                        <div style="background: white; padding: 32px; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); text-align: center;">
                            <div style="margin-bottom: 16px;">
                                <i class="fa-solid fa-map-marker-alt" style="font-size: 3rem; color: #FF8057;"></i>
                            </div>
                            <h3 style="font-size: 1.25rem; font-weight: 700; color: #305048; margin-bottom: 8px;">Locally Owned</h3>
                            <p style="color: #666; font-size: 0.95rem;">Serving Ocala since 2020</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Location Map Section -->
        <section style="padding: 60px 0; background: white;">
            <div class="container">
                <div class="text-center" style="margin-bottom: 32px;">
                    <h2>Visit Our Location</h2>
                    <p class="text-gray" style="font-size: 1.125rem; max-width: 600px; margin: 16px auto 0;">
                        Located in Ocala, FL - Serving all of Marion County and surrounding areas
                    </p>
                </div>
                <div style="border-radius: 16px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3485.403677210374!2d-82.23897772368913!3d29.12328157540022!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e87ff6acef1b3d%3A0x18787c51dd0b2ec4!2sPalma%20Cleaning!5e0!3m2!1sen!2sus!4v1765319292611!5m2!1sen!2sus" 
                        width="100%" 
                        height="450" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </section>

        <!-- Lead Form Section -->
        <section id="quote-form" style="padding: 60px 0; background: white;">
            <div class="container">
                <div class="border rounded-2xl shadow-2xl" style="background: white; padding: 48px 24px;">
                    <div class="text-center" style="margin-bottom: 32px;">
                        <h2>Get Your Free Quote</h2>
                        <p class="text-gray" style="font-size: 1.125rem; max-width: 600px; margin: 16px auto 0;">
                            Fill out the form below to get an instant quote and book your cleaning service.
                        </p>
                    </div>
                    <iframe 
                        src="https://convertlabs.io/booking_form/3473" 
                        frameborder="0" 
                        scrolling="auto" 
                        style="width: 100%; height: 1400px; min-height: 1400px; border-radius: 12px; border: 0;">
                    </iframe>
                </div>
            </div>
        </section>

        <!-- Final CTA Section -->
        <section style="padding: 60px 0; background: #FF8057;">
            <div class="container text-center">
                <h2 style="color: #305048; margin-bottom: 20px;">
                    Questions? Call Us Now
                </h2>
                <a href="tel:+13527644747" class="btn" style="background: #305048; color: white; margin-top: 20px;">
                    <i class="fa-solid fa-phone" style="margin-right: 8px;"></i>(352) 764-4747
                </a>
            </div>
        </section>
    </main>

    <!-- Minimal Footer -->
    <footer style="padding: 40px 0; background: #305048; color: white; text-align: center;">
        <div class="container">
            <p style="font-size: 0.875rem; color: rgba(255,255,255,0.8);">
                © {new Date().getFullYear()} Palma Cleaning. Licensed & Insured.
            </p>
        </div>
    </footer>

    <!-- Floating Call Button -->
    <a href="tel:+13527644747" class="floating-call-btn">
        <i class="fa-solid fa-phone"></i>
        <span>Call Now</span>
    </a>

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
