---
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';

const title = "Get Your Free Quote - Professional Cleaning in Ocala FL | Palma Cleaning";
const description = "Get a free quote for professional house cleaning in Ocala, FL. Licensed, insured, and trusted by families across Marion County. Book in under 60 seconds.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href="https://palmacleaningco.com/offer">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://convertlabs.io/js/booking_embed.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: 'Poppins', sans-serif; 
            background: #fff; 
            color: #305048; 
            line-height: 1.6;
        }
        .container { max-width: 900px; margin: 0 auto; padding: 0 24px; }
        h1 { font-size: 2.5rem; font-weight: 700; line-height: 1.2; margin-bottom: 24px; }
        h2 { font-size: 2rem; font-weight: 700; margin-bottom: 16px; }
        p { margin-bottom: 16px; }
        a { text-decoration: none; transition: all 0.3s; }
        .btn { display: inline-block; padding: 18px 40px; border-radius: 8px; font-weight: 700; font-size: 1.125rem; }
        .btn-primary { background: #FF8057; color: #305048; }
        .btn-primary:hover { background: #ff996f; transform: translateY(-2px); box-shadow: 0 10px 25px rgba(255,128,87,0.3); }
        .text-center { text-align: center; }
        .text-accent { color: #FF8057; }
        .text-gray { color: #666; }
        .rounded-xl { border-radius: 12px; }
        .rounded-2xl { border-radius: 16px; }
        .shadow-2xl { box-shadow: 0 20px 50px rgba(0,0,0,0.15); }
        .border { border: 2px solid #E3EAE8; }
        @media (min-width: 768px) {
            h1 { font-size: 3.5rem; }
            h2 { font-size: 2.5rem; }
        }
    </style>
</head>
<body>
    <GTMBody />

    <main>
        <!-- Hero Section -->
        <section style="background: linear-gradient(135deg, #F4F7F6 0%, #ffffff 100%); padding: 80px 0 60px;">
            <div class="container text-center">
                <h1>
                    Get Your Free Cleaning Quote<br>
                    <span class="text-accent">In Under 60 Seconds</span>
                </h1>
                <p style="font-size: 1.25rem; max-width: 600px; margin: 0 auto 40px; color: #666;">
                    Professional house cleaning in Ocala, The Villages & Marion County<br>
                    Licensed • Insured • 5-Star Rated
                </p>
                
                <!-- Primary CTA -->
                <a href="#quote-form" class="btn btn-primary">
                    Get Free Quote Now →
                </a>
                <p style="margin-top: 20px; font-size: 0.875rem; color: #666;">No obligation • Instant pricing</p>
            </div>
        </section>

        <!-- Lead Form Section -->
        <section id="quote-form" style="padding: 60px 0; background: white;">
            <div class="container">
                <div class="border rounded-2xl shadow-2xl" style="background: white; padding: 48px 24px;">
                    <div class="text-center" style="margin-bottom: 32px;">
                        <h2>Get Your Free Quote</h2>
                        <p class="text-gray" style="font-size: 1.125rem; max-width: 600px; margin: 16px auto 0;">
                            Fill out the form below to get an instant quote and book your cleaning service.
                        </p>
                    </div>
                    <iframe 
                        src="https://convertlabs.io/booking_form/3473" 
                        frameborder="0" 
                        scrolling="auto" 
                        style="width: 100%; height: 1400px; min-height: 1400px; border-radius: 12px; border: 0;">
                    </iframe>
                </div>
            </div>
        </section>

        <!-- Final CTA Section -->
        <section style="padding: 60px 0; background: #FF8057;">
            <div class="container text-center">
                <h2 style="color: #305048; margin-bottom: 20px;">
                    Questions? Call Us Now
                </h2>
                <a href="tel:+13527644747" class="btn" style="background: #305048; color: white; margin-top: 20px;">
                    <i class="fa-solid fa-phone" style="margin-right: 8px;"></i>(352) 764-4747
                </a>
            </div>
        </section>
    </main>

    <!-- Minimal Footer -->
    <footer style="padding: 40px 0; background: #305048; color: white; text-align: center;">
        <div class="container">
            <p style="font-size: 0.875rem; color: rgba(255,255,255,0.8);">
                © {new Date().getFullYear()} Palma Cleaning. Licensed & Insured.
            </p>
        </div>
    </footer>

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
