                                onblur="this.style.borderColor='#E3EAE8';">
                        </div>
                        
                        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                            <div>
                                <label for="bedrooms" style="display: block; margin-bottom: 8px; font-weight: 600; color: #305048;">Bedrooms *</label>
                                <input 
                                    type="number" 
                                    id="bedrooms" 
                                    name="bedrooms" 
                                    required 
                                    min="0"
                                    placeholder="0"
                                    style="width: 100%; padding: 14px; border: 2px solid #E3EAE8; border-radius: 8px; font-size: 1rem; font-family: 'Poppins', sans-serif; transition: border-color 0.3s;"
