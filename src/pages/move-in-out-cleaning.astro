---
// Move-in Move-out cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Move-in Move-out Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Professional move-in and move-out cleaning services in Ocala, FL. Complete empty house cleaning perfect for new homeowners and renters getting deposits back.";

const bathroomChecklist = [
  { text: "Scrub and disinfect sinks" },
  { text: "Wipe/clean tub and shower tiles" },
  { text: "Disinfect toilets inside and out" },
  { text: "Clean and shine chrome fixtures" },
  { text: "Hang and fold towels neatly" },
  { text: "Disinfect countertops" },
  { text: "Clean cabinet front" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Empty trash" },
  { text: "Clean mirrors" },
  { text: "Hand wash baseboards", included: true },
  { text: "Scrub shower and bathtubs", included: true }
];

const bedroomChecklist = [
  { text: "Make beds" },
  { text: "Dust lamps and lampshades (int/ext)" },
  { text: "Dust picture frames" },
  { text: "Dust furniture (top, front, and under)" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Remove cobwebs" },
  { text: "Empty trash" },
  { text: "Clean mirrors" },
  { text: "Wipe door handles & light switches" },
  { text: "Basic organizing" },
  { text: "Hand wash baseboards", included: true }
];

const kitchenChecklist = [
  { text: "Clean appliance exteriors" },
  { text: "Wipe down microwave (int/ext)" },
  { text: "Clean tables and chairs" },
  { text: "Disinfect countertops and backsplash" },
  { text: "Wipe cabinet fronts" },
  { text: "Scrub and disinfect sinks" },
  { text: "Wash dishes or load dishwasher" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Remove cobwebs" },
  { text: "Empty trash" },
  { text: "Wipe door handles & light switches" },
  { text: "Degrease and clean oven interior", included: true },
  { text: "Hand wash baseboards", included: true },
  { text: "Scrub & wipe inside refrigerator", included: true },
  { text: "Wipe inside cabinets and drawers", included: true },
  { text: "Wipe inside pantry and closets", included: true }
];

const allRoomsChecklist = [
  { text: "Fluff and straighten cushions and pillows" },
  { text: "Dust ceiling fans (if accessible)" },
  { text: "Dust lamps and lampshades" },
  { text: "Dust picture frames" },
  { text: "Dust furniture" },
  { text: "Vacuum and/or wash floor" },
  { text: "Vacuum and/or wash hallways/stairs" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Remove cobwebs" },
  { text: "Wipe door handles & light switches" },
  { text: "Empty trash" },
  { text: "Basic organizing" },
  { text: "Hand wash baseboards", included: true },
  { text: "Wipe down/vacuum furniture", included: true },
  { text: "Clean windows and blinds", included: true },
  { text: "Vacuum exterior air vents & return", included: true },
  { text: "Sweep garage floors (if vacant)", included: true }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="move-in cleaning Ocala FL, move-out cleaning, empty house cleaning, rental deposit cleaning, new home cleaning">
    <link rel="canonical" href="https://palmacleaningco.com/move-in-out-cleaning">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Move-in Move-out Cleaning Services",
        "alternateName": ["Move-out Cleaning", "Move-in Cleaning", "Transition Cleaning", "Rental Deposit Cleaning"],
        "description": "Complete cleaning for empty homes including all cabinets, drawers, appliances, and detailed cleaning to get deposits back or prepare for new residents.",
        "url": "https://palmacleaningco.com/move-in-out-cleaning",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "email": "hello@palmacleaningco.com",
            "url": "https://palmacleaningco.com"
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />
    
    <main>
        <!-- Hero -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">Move-in/out cleaning</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Our move-in/out cleaning ensures a spotless transition, whether you're leaving your old place sparkling or prepping your new home for move-in. This service includes everything from our standard and deep cleaning with a few extras, ensuring a fresh start for your move.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    VIEW PRICING
                </a>
        </div>
    </section>

        <!-- Checklist Section -->
        <section class="py-12 md:py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-8 md:gap-y-20">

                <!-- Bathroom Checklist -->
                    <div>
                        <h2 class="text-3xl font-bold mb-4 md:mb-6 text-[#305048]">Bathroom checklist</h2>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                            <img class="w-full h-64 object-cover" src="/images/bathrrom.webp" alt="a person with yellow gloves cleaning a white bathroom sink, detailed, professional cleaning service photo" loading="lazy" />
                    </div>
                        <ul class="space-y-3 text-gray-700">
                            {bathroomChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.included ? 'fa-square-check text-[#305048]' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                    </span>
                        </li>
                            ))}
                    </ul>
                    </div>

                    <!-- Bedroom Checklist -->
                    <div>
                        <h2 class="text-3xl font-bold mb-4 md:mb-6 text-[#305048]">Bedroom checklist</h2>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                           <img class="w-full h-64 object-cover" src="/images/bedrom2.webp" alt="a neatly made bed in a modern sunlit bedroom, with a person spraying a cleaning solution on a nightstand, professional cleaning service photo" loading="lazy" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {bedroomChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.included ? 'fa-square-check text-[#305048]' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>
            
                    <!-- Kitchen Checklist -->
                    <div>
                        <h2 class="text-3xl font-bold mb-4 md:mb-6 text-[#305048]">Kitchen checklist</h2>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                           <img class="w-full h-64 object-cover" src="/images/Kitchen.jpg" alt="a person carefully washing a glass plate in a clean kitchen sink, close-up shot, professional cleaning service photo" loading="lazy" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {kitchenChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.included ? 'fa-square-check text-[#305048]' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Other Living Areas -->
                    <div>
                        <h2 class="text-3xl font-bold mb-4 md:mb-6 text-[#305048]">Other living areas</h2>
                        <div class="rounded-lg overflow-hidden mb-4 md:mb-6 border-4 border-[#305048] shadow-lg">
                            <img class="w-full h-64 object-cover" src="/images/Living Room.jpg" alt="a person in yellow gloves using a squeegee to clean a large window in a living room, bright and airy, professional cleaning service photo" loading="lazy" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {allRoomsChecklist.map((item) => (
                                <li class="flex items-start gap-3">
                                    <i class={`fa-regular ${item.included ? 'fa-square-check text-[#305048]' : 'fa-square-check text-[#305048]'} mt-0.5 flex-shrink-0`}></i>
                                    <span class="text-base leading-relaxed">
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>

            </div>
        </div>
    </section>

        <!-- Coupon Section -->
        <section class="bg-[#305048] py-20">
            <div class="container mx-auto px-6 text-center text-white">
                <h2 class="text-4xl font-bold text-[#FF8057] mb-4">10% OFF move-in/out cleaning</h2>
                <p class="max-w-2xl mx-auto mb-8 text-lg">
                    For new customers only, get 10% off your move-in/out clean with us. Use code <strong>NEW10</strong> to claim during booking.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    BOOK NOW
                </a>
        </div>
    </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
