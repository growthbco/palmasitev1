---
// Homepage content - serving main landing page
const title = "Palma Cleaning Co - Professional House & Commercial Cleaning in Ocala FL";
const description = "Professional house cleaning for busy families & professionals throughout Ocala, FL. Serving all neighborhoods including premium communities near World Equestrian Center. Licensed & insured.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="house cleaning Ocala FL, residential cleaning Ocala, commercial cleaning Ocala, Marion County cleaning, Ocala cleaning service, WEC cleaning">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/">
    <link rel="stylesheet" href="/styles-clean.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning Co",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Professional house and commercial cleaning services in Ocala, FL",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Ocala",
            "addressRegion": "FL",
            "postalCode": "34471",
            "addressCountry": "US"
        },
        "telephone": "(352) 123-4567",
        "url": "https://palmacleaningco.com",
        "sameAs": [
            "https://www.facebook.com/palmacleaningco",
            "https://www.instagram.com/palmacleaningco"
        ],
        "serviceType": "House Cleaning Service",
        "areaServed": [
            {
                "@type": "City",
                "name": "Ocala",
                "sameAs": "https://en.wikipedia.org/wiki/Ocala,_Florida"
            },
            {
                "@type": "City",
                "name": "The Villages"
            }
        ],
        "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Cleaning Services",
            "itemListElement": [
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Standard House Cleaning"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Deep Cleaning"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Commercial Cleaning"
                    }
                }
            ]
        },
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "29.1872",
            "longitude": "-82.1401"
        },
        "openingHours": "Mo-Fr 08:00-18:00",
        "priceRange": "$$"
    }
    </script>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <h2>Palma Cleaning Co</h2>
                <span class="tagline">Professional Cleaning in Ocala FL</span>
            </div>
            <ul class="nav-menu">
                <li><a href="#home" class="nav-link">Home</a></li>
                <li><a href="#about" class="nav-link">About</a></li>
                <li><a href="#services" class="nav-link">Services</a></li>
                <li><a href="#areas" class="nav-link">Areas</a></li>
                <li><a href="#contact" class="nav-link">Contact</a></li>
            </ul>
            <div class="hamburger">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </div>
    </nav>

    <section class="hero" id="home">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">Professional Cleaning Services in Ocala FL</h1>
                <p class="hero-subtitle">House & Commercial Cleaning for Busy Families & Professionals</p>
                <p class="hero-description">Reliable, licensed, and insured cleaning services throughout Ocala, Marion County, and The Villages. From weekly house cleaning to commercial offices, we've got you covered.</p>
                <div class="hero-buttons">
                    <a href="#contact" class="btn btn-primary">Get Free Quote</a>
                    <a href="tel:+13521234567" class="btn btn-secondary">Call (352) 123-4567</a>
                </div>
            </div>
            <div class="hero-image">
                <div class="hero-placeholder">
                    <i class="fas fa-home"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="about" id="about">
        <div class="container">
            <h2 class="section-title">Why Choose Palma Cleaning Co?</h2>
            <div class="about-content">
                <div class="about-text">
                    <p class="about-intro">Trusted by hundreds of Ocala families and businesses since 2020.</p>
                    <p>At Palma Cleaning Co, we understand that life is busy. Whether you're a professional working long hours, a family with young children, or managing a business, cleaning shouldn't add stress to your life.</p>
                    <p>We serve residential and commercial clients throughout Ocala, Marion County, and The Villages with reliable, professional cleaning services that give you back your valuable time.</p>
                    
                    <div class="about-features">
                        <div class="feature">
                            <i class="fas fa-shield-alt"></i>
                            <span>Licensed & Insured</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-clock"></i>
                            <span>Flexible Scheduling</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-heart"></i>
                            <span>100% Satisfaction</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-leaf"></i>
                            <span>Eco-Friendly Options</span>
                        </div>
                    </div>
                </div>
                <div class="about-stats">
                    <div class="stat">
                        <h3>500+</h3>
                        <p>Happy Customers</p>
                    </div>
                    <div class="stat">
                        <h3>5â˜…</h3>
                        <p>Average Rating</p>
                    </div>
                    <div class="stat">
                        <h3>4+</h3>
                        <p>Years in Business</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="services" id="services">
        <div class="container">
            <h2 class="section-title">Our Cleaning Services</h2>
            <div class="services-grid">
                <div class="service-card featured">
                    <div class="service-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3>Standard House Cleaning</h3>
                    <p>Regular weekly, bi-weekly, or monthly cleaning to keep your home consistently clean and fresh.</p>
                    <ul class="service-list">
                        <li>Kitchen and bathroom cleaning</li>
                        <li>Dusting all surfaces</li>
                        <li>Vacuuming and mopping</li>
                        <li>Trash removal</li>
                        <li>Flexible scheduling</li>
                    </ul>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-magic"></i>
                    </div>
                    <h3>Deep Cleaning</h3>
                    <p>Comprehensive top-to-bottom cleaning perfect for spring cleaning, moving, or getting started.</p>
                    <ul class="service-list">
                        <li>Inside appliances</li>
                        <li>Baseboards and fixtures</li>
                        <li>Cabinet fronts</li>
                        <li>Window sills</li>
                        <li>Detailed bathroom work</li>
                    </ul>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <h3>Commercial Cleaning</h3>
                    <p>Professional office and business cleaning to maintain a clean, productive work environment.</p>
                    <ul class="service-list">
                        <li>Office buildings</li>
                        <li>Retail spaces</li>
                        <li>Medical offices</li>
                        <li>Restaurants</li>
                        <li>Flexible hours</li>
                    </ul>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-box-open"></i>
                    </div>
                    <h3>Move-in/Move-out</h3>
                    <p>Complete cleaning for transitions, perfect for new homeowners and renters getting deposits back.</p>
                    <ul class="service-list">
                        <li>Empty house cleaning</li>
                        <li>All cabinets and drawers</li>
                        <li>Appliance cleaning</li>
                        <li>Real estate ready</li>
                        <li>Same-day service</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="areas" id="areas">
        <div class="container">
            <h2 class="section-title">Areas We Serve</h2>
            <div class="areas-grid">
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Ocala & Marion County</h4>
                    <ul>
                        <li>Downtown Ocala</li>
                        <li>Stone Creek</li>
                        <li>Oak Run</li>
                        <li>Golden Hills</li>
                        <li>Spruce Creek</li>
                        <li>All Marion County areas</li>
                    </ul>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> The Villages</h4>
                    <ul>
                        <li>Spanish Springs</li>
                        <li>Lake Sumter Landing</li>
                        <li>Brownwood</li>
                        <li>All Village Centers</li>
                        <li>Golf course communities</li>
                    </ul>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> World Equestrian Center Area</h4>
                    <ul>
                        <li>WEC neighborhoods</li>
                        <li>Equestrian properties</li>
                        <li>Horse farms</li>
                        <li>Luxury estates</li>
                        <li>Agricultural properties</li>
                    </ul>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Surrounding Areas</h4>
                    <ul>
                        <li>Belleview</li>
                        <li>Dunnellon</li>
                        <li>Rainbow Springs</li>
                        <li>Silver Springs</li>
                        <li>And more!</li>
                    </ul>
                </div>
            </div>
            <div class="service-note">
                <p><i class="fas fa-info-circle"></i> Don't see your area listed? We serve many locations throughout Central Florida. Call us to check if we service your area!</p>
            </div>
        </div>
    </section>

    <section class="contact" id="contact">
        <div class="container">
            <h2 class="section-title">Get Your Free Cleaning Quote</h2>
            <div class="contact-content">
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <div>
                            <h4>Call or Text</h4>
                            <p>(352) 123-4567</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h4>Email</h4>
                            <p>hello@palmacleaningco.com</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <h4>Business Hours</h4>
                            <p>Monday - Friday: 8:00 AM - 6:00 PM</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa="map-marker-alt"></i>
                        <div>
                            <h4>Service Area</h4>
                            <p>Ocala, Marion County & The Villages</p>
                        </div>
                    </div>
                </div>
                
                <form class="contact-form">
                    <h3>Request Free Quote</h3>
                    <div class="form-row">
                        <input type="text" name="name" placeholder="Your Name" required>
                        <input type="tel" name="phone" placeholder="Phone Number" required>
                    </div>
                    <input type="email" name="email" placeholder="Email Address" required>
                    <select name="service" required>
                        <option value="">Select Service Type</option>
                        <option value="standard">Standard House Cleaning</option>
                        <option value="deep">Deep Cleaning</option>
                        <option value="commercial">Commercial Cleaning</option>
                        <option value="move">Move-in/Move-out</option>
                        <option value="construction">Post-Construction</option>
                        <option value="other">Other</option>
                    </select>
                    <textarea name="address" placeholder="Property Address" rows="3" required></textarea>
                    <textarea name="message" placeholder="Tell us about your cleaning needs..." rows="4"></textarea>
                    <button type="submit" class="btn btn-primary btn-large">Get Free Quote</button>
                    <p class="form-note">We'll respond within 24 hours with your personalized quote</p>
                </form>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Palma Cleaning Co</h3>
                    <p>Professional house and commercial cleaning services throughout Ocala, Marion County, and The Villages. Licensed, insured, and trusted by hundreds of satisfied customers.</p>
                    <p><strong>Licensed & Insured in Florida</strong></p>
                </div>
                <div class="footer-section">
                    <h4>Our Services</h4>
                    <ul>
                        <li>Standard House Cleaning</li>
                        <li>Deep Cleaning</li>
                        <li>Commercial Cleaning</li>
                        <li>Move-in/Move-out</li>
                        <li>Post-Construction</li>
                        <li>Equestrian Properties</li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Service Areas</h4>
                    <ul>
                        <li>Ocala & Marion County</li>
                        <li>The Villages</li>
                        <li>Stone Creek & Oak Run</li>
                        <li>World Equestrian Center Area</li>
                        <li>Belleview & Dunnellon</li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact Info</h4>
                    <ul>
                        <li>Phone: (352) 123-4567</li>
                        <li>Email: hello@palmacleaningco.com</li>
                        <li>Hours: Monday - Friday 8AM-6PM</li>
                        <li>Free quotes within 24 hours</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Palma Cleaning Co. All rights reserved. Professional cleaning services in Ocala, FL.</p>
            </div>
        </div>
    </footer>

    <script is:inline src="/script-clean.js"></script>
</body>
</html>
