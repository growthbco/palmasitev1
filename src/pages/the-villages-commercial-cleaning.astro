---
// The Villages Commercial Cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
const title = "The Villages Commercial Cleaning | Palma Cleaning - Florida";
const description = "Professional commercial cleaning services for The Villages businesses in Florida. Office cleaning, retail cleaning, and commercial facility services for The Villages. Licensed & insured.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="The Villages commercial cleaning, The Villages office cleaning, The Villages business cleaning, The Villages retail cleaning Florida">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/the-villages-commercial-cleaning">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/styles-clean.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "The Villages Commercial Cleaning",
        "description": "Professional commercial cleaning services for The Villages businesses and facilities",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "url": "https://palmacleaningco.com"
        },
        "areaServed": {
            "@type": "Place",
            "name": "The Villages, FL"
        },
        "offers": {
            "@type": "Offer",
            "description": "Office cleaning, retail cleaning, restaurant cleaning, and commercial facility maintenance"
        }
    }
    </script>
</head>
<body>
    <GTMBody />
    <Navigation />

    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">The Villages Commercial Cleaning</h1>
                <p class="hero-subtitle">Professional Cleaning for The Villages Businesses</p>
                <p class="hero-description">Comprehensive commercial cleaning services designed for The Villages' vibrant business community. From town squares to professional offices, we maintain the cleanliness standards that support America's Premier Active Adult Community.</p>
                <div class="hero-buttons">
                    <a href="/contact" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
            <div class="hero-image">
                <div class="hero-placeholder">
                    <i class="fas fa-building"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="contact" style="background: #f8fafa;">
        <div class="container">
            <h2 class="section-title">Ready for Professional The Villages Commercial Cleaning?</h2>
            <div style="text-align: center; max-width: 600px; margin: 0 auto;">
                <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">Maintain your Villages business to the highest standards with our professional commercial cleaning services. Contact us for a customized cleaning plan!</p>
                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin-bottom: 2rem;">
                    <a href="/contact" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
        </div>
    </section>

    <Footer />

    <script is:inline src="/script-clean.js"></script>
    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>