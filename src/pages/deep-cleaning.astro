---
// Deep cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Deep House Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Professional deep house cleaning services in Ocala, FL. Comprehensive top-to-bottom cleaning including baseboards, ceiling fans, inside appliances, and detailed sanitization.";

const bathroomChecklist = [
  { text: "Scrub and disinfect sinks" },
  { text: "Wipe/clean tub and shower tiles" },
  { text: "Disinfect toilets inside and out" },
  { text: "Clean and shine chrome fixtures" },
  { text: "Disinfect countertops" },
  { text: "Clean cabinet front" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Empty trash" },
  { text: "Clean mirrors" },
  { text: "Hand wash baseboards", included: true },
  { text: "Scrub shower and bathtubs", included: true }
];

const bedroomChecklist = [
  { text: "Make beds" },
  { text: "Dust lamps and lampshades (int/ext)" },
  { text: "Dust picture frames" },
  { text: "Dust furniture (top, front, and under)" },
  { text: "Vacuum and/or wash floor" },
  { text: "Dust window sills" },
  { text: "Dust baseboards" },
  { text: "Remove cobwebs" },
  { text: "Empty trash" },
  { text: "Clean mirrors" },
  { text: "Wipe door handles & light switches" },
  { text: "Basic organizing" },
  { text: "Hand wash baseboards", included: true }
];

const kitchenChecklist = [
  { text: "Clean appliance exteriors" },
  { text: "Wipe down microwave (int/ext)" },
  { text: "Clean tables and chairs" },
  { text: "Disinfect countertops and backsplash" },
  { text: "Wipe cabinet fronts" },
  { text: "Scrub and disinfect sinks" },
  { text: "Wash dishes or load dishwasher" },
  { text: "Hand wash baseboards", included: true },
  { text: "Degrease and clean oven interior", included: true },
  { text: "Scrub & wipe inside refrigerator", addOn: true },
  { text: "Wipe inside cabinets and drawers", addOn: true },
  { text: "Wipe inside pantry and closets", addOn: true }
];

const allRoomsChecklist = [
  { text: "Fluff and straighten cushions and pillows" },
  { text: "Dust ceiling fans (if accessible)" },
  { text: "Dust lamps and lampshades" },
  { text: "Dust picture frames" },
  { text: "Dust furniture" },
  { text: "Vacuum and/or wash floor" },
  { text: "Hand wash baseboards", included: true },
  { text: "Wipe down/vacuum furniture", included: true },
  { text: "Clean windows (interior) and blinds", included: true },
  { text: "Vacuum exterior air vents & return", addOn: true },
  { text: "Sweep garage floors (if vacant)", addOn: true }
];

---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="deep cleaning Ocala FL, spring cleaning, thorough house cleaning, move-in cleaning, detailed cleaning service">
    <link rel="canonical" href="https://palmacleaningco.com/deep-cleaning">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Deep House Cleaning Services",
        "alternateName": ["Spring Cleaning", "Intensive House Cleaning", "Detailed Home Cleaning"],
        "description": "Comprehensive deep cleaning services including inside appliances, baseboards, fixtures, ceiling fans, and detailed cleaning throughout your home.",
        "url": "https://palmacleaningco.com/deep-cleaning",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "email": "hello@palmacleaningco.com",
            "url": "https://palmacleaningco.com"
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">Deep cleaning</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Our deep cleaning tackles grime and neglected areas, reaching beyond our standard clean. We scrub bathrooms (including baseboards!), banish dust bunnies in vents and corners, and make your oven sparkle.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    VIEW PRICING
                </a>
            </div>
        </section>

        <!-- Checklist Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-20">
                    
                    <!-- Bathroom Checklist -->
                    <div>
                        <h2 class="text-3xl font-bold mb-6 text-[#305048]">Bathroom checklist</h2>
                        <div class="rounded-lg overflow-hidden mb-6 border-4 border-[#305048] shadow-lg">
                            <img class="w-full h-64 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/a70505989e-13f092990f9f3c0f7a53.png" alt="a person with yellow gloves cleaning a white bathroom sink, detailed, professional cleaning service photo" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {bathroomChecklist.map((item) => (
                                <li class="flex items-start">
                                    <i class={`fa-regular ${item.included ? 'fa-square-check text-[#305048]' : 'fa-square-check text-[#305048]'} mt-1 mr-3`}></i>
                                    <span>
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Bedroom Checklist -->
                    <div>
                        <h2 class="text-3xl font-bold mb-6 text-[#305048]">Bedroom checklist</h2>
                        <div class="rounded-lg overflow-hidden mb-6 border-4 border-[#305048] shadow-lg">
                           <img class="w-full h-64 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/060275ebb2-e51b07395b88f28a62d6.png" alt="a neatly made bed in a modern sunlit bedroom, with a person spraying a cleaning solution on a nightstand, professional cleaning service photo" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {bedroomChecklist.map((item) => (
                                <li class="flex items-start">
                                    <i class={`fa-regular ${item.included ? 'fa-square-check text-[#305048]' : 'fa-square-check text-[#305048]'} mt-1 mr-3`}></i>
                                    <span>
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Kitchen Checklist -->
                    <div>
                        <h2 class="text-3xl font-bold mb-6 text-[#305048]">Kitchen checklist</h2>
                        <div class="rounded-lg overflow-hidden mb-6 border-4 border-[#305048] shadow-lg">
                           <img class="w-full h-64 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/87a66f6f45-2f29ac21b02afbd662b9.png" alt="a person carefully washing a glass plate in a clean kitchen sink, close-up shot, professional cleaning service photo" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {kitchenChecklist.map((item) => (
                                <li class="flex items-start">
                                    <i class={`fa-regular ${item.addOn ? 'fa-square text-gray-400' : 'fa-square-check text-[#305048]'} mt-1 mr-3`}></i>
                                    <span>
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                        {item.addOn && <strong class="text-[#305048]"> (add-on)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Other Living Areas -->
                    <div>
                        <h2 class="text-3xl font-bold mb-6 text-[#305048]">Other living areas</h2>
                        <div class="rounded-lg overflow-hidden mb-6 border-4 border-[#305048] shadow-lg">
                            <img class="w-full h-64 object-cover" src="https://storage.googleapis.com/uxpilot-auth.appspot.com/12b6a06b16-0741abe4166921665763.png" alt="a person in yellow gloves using a squeegee to clean a large window in a living room, bright and airy, professional cleaning service photo" />
                        </div>
                        <ul class="space-y-3 text-gray-700">
                            {allRoomsChecklist.map((item) => (
                                <li class="flex items-start">
                                    <i class={`fa-regular ${item.addOn ? 'fa-square text-gray-400' : 'fa-square-check text-[#305048]'} mt-1 mr-3`}></i>
                                    <span>
                                        {item.text}
                                        {item.included && <strong class="text-[#305048]"> (included)</strong>}
                                        {item.addOn && <strong class="text-[#305048]"> (add-on)</strong>}
                                    </span>
                                </li>
                            ))}
                        </ul>
                    </div>

                </div>
            </div>
        </section>

        <!-- Coupon Section -->
        <section class="bg-[#305048] py-20">
            <div class="container mx-auto px-6 text-center text-white">
                <h2 class="text-4xl font-bold text-[#FF8057] mb-4">Get up to 25% off your first deep clean</h2>
                <p class="max-w-2xl mx-auto mb-8 text-lg">
                    If you're a new customer, get up to 25% off your first deep clean when you sign up for a bi-weekly cleaning with us.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    LEARN MORE
                </a>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>