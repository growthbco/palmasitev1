---
// Contact page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Contact Palma Cleaning - Get Your Free Quote | Ocala FL";
const description = "Contact Palma Cleaning for professional cleaning services in Ocala, Marion County, and The Villages. Call (352) 764-4747 or request your free quote online. Licensed & insured.";

const contactCards = [
  {
    icon: "fa-solid fa-phone",
    title: "Call or Text",
    primary: "(352) 764-4747",
    href: "tel:+13527644747",
    note: "Fastest way to book or ask questions"
  },
  {
    icon: "fa-solid fa-envelope",
    title: "Email",
    primary: "hello@palmacleaningco.com",
    href: "mailto:hello@palmacleaningco.com",
    note: "Replies within 24 hours"
  },
  {
    icon: "fa-solid fa-clock",
    title: "Business Hours",
    primary: "Mon - Fri • 8:00 AM - 6:00 PM",
    note: "Weekend appointments available"
  }
];

const serviceAreas = [
  {
    title: "Ocala & Marion County",
    items: ["Downtown Ocala", "Golden Hills", "Stone Creek", "Spruce Creek", "All surrounding neighborhoods"]
  },
  {
    title: "Premium Communities",
    items: ["WEC & equestrian estates", "Luxury acreage homes", "Gated golf communities", "Horse farms"]
  },
  {
    title: "The Villages",
    items: ["Spanish Springs", "Lake Sumter Landing", "Brownwood", "Golf cart accessible neighborhoods"]
  },
  {
    title: "Beyond Ocala",
    items: ["Belleview", "Dunnellon & Rainbow Springs", "Silver Springs", "Citrus Springs"]
  }
];

const faqs = [
  {
    question: "How quickly can I get a quote?",
    answer: "Submit the form or call us and we’ll respond within 24 hours—often the same day for urgent requests."
  },
  {
    question: "Do you bring your own supplies?",
    answer: "Yes. Palma Cleaning provides all equipment and professional products, including eco-friendly options on request."
  },
  {
    question: "Are you licensed and insured?",
    answer: "We carry full liability and bonding insurance. Every cleaner is a background-checked W-2 employee."
  },
  {
    question: "Do you offer weekend or evening appointments?",
    answer: "Standard visits run Monday–Friday, but we can schedule weekend or evening cleanings based on availability."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="contact Palma Cleaning, free quote cleaning Ocala FL, cleaning service contact Marion County, The Villages cleaning quote">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://palmacleaningco.com/contact">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Professional house and commercial cleaning services in Ocala, FL",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Ocala",
            "addressRegion": "FL",
            "postalCode": "34471",
            "addressCountry": "US"
        },
        "telephone": "(352) 764-4747",
        "email": "hello@palmacleaningco.com",
        "url": "https://palmacleaningco.com/contact",
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "29.1872",
            "longitude": "-82.1401"
        },
        "openingHours": "Mo-Fr 08:00-18:00",
        "priceRange": "$$"
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#F4F7F6]">
            <div class="container mx-auto px-6 py-20 grid grid-cols-1 lg:grid-cols-[1.2fr,0.8fr] gap-12 items-center">
                <div class="space-y-6 text-center lg:text-left">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Contact Palma Cleaning</p>
                    <h1 class="text-4xl md:text-5xl font-bold leading-tight">Let’s get your cleaning on the schedule</h1>
                    <p class="text-lg text-gray-600 max-w-2xl">Call, text, or send a quick message. We’ll return your quote within 24 hours and help you choose the perfect cleaning package for your home or business.</p>
                    <div class="flex flex-wrap justify-center lg:justify-start gap-4">
                        <a href="tel:+13527644747" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300">Call (352) 764-4747</a>
                        <a href="#quote-form" class="border border-[#305048] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#305048] hover:text-white transition duration-300">Request Quote</a>
                    </div>
                </div>
                <div class="hidden lg:flex">
                    <img src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?auto=format&fit=crop&w=1000&q=80" alt="Palma Cleaning customer support" class="rounded-2xl shadow-2xl object-cover">
                </div>
            </div>
        </section>

        <!-- Quote Form (Inline) -->
        <section id="quote-form" class="py-16 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Request a Quote</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Tell us about your space</h2>
                    <p class="mt-4 text-gray-600">Share a few details and we’ll follow up quickly with next steps.</p>
                </div>
                <div class="mt-10 max-w-5xl mx-auto bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-2xl shadow-2xl p-4 md:p-6">
                    <iframe
                        src="https://link.palmacleaningco.com/widget/form/UlPHV9CBTZU2NsWsquep"
                        style="width:100%;height:100%;border:none;border-radius:6px"
                        id="inline-UlPHV9CBTZU2NsWsquep"
                        data-layout="{'id':'INLINE'}"
                        data-trigger-type="alwaysShow"
                        data-trigger-value=""
                        data-activation-type="alwaysActivated"
                        data-activation-value=""
                        data-deactivation-type="neverDeactivate"
                        data-deactivation-value=""
                        data-form-name="Pop Up Form"
                        data-height="undefined"
                        data-layout-iframe-id="inline-UlPHV9CBTZU2NsWsquep"
                        data-form-id="UlPHV9CBTZU2NsWsquep"
                        title="Pop Up Form"
                        class="w-full min-h-[820px] rounded-xl border-0"
                        loading="lazy"
                    ></iframe>
                    <script src="https://link.palmacleaningco.com/js/form_embed.js"></script>
                </div>
            </div>
        </section>

        <!-- Contact Cards -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Connect With Us</p>
                    <h2 class="text-3xl md:text-4xl font-bold">We respond within 24 hours</h2>
                    <p class="mt-4 text-white/80">Prefer a quick phone call, detailed email, or instant quote? Choose the option that’s easiest for you.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
                    {contactCards.map((card) => (
                        <div class="bg-white/10 border border-white/20 rounded-2xl p-8 text-center shadow-lg">
                            <div class="w-12 h-12 mx-auto rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl"><i class={card.icon}></i></div>
                            <h3 class="mt-4 text-lg font-semibold">{card.title}</h3>
                            {card.href ? (
                                <a href={card.href} class="mt-2 block text-xl font-bold text-white hover:text-[#FF8057] transition">{card.primary}</a>
                            ) : (
                                <p class="mt-2 text-xl font-bold text-white">{card.primary}</p>
                            )}
                            {card.note && <p class="mt-2 text-sm text-white/70">{card.note}</p>}
                        </div>
                    ))}
                </div>
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="tel:+13527644747" class="bg-[#FF8057] text-[#305048] font-semibold px-6 py-3 rounded-md hover:bg-[#ff996f] transition text-sm uppercase tracking-wide"><i class="fa-solid fa-phone mr-2"></i>Call Now</a>
                    <a href="#quote-form" class="bg-transparent border border-white text-white font-semibold px-6 py-3 rounded-md hover:bg-white hover:text-[#305048] transition text-sm uppercase tracking-wide"><i class="fa-solid fa-clipboard-list mr-2"></i>Get Quote Online</a>
                </div>
            </div>
        </section>

        <!-- Location Map -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Service Area</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Palma Cleaning in Ocala, FL</h2>
                    <p class="mt-4 text-gray-600">Located in Ocala, serving Marion County and surrounding areas with professional cleaning services.</p>
                </div>
                <div class="max-w-5xl mx-auto rounded-2xl overflow-hidden shadow-2xl border border-[#E3EAE8]/60">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3485.403677210374!2d-82.23897772368913!3d29.12328157540022!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e87ff6acef1b3d%3A0x18787c51dd0b2ec4!2sPalma%20Cleaning%20Florida!5e0!3m2!1sen!2sus!4v1763083899273!5m2!1sen!2sus" 
                        width="100%" 
                        height="450" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Palma Cleaning Location - Ocala, FL">
                    </iframe>
                </div>
                <div class="mt-8 text-center">
                    <p class="text-gray-600 mb-4">Palma Cleaning Florida • Ocala, FL</p>
                    <a href="https://www.google.com/maps/place/Palma+Cleaning+Florida/@29.1232816,-82.2389777,15z/data=!4m6!3m5!1s0x88e87ff6acef1b3d:0x18787c51dd0b2ec4!8m2!3d29.1232816!4d-82.2389777!16s%2Fg%2F11v80b3yk9" 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="inline-flex items-center gap-2 text-[#305048] font-semibold hover:text-[#FF8057] transition">
                        <i class="fa-solid fa-map-marker-alt"></i>
                        View Location on Google Maps
                    </a>
                </div>
            </div>
        </section>

        <!-- (Removed old contact form embed) -->

        <!-- Service Areas -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Where We Work</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Serving Ocala, The Villages & beyond</h2>
                    <p class="mt-4 text-gray-600">If you’re in Greater Ocala or Marion County, chances are we already clean for your neighbors.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                    {serviceAreas.map((area) => (
                        <div class="bg-white border border-[#E3EAE8]/60 rounded-2xl p-8 shadow-sm">
                            <h3 class="text-xl font-semibold flex items-center gap-2"><i class="fa-solid fa-location-dot text-[#FF8057]"></i>{area.title}</h3>
                            <ul class="mt-4 space-y-2 text-sm text-gray-600">
                                {area.items.map((item) => (
                                    <li>{item}</li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
                <div class="mt-10 bg-white/70 border border-[#FF8057]/40 rounded-xl px-6 py-4 text-center text-sm text-[#305048]">
                    <i class="fa-solid fa-circle-info text-[#FF8057] mr-2"></i>Don’t see your neighborhood? Text us at (352) 764-4747—we’re always expanding our routes.
                </div>
            </div>
        </section>

        <!-- FAQ -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6 max-w-4xl">
                <div class="text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">FAQ</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Common questions answered</h2>
                </div>
                <div class="mt-12 space-y-4">
                    {faqs.map((faq) => (
                        <details class="group border border-[#E3EAE8]/60 rounded-xl bg-[#F4F7F6] p-5">
                            <summary class="flex items-center justify-between cursor-pointer text-[#305048] font-semibold text-lg">
                                <span>{faq.question}</span>
                                <span class="text-[#FF8057] transition-transform group-open:rotate-45"><i class="fa-solid fa-plus"></i></span>
                            </summary>
                            <p class="mt-3 text-sm text-gray-600 leading-relaxed">{faq.answer}</p>
                        </details>
                    ))}
                </div>
            </div>
        </section>

        <!-- Closing CTA -->
        <section class="py-24 bg-[#FF8057]">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold text-[#305048]">Ready when you are</h2>
                <p class="mt-4 text-[#305048]/90 text-lg max-w-2xl mx-auto">Call, text, or complete the form above to grab your personalized quote. We can often start service the same week.</p>
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="tel:+13527644747" class="bg-[#305048] text-white font-bold py-4 px-10 rounded-md hover:bg-[#305048]/90 transition duration-300 text-sm uppercase"><i class="fa-solid fa-phone mr-2"></i>Call Now</a>
                    <a href="#quote-form" class="bg-transparent text-[#305048] font-bold py-4 px-10 rounded-md border border-[#305048] transition duration-300 text-sm uppercase"><i class="fa-solid fa-clipboard-list mr-2"></i>Get Quote Online</a>
                </div>
                <p class="mt-6 text-[#305048]/80 text-sm">Licensed & Insured • Satisfaction Guaranteed • Same Day Service Available</p>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>