---
// Benefits & Rewards page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Benefits & Rewards | Palma Cleaning - Ocala FL";
const description = "Exclusive benefits and rewards for Palma Cleaning customers. Get discounts, free deep clean upgrades, and priority scheduling when you sign up for bi-weekly service.";

const newCustomerBenefits = [
  { text: "25% off first deep clean (bi-weekly)" },
  { text: "25% off all bi-weekly services" },
  { text: "Consistent, trusted cleaning team" }
];

const loyaltyBenefits = [
  { text: "FREE deep clean upgrade every 6 months" },
  { text: "Exclusive benefits and priority scheduling" },
  { text: "15% discount codes for friends + family" }
];

const faqs = [
  {
    question: "How do I qualify for the FREE deep clean?",
    answer: "We offer our Free Deep Clean Program for clients who are on our bi-weekly cleaning service. You'll receive 25% off your first deep clean to start, and after six months of continuous service, you'll qualify for a free bi-annual deep clean. To begin, a commitment to at least six bi-weekly cleanings is required. No additional enrollment is necessary; we'll automatically track your eligibility."
  },
  {
    question: "How do I claim my FREE deep clean?",
    answer: "Once you've completed six months of continuous bi-weekly service, we'll automatically notify you that you're eligible for your free deep clean. Simply contact us to schedule it at your convenience. The free deep clean will be applied during your next scheduled cleaning visit."
  },
  {
    question: "What's included in a deep clean?",
    answer: "Our deep clean includes detailed cleaning of baseboards, ceiling fans, inside appliances (oven, refrigerator upon request), detailed bathroom scrubbing, window cleaning, furniture wiping, and comprehensive dusting throughout your home. See our Deep Cleaning page for a complete checklist."
  },
  {
    question: "What is the minimum service commitment?",
    answer: "To qualify for the loyalty program benefits, we require a minimum commitment of six bi-weekly cleanings (approximately 3 months). After completing this initial commitment, you'll be eligible for the free bi-annual deep clean upgrade and all loyalty program benefits."
  },
  {
    question: "How do I schedule my bi-annual deep clean?",
    answer: "Contact us by phone at (352) 764-4747 or through your online account to schedule your free bi-annual deep clean. We'll work with you to find a convenient date and time. The deep clean upgrade will be applied during your regularly scheduled bi-weekly visit, so you don't need to book a separate appointment."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="Palma Cleaning benefits, cleaning service rewards, loyalty program, free deep clean Ocala">
    <link rel="canonical" href="https://palmacleaningco.com/benefits">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero Section with Overlapping Layout -->
        <section class="relative bg-white pt-12 pb-20 overflow-hidden">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
                    <!-- Left Column - Images -->
                    <div class="relative space-y-6">
                        <!-- Top Left Image - Glove with Spray Bottle -->
                        <div class="relative w-full aspect-square bg-[#E0F2E9] rounded-lg overflow-hidden shadow-lg">
                            <img 
                                src="https://images.unsplash.com/photo-1628177142898-93e36e4e3a50?auto=format&fit=crop&w=800&q=80" 
                                alt="Cleaning supplies" 
                                class="w-full h-full object-cover"
                                loading="lazy"
                            />
                        </div>
                        
                        <!-- Bottom Left Image - Bathroom -->
                        <div class="relative w-full">
                            <img 
                                src="https://images.unsplash.com/photo-1600607686527-6fb8f70ba658?auto=format&fit=crop&w=800&q=80" 
                                alt="Clean modern bathroom" 
                                class="w-full h-64 object-cover rounded-lg shadow-lg"
                                loading="lazy"
                            />
                            <div class="mt-6">
                                <a href="/book-now" class="bg-[#FF8057] text-white font-bold py-3 px-8 rounded-md hover:bg-[#ff996f] transition duration-300 inline-block">
                                    Get Started
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column - Banner and Content -->
                    <div class="relative lg:-ml-8">
                        <!-- Dark Green Banner (Overlapping) -->
                        <div class="bg-[#305048] text-white p-8 lg:p-12 rounded-lg shadow-xl -mt-12 lg:-mt-20 relative z-10">
                            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">Benefits & Rewards</h1>
                            <p class="text-lg md:text-xl text-white/90">
                                Benefits and other perks of being a Palma Cleaning customer
                            </p>
                        </div>

                        <!-- Main Content Area -->
                        <div class="mt-8 lg:mt-12 space-y-8">
                            <!-- Body Text -->
                            <p class="text-lg text-gray-700 leading-relaxed">
                                We believe in rewarding our loyal customers who trust us with their homes time and again. Our loyalty program is designed to say 'thank you' in ways that truly matterâ€”with exclusive benefits, and valuable extras that make your experience with us even more exceptional.
                            </p>

                            <!-- Loyalty Program Box -->
                            <div class="bg-[#E0F2E9] border-2 border-[#305048]/20 rounded-lg p-6 shadow-sm">
                                <h2 class="text-2xl font-bold text-[#305048] mb-6">Loyalty Program</h2>
                                <ul class="space-y-4">
                                    {loyaltyBenefits.map((benefit) => (
                                        <li class="flex items-start gap-3">
                                            <i class="fa-solid fa-circle-check text-[#305048] mt-1 text-xl"></i>
                                            <span class="text-gray-800 text-lg">{benefit.text}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- New Customers Section -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-2xl mx-auto">
                    <div class="bg-[#F4F7F6] rounded-2xl p-8 shadow-sm">
                        <h2 class="text-2xl font-bold text-[#305048] mb-6">New Customers</h2>
                        <ul class="space-y-4 mb-8">
                            {newCustomerBenefits.map((benefit) => (
                                <li class="flex items-start gap-3">
                                    <i class="fa-solid fa-circle-check text-[#305048] mt-1 text-xl"></i>
                                    <span class="text-gray-700 text-lg">{benefit.text}</span>
                                </li>
                            ))}
                        </ul>
                        <a href="/book-now" class="bg-[#FF8057] text-white font-bold py-3 px-8 rounded-md hover:bg-[#ff996f] transition duration-300 inline-block">
                            Get Started
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- FAQ Section -->
        <section class="py-20 bg-[#F4F7F6]">
            <div class="container mx-auto px-6 max-w-4xl">
                <h2 class="text-3xl md:text-4xl font-bold text-center text-[#305048] mb-12">Frequently Asked Questions</h2>
                
                <div class="space-y-4">
                    {faqs.map((faq, index) => (
                        <div class="faq-item" data-index={index}>
                            <button 
                                class="faq-question w-full bg-[#305048] text-white font-semibold py-4 px-6 rounded-lg text-left flex items-center justify-between hover:bg-[#305048]/90 transition duration-300"
                                data-target={`faq-answer-${index}`}
                            >
                                <span>{faq.question}</span>
                                <i class="fa-solid fa-plus ml-4 transition-transform"></i>
                            </button>
                            <div 
                                id={`faq-answer-${index}`}
                                class="faq-answer hidden bg-white border border-gray-200 rounded-lg mt-2 p-6 text-gray-700 leading-relaxed"
                            >
                                <p>{faq.answer}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-[#FF8057]">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold text-[#305048] mb-4">Ready to Start Earning Benefits?</h2>
                <p class="text-lg text-[#305048]/90 max-w-2xl mx-auto mb-8">
                    Sign up for bi-weekly cleaning service today and start enjoying exclusive rewards and discounts.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#305048] text-white font-bold py-4 px-10 rounded-md hover:bg-[#305048]/90 transition duration-300">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border-2 border-[#305048] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#305048] hover:text-white transition duration-300">
                        Call (352) 764-4747
                    </a>
                </div>
            </div>
        </section>
    </main>

    <Footer />

    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.faq-question').forEach(button => {
                button.addEventListener('click', () => {
                    const targetId = button.getAttribute('data-target');
                    const answer = document.getElementById(targetId);
                    const icon = button.querySelector('i');
                    
                    // Close all other FAQs
                    document.querySelectorAll('.faq-answer').forEach(ans => {
                        if (ans.id !== targetId) {
                            ans.classList.add('hidden');
                        }
                    });
                    document.querySelectorAll('.faq-question i').forEach(i => {
                        if (i !== icon) {
                            i.classList.remove('fa-minus');
                            i.classList.add('fa-plus');
                            i.style.transform = 'rotate(0deg)';
                        }
                    });
                    
                    // Toggle current FAQ
                    if (answer) {
                        answer.classList.toggle('hidden');
                        if (answer.classList.contains('hidden')) {
                            icon.classList.remove('fa-minus');
                            icon.classList.add('fa-plus');
                            icon.style.transform = 'rotate(0deg)';
                        } else {
                            icon.classList.remove('fa-plus');
                            icon.classList.add('fa-minus');
                            icon.style.transform = 'rotate(180deg)';
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>

