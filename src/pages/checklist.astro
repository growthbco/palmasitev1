                    <button data-target="bathrooms-checklist" class="tab-button text-base md:text-lg px-4 md:px-6 py-3 font-medium text-gray-500 hover:text-[#305048] border-b-2 border-transparent whitespace-nowrap">
                        Bathrooms
                    </button>
                    <button data-target="living-areas-checklist" class="tab-button text-base md:text-lg px-4 md:px-6 py-3 font-medium text-gray-500 hover:text-[#305048] border-b-2 border-transparent whitespace-nowrap">
                        All Living Areas
                    </button>
                </div>

                <!-- Tab Content Container -->
                <div class="shadow-lg rounded-lg overflow-hidden border border-gray-100 overflow-x-auto">
                    <!-- Kitchen Checklist -->
                    <div id="kitchen-checklist" class="tab-content">
                        <table class="w-full text-left min-w-[600px]">
                            <thead class="bg-[#305048] text-white">
                                <tr>
                                    <th class="p-4 w-1/2 font-semibold">What we clean</th>
                                    <th class="p-4 text-center font-semibold">Standard</th>
                                    <th class="p-4 text-center font-semibold">Deep</th>
                                    <th class="p-4 text-center font-semibold">Move In/Out</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                {kitchenItems.map((item, index) => (
                                    <tr class={index % 2 === 0 ? "hover:bg-gray-50" : "bg-[#F4F7F6] hover:bg-gray-50"}>
                                        <td class="p-4 text-sm md:text-base">{item.task}</td>
                                        <td class="p-4 text-center">
                                            {item.standard ? (
                                                <i class="fa-solid fa-circle-check text-xl md:text-2xl text-[#305048]"></i>
