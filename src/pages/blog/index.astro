---
// Blog index page - main hub for all cleaning articles
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import GTMHead from '../../components/GTMHead.astro';
import GTMBody from '../../components/GTMBody.astro';
import GlobalHead from '../../components/GlobalHead.astro';

const title = "Cleaning Tips & Guides | Palma Cleaning Blog - Ocala FL";
const description = "Expert cleaning tips, guides, and advice for homeowners and business owners in Ocala, FL. Professional insights from Marion County's trusted cleaning service.";

const categories = [
  {
    icon: "fa-solid fa-home",
    title: "Residential Cleaning",
    description: "Tips and guides for keeping your home clean and organized",
    link: "#residential-posts"
  },
  {
    icon: "fa-solid fa-building",
    title: "Commercial Cleaning",
    description: "Professional advice for maintaining business spaces",
    link: "#commercial-posts"
  },
  {
    icon: "fa-solid fa-calendar-alt",
    title: "Seasonal Cleaning",
    description: "Year-round cleaning schedules and seasonal tips",
    link: "#seasonal-posts"
  },
  {
    icon: "fa-solid fa-lightbulb",
    title: "Cleaning Hacks",
    description: "Time-saving tips and professional secrets",
    link: "#tips-posts"
  }
];

const residentialPosts = [
  {
    category: "RESIDENTIAL GUIDE",
    title: "Ultimate Spring Cleaning Checklist for Ocala Homes",
    description: "Complete room-by-room spring cleaning guide tailored for Florida's unique climate and seasonal needs. Includes timeline and professional tips.",
    link: "/blog/spring-cleaning-checklist-ocala",
    readTime: "8 min read",
    gradient: "from-[#FF8057] to-[#ff6b47]",
    icon: "fa-solid fa-seedling"
  },
  {
    category: "MAINTENANCE GUIDE",
    title: "How Often Should You Deep Clean Your House?",
    description: "Evidence-based cleaning schedules for different home types, family sizes, and lifestyles. Learn when to tackle deep cleaning tasks.",
    link: "/blog/how-often-deep-clean-house",
    readTime: "6 min read",
    gradient: "from-[#305048] to-[#1a3329]",
    icon: "fa-solid fa-clock"
  },
  {
    category: "MOVING GUIDE",
    title: "Complete Move-In Cleaning Checklist",
    description: "Step-by-step guide to sanitizing and preparing your new home before moving in. Essential for health and peace of mind.",
    link: "/blog/move-in-cleaning-checklist",
    readTime: "7 min read",
    gradient: "from-[#4a90e2] to-[#357abd]",
    icon: "fa-solid fa-box-open"
  }
];

const commercialPosts = [
  {
    category: "BUSINESS GUIDE",
    title: "Commercial Office Cleaning: Complete Guide for Business Owners",
    description: "Everything you need to know about maintaining a professional, healthy workplace environment for your team and clients.",
    link: "/blog/commercial-office-cleaning-guide",
    readTime: "10 min read",
    gradient: "from-[#6c7b7f] to-[#5a6568]",
    icon: "fa-solid fa-briefcase"
  },
  {
    category: "MEDICAL FACILITIES",
    title: "Medical Office Cleaning Standards & Best Practices",
    description: "Essential cleaning protocols for healthcare facilities, including infection control and compliance requirements.",
    link: "/blog/medical-office-cleaning-standards",
    readTime: "12 min read",
    gradient: "from-[#28a745] to-[#1e7e34]",
    icon: "fa-solid fa-hospital"
  }
];

const seasonalPosts = [
  {
    category: "SEASONAL GUIDE",
    title: "Summer Cleaning Tips for Florida Homes",
    description: "Beat the heat and humidity with these specialized summer cleaning strategies for Florida's unique climate challenges.",
    link: "/blog/summer-cleaning-tips-florida",
    readTime: "5 min read",
    gradient: "from-[#ffa500] to-[#ff8c00]",
    icon: "fa-solid fa-sun"
  },
  {
    category: "HOLIDAY PREP",
    title: "Holiday Cleaning: Prepare Your Home for Guests",
    description: "Timeline and checklist for getting your home guest-ready for the holiday season without the stress.",
    link: "/blog/holiday-cleaning-preparation",
    readTime: "6 min read",
    gradient: "from-[#dc143c] to-[#b22d3c]",
    icon: "fa-solid fa-gift"
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="cleaning tips, house cleaning guide, commercial cleaning tips, Ocala cleaning advice, cleaning blog, professional cleaning tips">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://palmacleaningco.com/blog/">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Blog",
        "name": "Palma Cleaning Blog",
        "description": "Expert cleaning tips, guides, and professional advice for residential and commercial cleaning in Ocala, Florida",
        "url": "https://palmacleaningco.com/blog/",
        "publisher": {
            "@type": "Organization",
            "name": "Palma Cleaning",
            "@id": "https://palmacleaningco.com/#organization",
            "logo": {
                "@type": "ImageObject",
                "url": "https://palmacleaningco.com/images/logo.jpg"
            }
        },
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "https://palmacleaningco.com/blog/"
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />
    <Navigation />

    <main>
        <!-- Hero Section -->
        <section class="bg-[#305048] text-white py-20 md:py-24">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">Cleaning Tips & Professional Guides</h1>
                <p class="text-xl mb-6 leading-relaxed">
                    Expert Advice from Ocala's Trusted Cleaning Professionals
                </p>
                <p class="text-white/90 mb-10 leading-relaxed text-lg max-w-2xl mx-auto">
                    Discover proven cleaning tips, maintenance guides, and industry insights to keep your home or business spotless. From seasonal deep cleaning to daily maintenance, we share the expertise that's helped hundreds of Ocala families and businesses.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                        Get Professional Cleaning
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border-2 border-[#305048] text-[#305048] bg-white px-10 py-3 rounded-md text-lg font-bold hover:bg-[#F4F7F6] transition-colors duration-300 inline-block">
                        Call (352) 764-4747
                    </a>
                </div>
            </div>
        </section>

        <!-- Blog Categories -->
        <section class="py-20 md:py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057] mb-3">Browse by Category</p>
                    <h2 class="text-3xl md:text-4xl font-bold text-[#305048]">Browse by Category</h2>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {categories.map((category) => (
                        <a href={category.link} class="bg-white rounded-2xl p-8 text-center shadow-lg border border-[#E3EAE8]/60 hover:shadow-xl transition duration-300 group">
                            <i class={`${category.icon} text-5xl text-[#FF8057] mb-6 group-hover:scale-110 transition-transform`}></i>
                            <h3 class="text-lg font-bold text-[#305048] mb-4">{category.title}</h3>
                            <p class="text-sm text-gray-600 mb-6 leading-relaxed">{category.description}</p>
                            <span class="text-[#FF8057] font-semibold text-sm group-hover:underline inline-block">View Articles →</span>
                        </a>
                    ))}
                </div>
            </div>
        </section>

        <!-- Latest Residential Articles -->
        <section class="py-24 bg-white" id="residential-posts">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Latest Articles</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Latest Residential Cleaning Articles</h2>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {residentialPosts.map((post) => (
                        <article class="bg-white rounded-2xl overflow-hidden shadow-lg border border-[#E3EAE8]/60 hover:shadow-xl transition duration-300">
                            <div class={`bg-gradient-to-br ${post.gradient} h-48 flex items-center justify-center text-white`}>
                                <i class={`${post.icon} text-5xl`}></i>
                            </div>
                            <div class="p-6">
                                <div class="text-[#FF8057] text-xs font-semibold uppercase tracking-wide mb-2">{post.category}</div>
                                <h3 class="text-xl font-bold text-[#305048] mb-3 leading-tight">{post.title}</h3>
                                <p class="text-gray-600 text-sm leading-relaxed mb-4">{post.description}</p>
                                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                                    <a href={post.link} class="text-[#FF8057] font-semibold text-sm hover:underline">Read More →</a>
                                    <span class="text-gray-400 text-xs">{post.readTime}</span>
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>

        <!-- Commercial Articles -->
        <section class="py-24 bg-[#F4F7F6]" id="commercial-posts">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Commercial Insights</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Commercial Cleaning Insights</h2>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
                    {commercialPosts.map((post) => (
                        <article class="bg-white rounded-2xl overflow-hidden shadow-lg border border-[#E3EAE8]/60 hover:shadow-xl transition duration-300">
                            <div class={`bg-gradient-to-br ${post.gradient} h-48 flex items-center justify-center text-white`}>
                                <i class={`${post.icon} text-5xl`}></i>
                            </div>
                            <div class="p-6">
                                <div class="text-[#FF8057] text-xs font-semibold uppercase tracking-wide mb-2">{post.category}</div>
                                <h3 class="text-xl font-bold text-[#305048] mb-3 leading-tight">{post.title}</h3>
                                <p class="text-gray-600 text-sm leading-relaxed mb-4">{post.description}</p>
                                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                                    <a href={post.link} class="text-[#FF8057] font-semibold text-sm hover:underline">Read More →</a>
                                    <span class="text-gray-400 text-xs">{post.readTime}</span>
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>

        <!-- Seasonal & Pro Tips -->
        <section class="py-24 bg-white" id="seasonal-posts">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Seasonal Tips</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Seasonal Cleaning & Pro Tips</h2>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
                    {seasonalPosts.map((post) => (
                        <article class="bg-white rounded-2xl overflow-hidden shadow-lg border border-[#E3EAE8]/60 hover:shadow-xl transition duration-300">
                            <div class={`bg-gradient-to-br ${post.gradient} h-48 flex items-center justify-center text-white`}>
                                <i class={`${post.icon} text-5xl`}></i>
                            </div>
                            <div class="p-6">
                                <div class="text-[#FF8057] text-xs font-semibold uppercase tracking-wide mb-2">{post.category}</div>
                                <h3 class="text-xl font-bold text-[#305048] mb-3 leading-tight">{post.title}</h3>
                                <p class="text-gray-600 text-sm leading-relaxed mb-4">{post.description}</p>
                                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                                    <a href={post.link} class="text-[#FF8057] font-semibold text-sm hover:underline">Read More →</a>
                                    <span class="text-gray-400 text-xs">{post.readTime}</span>
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready for Professional Cleaning?</h2>
                <p class="text-lg text-white/90 max-w-2xl mx-auto mb-8">
                    While these tips help maintain your space, nothing beats professional cleaning. Let Palma Cleaning handle the heavy lifting while you focus on what matters most.
                </p>
                <div class="flex flex-wrap justify-center gap-4 mb-8">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300 text-sm uppercase">
                        Book Professional Cleaning
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border border-white text-white font-bold py-4 px-10 rounded-md hover:bg-white hover:text-[#305048] transition duration-300 text-sm uppercase">
                        Call (352) 764-4747
                    </a>
                </div>
                <div class="max-w-2xl mx-auto bg-white/10 backdrop-blur rounded-xl p-6 border border-white/20">
                    <p class="text-white/90 font-semibold">
                        <i class="fa-solid fa-check-circle text-[#FF8057] mr-2"></i>
                        Licensed & Insured • Free Quotes • Satisfaction Guaranteed • Serving Ocala & Marion County
                    </p>
                </div>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
