---
// Senior Living and Assisted Care cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Senior Living & Assisted Care Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Gentle, respectful cleaning services for senior living facilities and assisted care communities in Ocala, FL. Licensed, insured, and trained in senior care environments.";

const services = [
  {
    title: "Resident Apartment Cleaning",
    icon: "fa-solid fa-home",
    description: "Comprehensive cleaning services for resident apartments with attention to safety and comfort.",
    items: [
      "Kitchen and bathroom sanitization",
      "Dusting and surface cleaning",
      "Floor care (carpet and hard surface)",
      "Window cleaning",
      "Trash removal",
      "Light fixture cleaning",
      "Respectful handling of personal items",
      "Flexible scheduling around resident routines"
    ]
  },
  {
    title: "Common Area Cleaning",
    icon: "fa-solid fa-users",
    description: "Maintain clean, welcoming common spaces where residents gather and socialize.",
    items: [
      "Dining room maintenance",
      "Activity and recreation rooms",
      "Lobbies and reception areas",
      "Hallways and corridors",
      "Elevators and stairwells",
      "Library and reading areas",
      "Fitness and wellness centers",
      "Outdoor patios and seating areas"
    ]
  },
  {
    title: "Medical & Care Areas",
    icon: "fa-solid fa-heart-pulse",
    description: "Specialized cleaning for medical stations, care offices, and health service areas.",
    items: [
      "Nurse station sanitization",
      "Medical equipment cleaning",
      "Examination room maintenance",
      "Pharmacy area cleaning",
      "Infection control protocols",
      "Hospital-grade disinfectants",
      "HIPAA-compliant service",
      "Biohazard waste handling"
    ]
  }
];

const whyChoose = [
  {
    icon: "fa-solid fa-heart",
    title: "Compassionate Service",
    copy: "Our team understands the unique needs of senior living environments and treats residents with dignity and respect."
  },
  {
    icon: "fa-solid fa-shield-halved",
    title: "Licensed & Insured",
    copy: "Fully licensed, bonded, and insured with specialized coverage for senior care facilities."
  },
  {
    icon: "fa-solid fa-user-check",
    title: "Background Checked",
    copy: "All team members undergo thorough background checks and training in senior care facility protocols."
  },
  {
    icon: "fa-solid fa-leaf",
    title: "Eco-Friendly Products",
    copy: "Safe, non-toxic cleaning products that protect resident health and indoor air quality."
  }
];

const additionalServices = [
  {
    icon: "fa-solid fa-utensils",
    title: "Dining Room Cleaning",
    copy: "Daily cleaning and sanitization of dining facilities and food service areas."
  },
  {
    icon: "fa-solid fa-spa",
    title: "Spa & Wellness Areas",
    copy: "Maintenance of spa, salon, and wellness center facilities."
  },
  {
    icon: "fa-solid fa-car",
    title: "Transportation Areas",
    copy: "Cleaning of shuttle bus interiors and transportation waiting areas."
  },
  {
    icon: "fa-solid fa-building",
    title: "Administrative Offices",
    copy: "Professional office cleaning for administrative and management areas."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="senior living cleaning Ocala FL, assisted care cleaning, retirement community cleaning, nursing home cleaning, senior facility cleaning">
    <link rel="canonical" href="https://palmacleaningco.com/senior-living-and-assisted-care">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
