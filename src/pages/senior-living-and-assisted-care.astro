        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Senior Living and Assisted Care Cleaning Services",
        "alternateName": ["Senior Facility Cleaning", "Assisted Living Cleaning", "Retirement Community Cleaning"],
        "description": "Gentle, respectful cleaning services for senior living facilities, assisted care communities, and retirement homes with specialized training in senior care environments.",
        "url": "https://palmacleaningco.com/senior-living-and-assisted-care",
        "provider": {
            "@type": ["LocalBusiness", "Service"],
            "name": "Palma Cleaning",
            "@id": "https://palmacleaningco.com/#organization",
            "telephone": "(352) 764-4747",
            "email": "hello@palmacleaningco.com",
            "url": "https://palmacleaningco.com",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Ocala",
                "addressRegion": "FL",
                "postalCode": "34471",
                "addressCountry": "US"
            },
            "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "5.0",
                "reviewCount": "147"
            }
        },
        "areaServed": [
            {
                "@type": "City",
                "name": "Ocala",
                "addressRegion": "FL",
                "addressCountry": "US"
            },
            {
                "@type": "AdministrativeArea",
                "name": "Marion County",
                "containedInPlace": "Florida",
                "addressCountry": "US"
            }
        ],
        "serviceType": "Senior Living Facility Cleaning",
        "category": ["Senior Care Cleaning", "Assisted Living Cleaning", "Retirement Community Cleaning", "Healthcare Facility Cleaning"],
        "availableChannel": {
            "@type": "ServiceChannel",
            "serviceUrl": "https://palmacleaningco.com/book-now",
            "servicePhone": "(352) 764-4747"
        },
        "hoursAvailable": [
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
                "opens": "08:00",
                "closes": "18:00"
            }
        ],
        "offers": [
            {
                "@type": "Offer",
                "name": "Resident Apartment Cleaning",
                "description": "Regular cleaning service for resident apartments",
                "priceRange": "$100-$300",
                "availability": "InStock"
            },
            {
                "@type": "Offer",
                "name": "Common Area Cleaning",
                "description": "Daily or weekly cleaning for common spaces and shared areas",
                "priceRange": "$200-$500",
                "availability": "InStock"
            },
            {
                "@type": "Offer",
                "name": "Medical Area Cleaning",
                "description": "Specialized cleaning for medical stations and care areas",
                "priceRange": "$150-$400",
                "availability": "InStock"
            }
        ],
        "isRelatedTo": [
            {
                "@type": "Service",
                "name": "Commercial Cleaning",
                "url": "https://palmacleaningco.com/commercial-cleaning"
