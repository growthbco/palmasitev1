const description = "Learn about Palma Cleaning's story, values, and commitment to providing exceptional cleaning services throughout Ocala, Marion County, and The Villages. Licensed, insured, and trusted by hundreds of customers.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="about Palma Cleaning, professional cleaning Ocala, cleaning company Marion County, The Villages cleaning service, licensed cleaning service Florida">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/about">
    <link rel="stylesheet" href="/styles-clean.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Professional house and commercial cleaning services in Ocala, FL",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Ocala",
            "addressRegion": "FL",
            "postalCode": "34471",
            "addressCountry": "US"
        },
        "telephone": "(352) 764-4747",
        "url": "https://palmacleaningco.com/about",
        "foundingDate": "2020",
        "sameAs": [
            "https://www.facebook.com/palmacleaningco",
            "https://www.instagram.com/palmacleaningco"
        ],
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "29.1872",
            "longitude": "-82.1401"
        },
        "openingHours": "Mo-Fr 08:00-18:00",
        "priceRange": "$$"
    }
    </script>
</head>
<body>
    <Navigation />

    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">About Palma Cleaning</h1>
                <p class="hero-subtitle">Your Trusted Cleaning Partner in Ocala & The Villages</p>
                <p class="hero-description">Since 2020, we've been providing exceptional cleaning services to families and businesses throughout Central Florida with professionalism, reliability, and care.</p>
            </div>
            <div class="hero-image">
                <div class="hero-placeholder">
                    <i class="fas fa-heart"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="about" id="story">
        <div class="container">
            <h2 class="section-title">Our Story</h2>
            <div class="about-content">
                <div class="about-text">
                    <p class="about-intro">Founded with a passion for helping busy families and professionals reclaim their valuable time.</p>
                    <p>Palma Cleaning began as a simple idea: everyone deserves to come home to a clean, comfortable space without the stress of maintaining it themselves. What started as a small local service has grown into one of the most trusted cleaning companies serving Ocala, Marion County, and The Villages.</p>
                    <p>Our founder recognized that life in Florida means spending time enjoying the outdoors, family activities, golf, and community eventsâ€”not scrubbing floors and cleaning bathrooms. That's why we've built our business around reliability, quality, and genuine care for our customers and their homes.</p>
                    <p>Today, we're proud to serve hundreds of satisfied customers with the same commitment to excellence that started our journey.</p>
                </div>
                <div class="about-stats">
                    <div class="stat">
                        <h3>4+</h3>
                        <p>Years in Business</p>
                    </div>
                    <div class="stat">
                        <h3>500+</h3>
                        <p>Happy Customers</p>
                    </div>
                    <div class="stat">
                        <h3>98%</h3>
                        <p>Customer Retention Rate</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="services" style="background: #f8fafa;">
        <div class="container">
            <h2 class="section-title">Our Values</h2>
            <div class="services-grid">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h3>Trust & Reliability</h3>
                    <p>We understand that inviting someone into your home or business requires trust. All our team members are thoroughly background-checked, trained, and committed to maintaining the highest standards.</p>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-award"></i>
                    </div>
                    <h3>Quality Excellence</h3>
                    <p>We take pride in our work and attention to detail. Every cleaning is performed to our exacting standards, and we're not satisfied until you are completely happy with the results.</p>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h3>Personal Care</h3>
                    <p>Your home is your sanctuary, and your business reflects your professionalism. We treat every space with the respect and care it deserves, as if it were our own.</p>
                </div>
                
                <div class="service-card featured">
                    <div class="service-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h3>Environmental Responsibility</h3>
                    <p>We offer eco-friendly cleaning options and use products that are safe for your family, pets, and the environment. Clean homes shouldn't come at the cost of our planet's health.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="about">
        <div class="container">
            <h2 class="section-title">Why Choose Palma Cleaning?</h2>
            <div style="max-width: 800px; margin: 0 auto;">
                <div style="display: grid; gap: 2rem; margin-bottom: 3rem;">
                    <div style="background: white; padding: 2rem; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
                        <h4 style="color: #ff8057; margin-bottom: 1rem; display: flex; align-items: center;"><i class="fas fa-shield-alt" style="margin-right: 0.5rem;"></i>Licensed & Insured</h4>
                        <p style="color: #666; line-height: 1.6;">We're fully licensed and carry comprehensive general liability and bonding insurance for your complete peace of mind. Your property and belongings are protected.</p>
                    </div>
                    
                    <div style="background: white; padding: 2rem; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
                        <h4 style="color: #ff8057; margin-bottom: 1rem; display: flex; align-items: center;"><i class="fas fa-users" style="margin-right: 0.5rem;"></i>Experienced Team</h4>
                        <p style="color: #666; line-height: 1.6;">Our cleaning professionals are experienced, trained in our quality standards, and committed to providing consistent, excellent service every time.</p>
                    </div>
                    
                    <div style="background: white; padding: 2rem; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
                        <h4 style="color: #ff8057; margin-bottom: 1rem; display: flex; align-items: center;"><i class="fas fa-clock" style="margin-right: 0.5rem;"></i>Flexible Scheduling</h4>
                        <p style="color: #666; line-height: 1.6;">We work around your schedule with flexible appointment times. Whether you need weekly, bi-weekly, monthly, or one-time service, we accommodate your needs.</p>
                    </div>
                    
                    <div style="background: white; padding: 2rem; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
                        <h4 style="color: #ff8057; margin-bottom: 1rem; display: flex; align-items: center;"><i class="fas fa-map-marker-alt" style="margin-right: 0.5rem;"></i>Local Knowledge</h4>
                        <p style="color: #666; line-height: 1.6;">As a local company, we understand the unique needs of Florida living, from managing humidity and dust to working with community-specific requirements like The Villages' golf cart access.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="areas" style="background: #f8fafa;">
        <div class="container">
            <h2 class="section-title">Proudly Serving Central Florida</h2>
            <div class="areas-grid">
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Ocala & Marion County</h4>
                    <p>Our home base, serving downtown Ocala and all surrounding Marion County communities with reliable, professional cleaning services.</p>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> The Villages</h4>
                    <p>Specialized service for Florida's Premier Active Adult Community, including all village centers and golf course neighborhoods.</p>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Premium Communities</h4>
                    <p>Expert cleaning for upscale communities like Stone Creek, Oak Run, and neighborhoods near the World Equestrian Center.</p>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Surrounding Areas</h4>
                    <p>Extended service to Belleview, Dunnellon, Silver Springs, and other Central Florida communities.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="services" style="background: #f8fafa; padding: 3rem 0;">
        <div class="container">
            <h2 class="section-title">What Our Customers Say</h2>
            <div style="max-width: 1000px; margin: 0 auto;">
                <script type='text/javascript' src='https://link.palmacleaningco.com/reputation/assets/review-widget.js'></script>
                <iframe class='lc_reviews_widget' src='https://link.palmacleaningco.com/reputation/widgets/review_widget/mAdkXDEE8QQPYfj1uzSF?widgetId=689752c11080b4d725e2dadc' frameborder='0' scrolling='no' style='min-width: 100%; width: 100%; min-height: 400px; border-radius: 15px;'></iframe>
            </div>
        </div>
    </section>

    <section class="contact" style="padding: 4rem 0;">
        <div class="container">
            <h2 class="section-title">Ready to Experience the Palma Difference?</h2>
            <div style="text-align: center; max-width: 600px; margin: 0 auto;">
                <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">Join hundreds of satisfied customers who trust Palma Cleaning for their home and business cleaning needs. Get your free quote today!</p>
                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                    <a href="/quote" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
        </div>
    </section>

    <Footer />

    <script is:inline src="/script-clean.js"></script>
    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>