---
// About page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "About Palma Cleaning - Professional Cleaning Services in Ocala FL";
const description = "Learn about Palma Cleaning's story, values, and commitment to providing exceptional cleaning services throughout Ocala, Marion County, and The Villages. Licensed, insured, and trusted by hundreds of customers.";

const stats = [
  { value: "4+", label: "Years Serving Marion County" },
  { value: "500+", label: "Recurring & One-Time Clients" },
  { value: "98%", label: "Customer Retention Rate" }
];

const values = [
  {
    icon: "fa-solid fa-handshake",
    title: "Trust & Reliability",
    description: "Background-checked, W-2 team members who arrive on time, every time."
  },
  {
    icon: "fa-solid fa-award",
    title: "Quality Excellence",
    description: "Checklist-driven cleanings backed by our 48-hour satisfaction guarantee."
  },
  {
    icon: "fa-solid fa-heart",
    title: "Personal Care",
    description: "Your home or business is cleaned with the same respect we give our own spaces."
  },
  {
    icon: "fa-solid fa-leaf",
    title: "Eco-Friendly Options",
    description: "Green products available upon request to protect families, pets, and the planet."
  }
];

const differentiators = [
  {
    icon: "fa-solid fa-shield-halved",
    title: "Licensed & Insured",
    description: "Full liability, bonding, and workers’ comp coverage for total peace of mind."
  },
  {
    icon: "fa-solid fa-users",
    title: "Experienced Team",
    description: "Locally hired professionals trained on Palma Cleaning’s standards and processes."
  },
  {
    icon: "fa-solid fa-clock",
    title: "Flexible Scheduling",
    description: "Weekly, bi-weekly, monthly, move-in/out, post-construction, and same-day options."
  },
  {
    icon: "fa-solid fa-map-location-dot",
    title: "Local Expertise",
    description: "We know how to clean for Florida humidity, equestrian estates, and HOA requirements."
  }
];

const coverage = [
  {
    icon: "fa-solid fa-map-marker-alt",
    title: "Ocala & Marion County",
    description: "Downtown Ocala, Golden Hills, Stone Creek, Oak Run, and every community nearby."
  },
  {
    icon: "fa-solid fa-person-walking",
    title: "The Villages",
    description: "From Spanish Springs to Brownwood—golf cart friendly crews ready to help."
  },
  {
    icon: "fa-solid fa-horse",
    title: "Equestrian Estates",
    description: "WEC, barns, tack rooms, and luxury acreage properties receive tailored care."
  },
  {
    icon: "fa-solid fa-water",
    title: "Greater Central Florida",
    description: "Dunnellon, Belleview, Silver Springs, Rainbow Springs, and expanding routes."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="about Palma Cleaning, professional cleaning Ocala, cleaning company Marion County, The Villages cleaning service, licensed cleaning service Florida">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://palmacleaningco.com/about">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Professional house and commercial cleaning services in Ocala, FL",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Ocala",
            "addressRegion": "FL",
            "postalCode": "34471",
            "addressCountry": "US"
        },
        "telephone": "(352) 764-4747",
        "url": "https://palmacleaningco.com/about",
        "foundingDate": "2020",
        "sameAs": [
            "https://www.facebook.com/palmacleaningco",
            "https://www.instagram.com/palmacleaningco"
        ],
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "29.1872",
            "longitude": "-82.1401"
        },
        "openingHours": "Mo-Fr 08:00-18:00",
        "priceRange": "$$"
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#F4F7F6]">
            <div class="container mx-auto px-6 py-20 grid grid-cols-1 lg:grid-cols-[1.3fr,1fr] gap-12 items-center">
                <div class="space-y-6 text-center lg:text-left">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">About Us</p>
                    <h1 class="text-4xl md:text-5xl font-bold leading-tight">Your Trusted Cleaning Partner in Ocala & The Villages</h1>
                    <p class="text-lg text-gray-600 max-w-2xl">Since 2020, Palma Cleaning has helped busy families, professionals, and property managers reclaim their time with dependable, high-touch cleaning services.</p>
                    <div class="flex flex-wrap justify-center lg:justify-start gap-4">
                        <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300">Book Now</a>
                        <a href="tel:+13527644747" class="border border-[#305048] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#305048] hover:text-white transition duration-300">Call (352) 764-4747</a>
                    </div>
                </div>
                <div class="hidden lg:flex">
                    <div class="bg-[#305048] text-white rounded-2xl p-10 shadow-2xl flex flex-col gap-6">
                        <h2 class="text-2xl font-bold">Our Promise</h2>
                        <p class="text-sm text-white/80">Licensed. Insured. Background-checked. Every visit is documented, inspected, and guaranteed.</p>
                        <ul class="space-y-3 text-white/80 text-sm">
                            <li class="flex items-center gap-3"><i class="fa-solid fa-circle-check text-[#FF8057]"></i> Dedicated support for recurring clients</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-circle-check text-[#FF8057]"></i> Eco-friendly products available</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-circle-check text-[#FF8057]"></i> Satisfaction follow-ups after every clean</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Story + Stats -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-[1.2fr,0.8fr] gap-12 items-start">
                <div class="space-y-5">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Our Story</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Rooted in Central Florida, Dedicated to Quality</h2>
                    <p class="text-gray-600 leading-relaxed">Palma Cleaning began with a simple idea: everyone deserves to come home to a clean, comfortable space without sacrificing their weekends. What started as a small family business has grown into one of the most trusted cleaning companies across Ocala, The Villages, and the World Equestrian Center area.</p>
                    <p class="text-gray-600 leading-relaxed">We combine hospitality-level detail with the reliability of a professional service—checklists, inspections, and communication keep every visit consistent. Whether we're preparing a luxury estate for guests or supporting a busy family schedule, our mission is to deliver peace of mind.</p>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-1 gap-4">
                    {stats.map((stat) => (
                        <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-xl p-8 text-center shadow-sm" key={stat.label}>
                            <p class="text-3xl font-bold text-[#FF8057]">{stat.value}</p>
                            <p class="mt-2 text-sm text-gray-600">{stat.label}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Values -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Our Values</p>
                    <h2 class="text-3xl md:text-4xl font-bold">What Guides Every Cleaning</h2>
                    <p class="mt-4 text-gray-600">We believe great cleaning is built on trust, transparency, and a genuine desire to care for the spaces our clients love most.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                    {values.map((value) => (
                        <div class="bg-white border border-[#E3EAE8]/60 rounded-2xl p-8 shadow-sm hover:shadow-xl hover:-translate-y-1 transition" key={value.title}>
                            <div class="flex items-center gap-4">
                                <span class="w-12 h-12 rounded-full bg-[#F4F7F6] flex items-center justify-center text-[#FF8057]"><i class={`${value.icon} text-xl`}></i></span>
                                <h3 class="text-xl font-semibold">{value.title}</h3>
                            </div>
                            <p class="mt-4 text-sm text-gray-600 leading-relaxed">{value.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Differentiators -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Why Palma Cleaning?</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Licensed • Insured • Locally Trusted</h2>
                    <p class="mt-4 text-gray-600">From luxury estates to short-term rentals, our crews are prepared for every detail—professional equipment, vetted checklists, and flexible scheduling put you in control.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                    {differentiators.map((item) => (
                        <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-2xl p-8 shadow-sm" key={item.title}>
                            <div class="flex items-center gap-4">
                                <span class="w-12 h-12 rounded-full bg-white flex items-center justify-center text-[#FF8057]"><i class={`${item.icon} text-xl`}></i></span>
                                <h3 class="text-xl font-semibold">{item.title}</h3>
                            </div>
                            <p class="mt-4 text-sm text-gray-600 leading-relaxed">{item.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Coverage -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Serving Central Florida</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Proudly Supporting Your Community</h2>
                    <p class="mt-4 text-gray-600">Our teams are routed daily across Ocala, The Villages, and surrounding areas. If you're nearby, chances are we're already cleaning for your neighbors.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                    {coverage.map((item) => (
                        <div class="bg-white border border-[#E3EAE8]/60 rounded-2xl p-8 shadow-sm" key={item.title}>
                            <h3 class="text-xl font-semibold flex items-center gap-2"><i class={`${item.icon} text-[#FF8057]`}></i>{item.title}</h3>
                            <p class="mt-3 text-sm text-gray-600 leading-relaxed">{item.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-24 bg-[#FF8057]">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold text-[#305048]">Let’s Build Your Cleaning Plan</h2>
                <p class="mt-4 text-[#305048]/90 text-lg max-w-2xl mx-auto">Tell us about your home or business, and we’ll customize a schedule, assign the right team, and confirm availability in your community.</p>
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#305048] text-white font-bold py-4 px-10 rounded-md hover:bg-[#305048]/90 transition duration-300 text-sm uppercase"><i class="fa-solid fa-calendar-check mr-2"></i>Book Now</a>
                    <a href="tel:+13527644747" class="bg-transparent text-[#305048] font-bold py-4 px-10 rounded-md border border-[#305048] transition duration-300 text-sm uppercase"><i class="fa-solid fa-phone mr-2"></i>Call (352) 764-4747</a>
                </div>
                <p class="mt-6 text-[#305048]/80 text-sm">Response within 24 hours • Licensed & Insured • Satisfaction Guaranteed</p>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>