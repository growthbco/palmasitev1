---
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Book Now - Schedule Your Cleaning Service | Palma Cleaning - Ocala FL";
const description = "Book your cleaning service online! Easy booking form for house cleaning, commercial cleaning, and specialized services in Ocala, Marion County, and The Villages.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="book cleaning service Ocala FL, schedule cleaning Marion County, book house cleaning The Villages, online cleaning booking">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/book-now">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script src="https://convertlabs.io/js/booking_embed.js"></script>
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Book your cleaning service online for professional cleaning services in Ocala, FL",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Ocala",
            "addressRegion": "FL",
            "postalCode": "34471",
            "addressCountry": "US"
        },
        "telephone": "(352) 764-4747",
        "email": "hello@palmacleaningco.com",
        "url": "https://palmacleaningco.com/book-now",
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": "29.1872",
            "longitude": "-82.1401"
        },
        "openingHours": "Mo-Fr 08:00-18:00",
        "priceRange": "$$"
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#F4F7F6]">
            <div class="container mx-auto px-6 py-20 grid grid-cols-1 lg:grid-cols-[1.5fr,1fr] gap-12 items-center">
                <div class="space-y-6 text-center lg:text-left">
                    <h1 class="text-4xl md:text-5xl font-bold leading-tight">Book Your Cleaning Service</h1>
                    <p class="text-lg text-gray-600 max-w-2xl">Professional cleaning services for Ocala, Marion County, and The Villages. Choose your service, select your preferred date and time, and we'll handle the rest.</p>
                    <div class="flex flex-wrap justify-center lg:justify-start gap-4">
                        <a href="#booking" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300">Start Booking</a>
                        <a href="tel:+13527644747" class="border border-[#305048] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#305048] hover:text-white transition duration-300">Call (352) 764-4747</a>
                    </div>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-6">
                        <div class="bg-white rounded-xl shadow-sm p-6 text-left">
                            <i class="fa-solid fa-bolt text-[#FF8057] text-2xl"></i>
                            <p class="mt-3 font-semibold">Instant Booking</p>
                            <p class="mt-1 text-sm text-gray-600">Select the service and time that work best for you.</p>
                        </div>
                        <div class="bg-white rounded-xl shadow-sm p-6 text-left">
                            <i class="fa-solid fa-calendar-check text-[#FF8057] text-2xl"></i>
                            <p class="mt-3 font-semibold">Easy Scheduling</p>
                            <p class="mt-1 text-sm text-gray-600">Automated reminders and flexible options.</p>
                        </div>
                        <div class="bg-white rounded-xl shadow-sm p-6 text-left">
                            <i class="fa-solid fa-shield-halved text-[#FF8057] text-2xl"></i>
                            <p class="mt-3 font-semibold">Licensed & Insured</p>
                            <p class="mt-1 text-sm text-gray-600">Trusted, background-checked professionals.</p>
                        </div>
                        <div class="bg-white rounded-xl shadow-sm p-6 text-left">
                            <i class="fa-solid fa-star text-[#FF8057] text-2xl"></i>
                            <p class="mt-3 font-semibold">5-Star Rated</p>
                            <p class="mt-1 text-sm text-gray-600">Loved by families and businesses across Marion County.</p>
                        </div>
                    </div>
                </div>
                <div class="hidden lg:block">
                    <div class="bg-[#305048] text-white rounded-2xl p-10 shadow-2xl">
                        <h2 class="text-2xl font-bold">What you get</h2>
                        <ul class="mt-6 space-y-3 text-white/80 text-sm">
                            <li class="flex items-center gap-3"><i class="fa-solid fa-circle-check text-[#FF8057]"></i> Licensed & insured cleaning pros</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-circle-check text-[#FF8057]"></i> Eco-friendly products on request</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-circle-check text-[#FF8057]"></i> 48-hour satisfaction guarantee</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-circle-check text-[#FF8057]"></i> Same-day and weekend availability</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Booking Form -->
        <section id="booking" class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-5xl mx-auto bg-white border border-[#E3EAE8]/60 rounded-2xl shadow-2xl p-8 md:p-12">
                    <div class="text-center max-w-2xl mx-auto">
                        <h2 class="text-3xl font-bold">Schedule Your Cleaning</h2>
                        <p class="mt-4 text-gray-600">Pick your service type, choose a time that fits your schedule, and we'll confirm right away.</p>
                    </div>
                    <iframe src="https://convertlabs.io/booking_form/3473" frameborder="0" scrolling="auto" class="w-full h-[1400px] min-h-[1400px] mt-10 rounded-xl border-0 shadow-lg"></iframe>
                </div>
            </div>
        </section>

        <!-- Steps -->
        <section class="bg-[#305048] py-24 text-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <h2 class="text-3xl font-bold">What Happens Next?</h2>
                    <p class="mt-4 text-white/80">A seamless process from booking to follow-up, designed for busy families and professionals.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-8">
                    {["Book Online", "Confirmation", "We Clean!", "Follow-Up"].map((title, index) => (
                        <div class="bg-white/10 backdrop-blur rounded-2xl p-8 text-center shadow-lg" key={title}>
                            <div class="w-14 h-14 mx-auto rounded-full bg-[#FF8057] text-[#305048] font-bold flex items-center justify-center text-xl">{index + 1}</div>
                            <h3 class="mt-6 text-xl font-semibold">{title}</h3>
                            <p class="mt-3 text-sm text-white/80">
                                {index === 0 && "Pick your service, date, and time in less than a minute."}
                                {index === 1 && "Receive an instant confirmation with all booking details."}
                                {index === 2 && "Our trusted team arrives on time with everything needed."}
                                {index === 3 && "We check in afterwards to ensure everything is perfect."}
                            </p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Services -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <h2 class="text-3xl font-bold">Our Cleaning Services</h2>
                    <p class="mt-4 text-gray-600">Every booking can be customized for homes, luxury estates, rental turnovers, commercial offices, and more.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-xl p-8 text-left shadow-sm">
                        <i class="fa-solid fa-house text-[#FF8057] text-2xl"></i>
                        <h3 class="mt-4 text-xl font-semibold">Standard House Cleaning</h3>
                        <p class="mt-3 text-gray-600 text-sm">Weekly, bi-weekly, or monthly upkeep to keep everyday spaces fresh.</p>
                    </div>
                    <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-xl p-8 text-left shadow-sm">
                        <i class="fa-solid fa-sparkles text-[#FF8057] text-2xl"></i>
                        <h3 class="mt-4 text-xl font-semibold">Deep & Move-In/Out</h3>
                        <p class="mt-3 text-gray-600 text-sm">Top-to-bottom detailing, including inside appliances, baseboards, and cabinetry.</p>
                    </div>
                    <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-xl p-8 text-left shadow-sm">
                        <i class="fa-solid fa-briefcase text-[#FF8057] text-2xl"></i>
                        <h3 class="mt-4 text-xl font-semibold">Commercial & Specialty</h3>
                        <p class="mt-3 text-gray-600 text-sm">Office, post-construction, equestrian estates, and short-term rental turnovers.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Support -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <h2 class="text-3xl font-bold">Need Help or Have Questions?</h2>
                    <p class="mt-4 text-gray-600">Our team is ready to help with custom requests, large properties, or scheduling support.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-white rounded-xl shadow-lg p-8 text-center border border-[#E3EAE8]/60">
                        <i class="fa-solid fa-phone text-[#FF8057] text-3xl"></i>
                        <h3 class="mt-4 text-xl font-semibold">Phone</h3>
                        <a href="tel:+13527644747" class="mt-2 block text-sm text-[#305048] hover:text-[#FF8057] transition">(352) 764-4747</a>
                        <p class="mt-2 text-sm text-gray-600">Call or text us anytime</p>
                    </div>
                    <div class="bg-white rounded-xl shadow-lg p-8 text-center border border-[#E3EAE8]/60">
                        <i class="fa-solid fa-envelope text-[#FF8057] text-3xl"></i>
                        <h3 class="mt-4 text-xl font-semibold">Email</h3>
                        <a href="mailto:hello@palmacleaningco.com" class="mt-2 block text-sm text-[#305048] hover:text-[#FF8057] transition">hello@palmacleaningco.com</a>
                        <p class="mt-2 text-sm text-gray-600">We reply within 24 hours</p>
                    </div>
                    <div class="bg-white rounded-xl shadow-lg p-8 text-center border border-[#E3EAE8]/60">
                        <i class="fa-solid fa-calendar-days text-[#FF8057] text-3xl"></i>
                        <h3 class="mt-4 text-xl font-semibold">Business Hours</h3>
                        <p class="mt-2 text-sm text-gray-600">Monday - Friday â€¢ 8:00 AM - 6:00 PM</p>
                        <p class="text-sm text-gray-600">Emergency weekend service available</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html> 