---
// Ocala Equestrian Cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const title = "Ocala Equestrian Property Cleaning | Palma Cleaning - Marion County FL";
const description = "Professional equestrian property cleaning for Ocala horse properties in Marion County, FL. Specialized cleaning for horse farms, barns, and equestrian facilities in Ocala - Horse Capital of the World.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="Ocala equestrian cleaning, Ocala horse property cleaning, Ocala barn cleaning, Ocala stable cleaning, Horse Capital cleaning Marion County FL">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/ocala-equestrian-cleaning">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/styles-clean.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Ocala Equestrian Property Cleaning",
        "description": "Professional cleaning services for Ocala equestrian properties and horse facilities in the Horse Capital of the World",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "url": "https://palmacleaningco.com"
        },
        "areaServed": {
            "@type": "Place",
            "name": "Ocala, Marion County, FL"
        },
        "offers": {
            "@type": "Offer",
            "description": "Horse property cleaning, barn cleaning, stable maintenance, and equestrian facility care in the Horse Capital of the World"
        }
    }
    </script>
</head>
<body>
    <Navigation />

    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">Ocala Equestrian Property Cleaning</h1>
                <p class="hero-subtitle">Specialized Cleaning for the Horse Capital of the World</p>
                <p class="hero-description">Professional equestrian property cleaning services designed for Ocala's world-renowned horse farms, training facilities, and breeding operations. We understand the unique needs of horse properties in the global center of thoroughbred breeding and training.</p>
                <div class="hero-buttons">
                    <a href="/contact" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
            <div class="hero-image">
                <div class="hero-placeholder">
                    <i class="fas fa-horse"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="services">
        <div class="container">
            <h2 class="section-title">Ocala Equestrian Cleaning Services</h2>
            <div style="max-width: 800px; margin: 0 auto 3rem;">
                <p style="font-size: 1.1rem; color: #666; text-align: center; line-height: 1.6;">Ocala is the Horse Capital of the World, home to world-class thoroughbred breeding and training operations. Our comprehensive cleaning services maintain the pristine conditions expected by international horse operations, professional trainers, and prestigious equestrian facilities.</p>
            </div>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-bottom: 3rem;">
                <div style="background: #f8fafa; padding: 2rem; border-radius: 15px;">
                    <h3 style="color: #2f5047; margin-bottom: 1rem;"><i class="fas fa-crown" style="color: #ff8057; margin-right: 0.5rem;"></i>World-Class Facilities</h3>
                    <ul style="color: #666; line-height: 1.8;">
                        <li><strong>Training Centers:</strong> Professional training facilities</li>
                        <li><strong>Breeding Operations:</strong> Premium breeding barns</li>
                        <li><strong>Show Facilities:</strong> Competition and show venues</li>
                        <li><strong>Estate Properties:</strong> Luxury equestrian estates</li>
                    </ul>
                </div>
                
                <div style="background: #f8fafa; padding: 2rem; border-radius: 15px;">
                    <h3 style="color: #2f5047; margin-bottom: 1rem;"><i class="fas fa-trophy" style="color: #ff8057; margin-right: 0.5rem;"></i>International Standards</h3>
                    <ul style="color: #666; line-height: 1.8;">
                        <li>Kentucky Derby winner care standards</li>
                        <li>International visitor-ready facilities</li>
                        <li>Professional photography preparation</li>
                        <li>Investment-grade property maintenance</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="contact" style="background: #f8fafa;">
        <div class="container">
            <h2 class="section-title">Ready for World-Class Ocala Equestrian Cleaning?</h2>
            <div style="text-align: center; max-width: 600px; margin: 0 auto;">
                <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">Maintain your Ocala equestrian property to world-class standards with our specialized cleaning services. Contact us for a customized cleaning plan for your Horse Capital property!</p>
                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin-bottom: 2rem;">
                    <a href="/contact" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
                <div style="background: white; padding: 1.5rem; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
                    <p style="color: #2f5047; font-weight: 500; margin: 0;">
                        <i class="fas fa-check-circle" style="color: #ff8057; margin-right: 0.5rem;"></i>
                        Licensed & Insured • Horse Capital Experienced • World-Class Standards
                    </p>
                </div>
            </div>
        </div>
    </section>

    <Footer />

    <script is:inline src="/script-clean.js"></script>
    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>