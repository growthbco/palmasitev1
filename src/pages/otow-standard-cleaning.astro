---
// OTOW Standard Cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const title = "OTOW Standard House Cleaning | Palma Cleaning - On Top of the World FL";
const description = "Regular house cleaning services for On Top of the World (OTOW) community in Florida. Weekly, bi-weekly, and monthly cleaning plans for OTOW condos and villas. Licensed & insured.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="OTOW house cleaning, OTOW standard cleaning, OTOW weekly cleaning, On Top of the World cleaning Florida">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/otow-standard-cleaning">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/styles-clean.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "OTOW Standard House Cleaning",
        "description": "Regular house cleaning services for On Top of the World community homes",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "url": "https://palmacleaningco.com"
        },
        "areaServed": {
            "@type": "Place",
            "name": "On Top of the World, Ocala, FL"
        },
        "offers": {
            "@type": "Offer",
            "description": "Weekly, bi-weekly, and monthly house cleaning plans"
        }
    }
    </script>
</head>
<body>
    <Navigation />

    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">OTOW Standard House Cleaning</h1>
                <p class="hero-subtitle">Regular Cleaning for On Top of the World's Active Community</p>
                <p class="hero-description">Professional standard house cleaning specifically designed for OTOW residents. Keep your condo or villa pristine with our reliable weekly, bi-weekly, or monthly cleaning service that complements your active adult lifestyle.</p>
                <div class="hero-buttons">
                    <a href="/contact" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
            <div class="hero-image">
                <div class="hero-placeholder">
                    <i class="fas fa-home"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="services">
        <div class="container">
            <h2 class="section-title">OTOW Standard Cleaning Service</h2>
            <div style="max-width: 800px; margin: 0 auto 3rem;">
                <p style="font-size: 1.1rem; color: #666; text-align: center; line-height: 1.6;">Our standard house cleaning service is perfectly tailored for OTOW's active adult community and premium lifestyle. We understand the needs of condos, villas, and the high standards that OTOW residents expect for their homes.</p>
            </div>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-bottom: 3rem;">
                <div style="background: #f8fafa; padding: 2rem; border-radius: 15px;">
                    <h3 style="color: #2f5047; margin-bottom: 1rem;"><i class="fas fa-calendar" style="color: #ff8057; margin-right: 0.5rem;"></i>Flexible Scheduling</h3>
                    <ul style="color: #666; line-height: 1.8;">
                        <li><strong>Weekly:</strong> Perfect for busy OTOW residents</li>
                        <li><strong>Bi-weekly:</strong> Most popular option for active lifestyles</li>
                        <li><strong>Monthly:</strong> Ideal for well-maintained homes</li>
                        <li><strong>Custom:</strong> We adapt to your travel and activities</li>
                    </ul>
                </div>
                
                <div style="background: #f8fafa; padding: 2rem; border-radius: 15px;">
                    <h3 style="color: #2f5047; margin-bottom: 1rem;"><i class="fas fa-shield-alt" style="color: #ff8057; margin-right: 0.5rem;"></i>OTOW Standards</h3>
                    <ul style="color: #666; line-height: 1.8;">
                        <li>Active adult community focused</li>
                        <li>Condo and villa specialized care</li>
                        <li>Guest-ready maintenance</li>
                        <li>Community compliance standards</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="about" style="background: #f8fafa;">
        <div class="container">
