---
// Belleview area landing page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Belleview Cleaning Services FL - Small Town House Cleaning | Palma Cleaning";
const description = "Professional house cleaning services for Belleview Florida residents. Small town charm with big city service quality. Serving families, professionals, and retirees in Marion County.";

const services = [
  {
    icon: "fa-solid fa-broom",
    title: "Family Home Cleaning",
    description: "Regular maintenance cleaning designed for Belleview's busy families and working professionals.",
    items: [
      "Flexible scheduling for school activities",
      "Child-safe cleaning products",
      "Homework area organization",
      "Pet-friendly service options",
      "Community event preparation"
    ],
    link: "/standard-cleaning"
  },
  {
    icon: "fa-solid fa-sparkles",
    title: "Small Town Deep Clean",
    description: "Comprehensive cleaning that gives Belleview homes the thorough attention they deserve.",
    items: [
      "Traditional home feature care",
      "Screen enclosure cleaning",
      "Seasonal deep sanitization",
      "Move-in preparation",
      "Holiday readiness service"
    ],
    link: "/deep-cleaning"
  },
  {
    icon: "fa-solid fa-users",
    title: "Community-Focused Service",
    description: "Personalized cleaning that understands Belleview's small-town values and community connections.",
    items: [
      "Neighbor referral rewards",
      "Flexible service adjustments",
      "Local community support",
      "Trusted relationship building",
      "Emergency cleaning response"
    ],
    link: "/services"
  }
];

const features = [
  {
    icon: "fa-solid fa-heart",
    title: "Small Town Service",
    description: "Friendly, relationship-based cleaning pros"
  },
  {
    icon: "fa-solid fa-shield-alt",
    title: "Licensed & Insured",
    description: "Peace of mind for every visit"
  },
  {
    icon: "fa-solid fa-user-check",
    title: "Background Checked",
    description: "Trusted professionals in your home"
  },
  {
    icon: "fa-solid fa-hand-holding-heart",
    title: "Community Trusted",
    description: "4+ years serving Belleview"
  }
];

const stats = [
  { number: "35+", label: "Belleview Homes" },
  { number: "4", label: "Years Serving Community" },
  { number: "5★", label: "Average Rating" }
];

const communityInsights = [
  {
    title: "Growing Community Character",
    description: "Belleview has grown from 4,492 residents in 2010 to 5,982 today. We adapt our services to families, professionals, and retirees who love the city's small-town charm."
  },
  {
    title: "Housing & Lifestyle",
    description: "Traditional Florida architecture, established landscaping, and outdoor living spaces require thoughtful cleaning routines that protect property value."
  },
  {
    title: "Working Families",
    description: "With a median age of 44 and 84% white-collar workforce, our flexible scheduling keeps up with busy commutes, school events, and community commitments."
  },
  {
    title: "Transportation Corridors",
    description: "Located along U.S. Routes 27/301/441, Belleview homes face extra dust from traffic and rural surroundings. We adjust cleaning frequencies accordingly."
  }
];

const seasonalNotes = [
  {
    icon: "fa-solid fa-sun",
    title: "Spring & Summer",
    description: "Outdoor events, sports, and vacations mean more visitors and community gatherings. We prep homes before parties and help catch up after busy weeks."
  },
  {
    icon: "fa-solid fa-leaf",
    title: "Fall & Winter",
    description: "Back-to-school routines and holiday entertaining keep households busy. We handle deep cleanings, guest prep, and post-event resets."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="Belleview cleaning services, Belleview house cleaning, Marion County cleaning, small town cleaning service, Belleview FL cleaning">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/belleview">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- Belleview Service Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "@id": "https://palmacleaningco.com/belleview-cleaning#service",
      "name": "Belleview Cleaning Services",
      "serviceType": "Residential Cleaning",
      "description": "Professional house cleaning services for Belleview Florida residents. Small town community cleaning specialists serving families, professionals, and retirees in Marion County.",
      "provider": {
        "@type": "LocalBusiness",
        "@id": "https://palmacleaningco.com/#business",
        "name": "Palma Cleaning",
        "url": "https://palmacleaningco.com",
        "telephone": "+1-352-764-4747",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "6494 SW 70th Cir",
          "addressLocality": "Ocala",
          "addressRegion": "FL",
          "postalCode": "34474",
          "addressCountry": "US"
        }
      },
      "areaServed": {
        "@type": "Place",
        "name": "Belleview",
        "addressLocality": "Marion County",
        "addressRegion": "FL",
        "addressCountry": "US"
      }
    }
    </script>

    <!-- FAQ Schema for Belleview -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Do you provide cleaning services in Belleview Florida?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, Palma Cleaning provides comprehensive house cleaning services throughout Belleview, Florida. We serve families, young professionals, and retirees in this charming Marion County community with small town values and personalized service."
          }
        },
        {
          "@type": "Question",
          "name": "What makes Belleview homes different for cleaning services?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Belleview's small town charm means many homes have unique character features, established landscaping, and close-knit neighborhood considerations. We provide personalized service that respects the community's friendly atmosphere while delivering professional cleaning results."
          }
        }
      ]
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />
    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#305048] text-white">
            <div class="container mx-auto px-6 py-24 text-center max-w-4xl">
                <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">City with Small Town Charm</p>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mt-4">Belleview Cleaning Services</h1>
                <p class="mt-6 text-white/90 text-lg">
                    Professional house cleaning for Belleview's families, professionals, and retirees. Local service, trusted team, and community-first care.
                </p>
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="border border-white text-white font-bold py-4 px-10 rounded-md hover:bg-white hover:text-[#305048] transition duration-300">
                        Call (352) 764-4747
                    </a>
                </div>
                <p class="mt-6 text-white/70 text-sm">Serving Belleview & Marion County • Licensed & Insured • 48-hour guarantee</p>
        </div>
    </section>

        <!-- Why Choose -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Why Belleview chooses Palma Cleaning</p>
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">Small-town values with professional standards</h2>
                    <p class="text-gray-600">
                        Belleview residents count on us for punctual pros, respectful communication, and the spotless results you need to keep up with family life, commutes, and community events.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="space-y-6">
                        <p class="text-gray-700 leading-relaxed">
                            Named after the French phrase for “beautiful view,” Belleview is a growing community where neighbors know each other by name. We deliver that same personal touch with modern systems, reminders, and detailed checklists so you always know what to expect.
                        </p>
                        <p class="text-gray-700 leading-relaxed">
                            Whether you're raising a family, running a business, or enjoying retirement, we adapt to your schedule and home style. From screened lanais and pool decks to homework stations and guest suites, we take care of the spaces that matter most.
                        </p>

                        <div class="grid grid-cols-2 gap-6">
                            {features.map((feature) => (
                                <div class="bg-[#F4F7F6] rounded-xl p-4 text-center border border-[#E3EAE8]/60">
                                    <div class="w-12 h-12 mx-auto rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mb-3">
                                        <i class={feature.icon}></i>
                        </div>
                                    <p class="text-sm font-semibold">{feature.title}</p>
                                    <p class="text-xs text-gray-600 mt-1">{feature.description}</p>
                        </div>
                            ))}
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-8">
                        {stats.map((stat) => (
                            <div class="bg-[#305048] text-white rounded-2xl p-8 text-center shadow-xl">
                                <div class="text-5xl font-bold text-[#FF8057] mb-2">{stat.number}</div>
                                <p class="text-white/90 font-semibold uppercase tracking-wide">{stat.label}</p>
                </div>
                        ))}
                </div>
            </div>
        </div>
    </section>

        <!-- Services -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Our Services</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Belleview cleaning packages</h2>
                    <p class="mt-4 text-gray-600">Customized plans for starter homes, established neighborhoods, and acreage properties.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {services.map((service) => (
                        <div class="bg-white rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60 hover:-translate-y-1 transition duration-300">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mb-6">
                                <i class={service.icon}></i>
                </div>
                            <h3 class="text-xl font-semibold text-[#305048]">{service.title}</h3>
                            <p class="mt-3 text-gray-600 text-sm">{service.description}</p>
                            <ul class="mt-6 space-y-2 text-sm text-gray-700">
                                {service.items.map((item) => (
                                    <li class="flex items-start gap-2">
                                        <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                        <span>{item}</span>
                                    </li>
                                ))}
                            </ul>
                            <a href={service.link} class="mt-6 inline-flex items-center gap-2 text-[#305048] font-semibold hover:text-[#FF8057] transition text-sm">
                                Learn more
                                <i class="fa-solid fa-arrow-right"></i>
                            </a>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Community Insights -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Belleview community insights</p>
                    <h2 class="text-3xl md:text-4xl font-bold">We live the pace of Belleview life</h2>
                    <p class="mt-4 text-gray-600">Local data helps us tailor service frequency, checklists, and communication for every household.</p>
                        </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {communityInsights.map((item) => (
                        <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-2xl p-6 hover:shadow-lg transition duration-300">
                            <h3 class="text-lg font-semibold text-[#305048] mb-2">{item.title}</h3>
                            <p class="text-gray-700 text-sm leading-relaxed">{item.description}</p>
                        </div>
                    ))}
            </div>
        </div>
    </section>

        <!-- Seasonal needs -->
        <section class="py-20 bg-[#305048] text-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Seasonal support</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Cleaning plans for Belleview seasons</h2>
                    <p class="mt-4 text-white/80">From spring festivals to holiday traditions, we build routines that keep up with your calendar.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {seasonalNotes.map((note) => (
                        <div class="bg-white/10 border border-white/20 rounded-2xl p-8 backdrop-blur">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mb-4">
                                <i class={note.icon}></i>
                    </div>
                            <h3 class="text-xl font-semibold">{note.title}</h3>
                            <p class="mt-3 text-white/80 text-sm leading-relaxed">{note.description}</p>
                </div>
                    ))}
            </div>
        </div>
    </section>

        <!-- Contact / Form -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Book your Belleview cleaning</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Tell us about your home</h2>
                    <p class="mt-4 text-gray-600">Same-day responses Monday–Friday. Licensed, insured, and trusted by Belleview neighbors.</p>
                </div>
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
                    <div class="bg-white rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60 space-y-6">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl">
                                <i class="fa-solid fa-phone"></i>
                            </div>
                        <div>
                                <p class="text-sm uppercase tracking-[0.2em] text-gray-500">Call or text</p>
                                <a href="tel:+13527644747" class="text-2xl font-bold text-[#305048] hover:text-[#FF8057] transition">(352) 764-4747</a>
                                <p class="text-gray-600 text-sm">Weekday response within hours</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl">
                                <i class="fa-solid fa-envelope"></i>
                    </div>
                        <div>
                                <p class="text-sm uppercase tracking-[0.2em] text-gray-500">Email</p>
                                <a href="mailto:hello@palmacleaningco.com" class="text-lg font-semibold text-[#305048] hover:text-[#FF8057] transition">hello@palmacleaningco.com</a>
                                <p class="text-gray-600 text-sm">Replies within 24 hours</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl">
                                <i class="fa-solid fa-map-marker-alt"></i>
                    </div>
                        <div>
                                <p class="text-sm uppercase tracking-[0.2em] text-gray-500">Service area</p>
                                <p class="text-lg font-semibold">Belleview & Marion County</p>
                                <p class="text-gray-600 text-sm">Local team, background checked</p>
                            </div>
                        </div>
                        <div class="bg-[#F4F7F6] rounded-xl p-4 border border-dashed border-[#305048]/30 text-sm text-gray-600">
                            ✓ Small town service ✓ Licensed & insured ✓ Community trusted
                        </div>
                    </div>
                    <div class="bg-white rounded-2xl p-4 shadow-xl border border-[#E3EAE8]/60">
                        <iframe
                            src="https://link.palmacleaningco.com/widget/form/aSlLmaqsq5CZ1gocNBlC"
                            title="Belleview Contact Form"
                            class="w-full min-h-[880px] rounded-2xl border-0 shadow-lg"
                            loading="lazy">
                        </iframe>
                        <p class="mt-4 text-center text-sm text-gray-500">Having trouble with the form? Call or text us at (352) 764-4747.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-6 text-center max-w-4xl border border-[#E3EAE8]/60 rounded-3xl shadow-2xl p-12">
                <h2 class="text-3xl md:text-4xl font-bold">Ready for a locally loved cleaning team?</h2>
                <p class="mt-4 text-gray-600">
                    Belleview residents trust Palma Cleaning for respectful service, reliable scheduling, and homes that feel peaceful after every visit.
                </p>
                <div class="mt-8 flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300 text-sm uppercase">Book now</a>
                    <a href="/" class="border border-[#305048] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#305048] hover:text-white transition duration-300 text-sm uppercase">Back to home</a>
            </div>
        </div>
    </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>