const services = [
  {
    icon: "fa-solid fa-horse",
    title: "Equestrian Facility Cleaning",
    description: "Horse-safe barn, stall, tack room, and training facility cleaning tailored to WEC standards.",
    items: [
      "Stall deep sanitizing & bedding reset",
      "Barn aisle, feed & wash area detailing",
      "Tack room and gear organization",
      "Arena-side dust mitigation",
      "Safe products for horses & pets"
    ],
    link: "/stone-creek-equestrian-cleaning"
  },
  {
    icon: "fa-solid fa-crown",
    title: "Luxury Estate Cleaning",
    description: "Concierge-style care for multimillion-dollar residences surrounding WEC.",
    items: [
      "Custom millwork & premium surfaces",
      "Trophy rooms & viewing lounges",
      "Outdoor pavilion & lanai care",
      "Event-ready guest suites",
      "Discrete, uniformed staff"
    ],
    link: "/standard-cleaning"
  },
  {
    icon: "fa-solid fa-trophy",
    title: "Event & Competition Prep",
    description: "Scalable teams for show weeks, sponsor entertaining, and off-season resets.",
    items: [
      "Pre-competition detailing",
      "Post-event turnover",
      "Sponsor & rider hospitality areas",
      "Short-notice scheduling",
      "Coordination with barn managers"
    ],
    link: "/services"
  }
];

const features = [
  {
    icon: "fa-solid fa-horse-head",
    title: "Equestrian Experts",
    description: "4+ years serving WEC properties"
  },
  {
    icon: "fa-solid fa-flask",
    title: "Horse-Safe Products",
    description: "Materials vetted with barn managers"
  },
  {
    icon: "fa-solid fa-crown",
    title: "Luxury Estate Trained",
    description: "Custom finishes & art collections"
  },
  {
    icon: "fa-solid fa-calendar-check",
    title: "Event Flexibility",
    description: "Competition-ready scheduling"
  }
];

const stats = [
  { number: "25+", label: "WEC Properties" },
  { number: "4", label: "Years Equestrian Experience" },
  { number: "100%", label: "Horse-Safe Cleaning" }
];

const insights = [
  {
    title: "3,000-acre lifestyle",
    description: "The WEC campus blends world-class arenas with luxury homes. Properties within 5 miles face arena dust, show traffic, and constant guest turnover."
  },
  {
    title: "Luxury + working barns",
    description: "Many estates pair marble kitchens with 20+ stall barns. We protect finishes indoors while keeping active equestrian spaces sanitary."
  },
  {
    title: "Event-driven rhythms",
    description: "Show weeks demand rapid turnarounds, rider accommodations, and extra staffing. Off-season is ideal for deep projects and renovations."
  },
  {
    title: "Air & health standards",
    description: "We manage dust control, HVAC filtration, and ventilation to protect riders, guests, and horses year-round."
  }
];

const seasonalNotes = [
  {
    icon: "fa-solid fa-medal",
    title: "Competition Season (Oct–Apr)",
    description: "Peak events bring international riders, sponsors, and media. We scale teams for daily service, VIP entertaining, and post-show resets."
  },
  {
    icon: "fa-solid fa-sun",
    title: "Off-Season (May–Sep)",
    description: "Ideal for deep cleaning barns, resurfacing guest suites, and prepping estates for the next circuit while managing Florida humidity."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="World Equestrian Center cleaning, WEC area cleaning, horse property cleaning Ocala, equestrian facility cleaning, horse barn cleaning, luxury home cleaning WEC">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/wec-area">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- WEC Area Service Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "@id": "https://palmacleaningco.com/wec-area#service",
      "name": "World Equestrian Center Area Cleaning Services",
      "serviceType": "Specialized Cleaning",
      "description": "Professional cleaning services for World Equestrian Center area properties including luxury homes, horse facilities, barns, and equestrian estates in Ocala Florida.",
      "provider": {
        "@type": "LocalBusiness",
        "@id": "https://palmacleaningco.com/#business",
        "name": "Palma Cleaning",
        "url": "https://palmacleaningco.com",
        "telephone": "+1-352-764-4747",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "6494 SW 70th Cir",
          "addressLocality": "Ocala",
          "addressRegion": "FL",
          "postalCode": "34474",
          "addressCountry": "US"
        }
      },
      "areaServed": {
        "@type": "Place",
        "name": "World Equestrian Center Area",
        "addressLocality": "Ocala",
        "addressRegion": "FL",
        "addressCountry": "US"
      }
    }
    </script>

    <!-- FAQ Schema for WEC Area -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Do you clean horse facilities and barns near World Equestrian Center?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, Palma Cleaning specializes in equestrian facility cleaning throughout the World Equestrian Center area. We clean horse barns, stalls, tack rooms, feed rooms, and training facilities using horse-safe products and specialized techniques."
          }
        },
        {
          "@type": "Question",
          "name": "What makes WEC area properties unique for cleaning services?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "World Equestrian Center area properties often combine luxury residential living with active horse facilities on the same property. This requires specialized knowledge of both high-end home cleaning and equestrian facility maintenance, managing dust from arenas and the unique challenges of horse country living."
          }
        }
      ]
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />
    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#1f2f2a] text-white">
            <div class="container mx-auto px-6 py-24 text-center max-w-5xl">
                <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">World Equestrian Center Area</p>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mt-4">Horse Property & Luxury Estate Cleaning</h1>
                <p class="mt-6 text-white/85 text-lg">
                    Trusted by multi-million dollar estates within 5 miles of WEC. We combine concierge-level residential service with equestrian facility expertise.
                </p>
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300">
                        Request Quote
                    </a>
                    <a href="tel:+13527644747" class="border border-white text-white font-bold py-4 px-10 rounded-md hover:bg-white hover:text-[#305048] transition duration-300">
                        Call (352) 764-4747
                    </a>
                </div>
                <p class="mt-6 text-sm text-white/70">Licensed & insured • Horse-safe products • NDA available on request</p>
            </div>
        </section>

        <!-- Why choose -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Why WEC owners trust us</p>
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">Luxury home polish with barn-level know-how</h2>
                    <p class="text-gray-600">We respect access protocols, coordinate with barn managers, and protect every surface— from marble foyers to European stalls.</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="space-y-6">
                        <p class="text-gray-700 leading-relaxed">
                            The World Equestrian Center spans 3,000 acres of arenas, hospitality, and private estates. Properties here battle arena dust, event traffic, and Florida humidity while showcasing impeccable interiors for riders, sponsors, and guests.
                        </p>
                        <p class="text-gray-700 leading-relaxed">
                            Our team has four consecutive show seasons under its belt. We understand how to time services around turnout schedules, manage separate teams for house vs. barn, and deliver flawless results while keeping horses calm.
                        </p>
                        <div class="grid grid-cols-2 gap-6">
                            {features.map((feature) => (
                                <div class="bg-[#F4F7F6] rounded-xl p-4 text-center border border-[#E3EAE8]/60">
                                    <div class="w-12 h-12 mx-auto rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mb-3">
                                        <i class={feature.icon}></i>
                                    </div>
                                    <p class="text-sm font-semibold">{feature.title}</p>
                                    <p class="text-xs text-gray-600 mt-1">{feature.description}</p>
                                </div>
                            ))}
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-8">
                        {stats.map((stat) => (
                            <div class="bg-[#305048] text-white rounded-2xl p-8 text-center shadow-xl">
                                <div class="text-5xl font-bold text-[#FF8057] mb-2">{stat.number}</div>
                                <p class="text-white/90 font-semibold uppercase tracking-wide">{stat.label}</p>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

        <!-- Services -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Specialized services</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Built for WEC estates & equestrian facilities</h2>
                    <p class="mt-4 text-gray-600">Concierge teams, NDA-compliant staff, and schedules that sync with competition calendars.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {services.map((service) => (
                        <div class="bg-white rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60 hover:-translate-y-1 transition duration-300">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mb-6">
                                <i class={service.icon}></i>
                            </div>
                            <h3 class="text-xl font-semibold text-[#305048]">{service.title}</h3>
                            <p class="mt-3 text-gray-600 text-sm">{service.description}</p>
                            <ul class="mt-6 space-y-2 text-sm text-gray-700">
                                {service.items.map((item) => (
                                    <li class="flex items-start gap-2">
                                        <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                        <span>{item}</span>
                                    </li>
                                ))}
                            </ul>
                            <a href={service.link} class="mt-6 inline-flex items-center gap-2 text-[#305048] font-semibold hover:text-[#FF8057] transition text-sm">
                                Learn more
                                <i class="fa-solid fa-arrow-right"></i>
                            </a>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Insights -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">World Equestrian Center insights</p>
                    <h2 class="text-3xl md:text-4xl font-bold">We live the WEC rhythm</h2>
                    <p class="mt-4 text-gray-600">Luxury residences, working barns, and international guests demand a cleaning partner who understands the stakes.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {insights.map((item) => (
                        <div class="bg-[#F4F7F6] rounded-2xl p-6 border border-[#E3EAE8]/60 hover:shadow-lg transition duration-300">
                            <h3 class="text-lg font-semibold text-[#305048] mb-2">{item.title}</h3>
                            <p class="text-gray-700 text-sm leading-relaxed">{item.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Seasonal support -->
        <section class="py-20 bg-[#1f2f2a] text-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Seasonal expertise</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Competition season vs. off-season</h2>
                    <p class="mt-4 text-white/80">We scale teams, adjust checklists, and coordinate with trainers so the property stays immaculate year-round.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {seasonalNotes.map((note) => (
                        <div class="bg-white/10 border border-white/20 rounded-2xl p-8 backdrop-blur">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mb-4">
                                <i class={note.icon}></i>
                            </div>
                            <h3 class="text-xl font-semibold">{note.title}</h3>
                            <p class="mt-3 text-white/80 text-sm leading-relaxed">{note.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Contact -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Request a WEC quote</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Tell us about your estate or facility</h2>
                    <p class="mt-4 text-gray-600">Dedicated coordinator, horse-safe protocol, and coordination with trainers, barn managers, and estate staff.</p>
                </div>
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
                    <div class="bg-white rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60 space-y-6">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl">
                                <i class="fa-solid fa-phone"></i>
                            </div>
                            <div>
                                <p class="text-sm uppercase tracking-[0.2em] text-gray-500">Call or text</p>
                                <a href="tel:+13527644747" class="text-2xl font-bold text-[#305048] hover:text-[#FF8057] transition">(352) 764-4747</a>
                                <p class="text-gray-600 text-sm">Weekday response within hours</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl">
                                <i class="fa-solid fa-envelope-open-text"></i>
                            </div>
                            <div>
                                <p class="text-sm uppercase tracking-[0.2em] text-gray-500">Email</p>
                                <a href="mailto:hello@palmacleaningco.com" class="text-lg font-semibold text-[#305048] hover:text-[#FF8057] transition">hello@palmacleaningco.com</a>
                                <p class="text-gray-600 text-sm">NDA available upon request</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl">
                                <i class="fa-solid fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <p class="text-sm uppercase tracking-[0.2em] text-gray-500">Service radius</p>
                                <p class="text-lg font-semibold">WEC campus & horse country estates</p>
                                <p class="text-gray-600 text-sm">Background checked, badged if needed</p>
                            </div>
                        </div>
                        <div class="bg-[#F4F7F6] rounded-xl p-4 border border-dashed border-[#305048]/30 text-sm text-gray-600">
                            ✓ Equestrian facility experts ✓ Horse-safe products ✓ Event-ready crews
                        </div>
                    </div>
                    <div class="bg-white rounded-2xl p-4 shadow-xl border border-[#E3EAE8]/60">
                        <iframe
                            src="https://link.palmacleaningco.com/widget/form/aSlLmaqsq5CZ1gocNBlC"
                            class="w-full h-[844px] rounded-xl border-0"
                            data-layout="{'id':'INLINE'}"
                            data-trigger-type="alwaysShow"
                            data-trigger-value=""
                            data-activation-type="alwaysActivated"
                            data-activation-value=""
                            data-deactivation-type="neverDeactivate"
                            data-deactivation-value=""
                            data-form-name="WEC Area Contact Form"
                            data-height="844"
                            data-form-id="aSlLmaqsq5CZ1gocNBlC"
                            title="WEC Area Contact Form">
                        </iframe>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-6 text-center max-w-4xl border border-[#E3EAE8]/60 rounded-3xl shadow-2xl p-12">
                <h2 class="text-3xl md:text-4xl font-bold">Protect your WEC investment</h2>
                <p class="mt-4 text-gray-600">From barn aisles to penthouse suites, Palma Cleaning keeps every square foot competition ready.</p>
                <div class="mt-8 flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300 text-sm uppercase">Schedule service</a>
                    <a href="/" class="border border-[#305048] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#305048] hover:text-white transition duration-300 text-sm uppercase">Back to home</a>
                </div>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>