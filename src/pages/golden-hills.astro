---
// Golden Hills area landing page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Golden Hills Cleaning Services Ocala FL - Northwest Ocala House Cleaning | Palma Cleaning";
const description = "Professional house cleaning services for Golden Hills community in northwest Ocala FL. All-age community cleaning specialists serving single-family homes and equestrian properties.";

const services = [
  {
    icon: "fa-solid fa-home",
    title: "Regular Family Home Cleaning",
    description: "Maintenance cleaning designed for Golden Hills' active families and all-age community lifestyle.",
    items: [
      "Horse country dust control",
      "Large home comprehensive cleaning",
      "Family-safe product usage",
      "Flexible scheduling for busy families",
      "Premium surface care"
    ],
    link: "/standard-cleaning"
  },
  {
    icon: "fa-solid fa-magic",
    title: "Luxury Home Deep Clean",
    description: "Comprehensive cleaning for Golden Hills' impressive homes with custom features and premium finishes.",
    items: [
      "Volume ceiling cleaning",
      "Custom millwork detailing",
      "Gourmet kitchen deep clean",
      "Multiple bathroom sanitization",
      "Guest area preparation"
    ],
    link: "/deep-cleaning"
  },
  {
    icon: "fa-solid fa-box-open",
    title: "Move-In/Move-Out Service",
    description: "Specialized cleaning for Golden Hills residents transitioning between these desirable northwest Ocala homes.",
    items: [
      "Large home preparation",
      "Real estate ready cleaning",
      "New home sanitization",
      "Property value protection",
      "Comprehensive documentation"
    ],
    link: "/move-in-out-cleaning"
  }
];

const features = [
  {
    icon: "fa-solid fa-home",
    title: "All-Age Community Specialists",
    description: "4+ years serving Golden Hills families"
  },
  {
    icon: "fa-solid fa-horse",
    title: "Horse Country Knowledge",
    description: "Specialized understanding of cleaning challenges"
  },
  {
    icon: "fa-solid fa-expand-arrows-alt",
    title: "Large Home Specialists",
    description: "Professional equipment for large homes"
  },
  {
    icon: "fa-solid fa-shield-check",
    title: "Licensed & Insured",
    description: "Fully licensed and insured"
  }
];

const stats = [
  {
    number: "40+",
    label: "Golden Hills Homes"
  },
  {
    number: "4",
    label: "Years Serving Community"
  },
  {
    number: "5★",
    label: "Star Reviews"
  }
];

const goldenHillsLiving = [
  {
    icon: "fa-solid fa-map-marker-alt",
    title: "Northwest Ocala Location",
    description: "Golden Hills' strategic location in northwest Ocala places residents within minutes of Marion County's premier horse farms and equestrian properties, creating unique cleaning challenges we've mastered through years of experience."
  },
  {
    icon: "fa-solid fa-home",
    title: "Luxury Home Architecture",
    description: "Golden Hills homes range from 2,650 to over 5,700 square feet with luxury finishes and premium materials that require specialized cleaning knowledge and professional-grade equipment."
  },
  {
    icon: "fa-solid fa-users",
    title: "All-Age Community",
    description: "Unlike age-restricted communities, Golden Hills welcomes families of all ages, creating diverse cleaning needs from busy families with children to retirees who've chosen this vibrant community."
  },
  {
    icon: "fa-solid fa-horse",
    title: "Horse Country Proximity",
    description: "Located just 10 minutes west of Interstate 75, homes are subject to both highway dust and agricultural particles from surrounding horse farms. Our cleaning protocols address these dual dust sources."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="Golden Hills cleaning services, Golden Hills house cleaning, northwest Ocala cleaning, Golden Hills Ocala cleaning, horse property cleaning">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://palmacleaningco.com/golden-hills">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Professional house cleaning services for Golden Hills community in northwest Ocala FL",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Ocala",
            "addressRegion": "FL",
            "addressCountry": "US"
        },
        "telephone": "(352) 764-4747",
        "url": "https://palmacleaningco.com/golden-hills",
        "areaServed": {
            "@type": "Place",
            "name": "Golden Hills, Ocala, FL"
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />
    <Navigation />

    <main>
        <!-- Hero Section -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">Golden Hills Cleaning Services</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Northwest Ocala All-Age Community House Cleaning
                </p>
                <p class="text-white/90 mb-8 leading-relaxed">
                    Professional house cleaning services tailored for Golden Hills' diverse community homes. We serve all-age families and horse property owners in northwest Ocala's premier residential area.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border border-white text-white px-10 py-3 rounded-md text-lg font-bold hover:bg-white hover:text-[#305048] transition-colors duration-300 inline-block">
                        Call (352) 764-4747
                    </a>
                </div>
            </div>
        </section>

        <!-- Why Choose Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Why Choose Us</p>
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">Golden Hills Community Cleaning: Northwest Ocala's Premier Residential Area</h2>
                    <p class="text-gray-600">
                        Golden Hills represents northwest Ocala's finest all-age residential community, where luxury single-family homes ranging from 2,650 to over 5,700 square feet demand cleaning services that understand both family living and the unique challenges of horse country proximity.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
                    <div class="space-y-6">
                        <p class="text-lg text-gray-700 leading-relaxed">
                            Located just 10 minutes west of Interstate 75, Golden Hills sits nestled among Marion County's finest horse farms and equestrian properties. Since 2020, Palma Cleaning has been the trusted cleaning service for Golden Hills residents who value quality and reliability.
                        </p>
                        <p class="text-lg text-gray-700 leading-relaxed">
                            Our deep understanding of northwest Ocala's unique environmental factors, combined with expertise in managing larger luxury homes, makes us the preferred choice for discerning homeowners in this prestigious community.
                        </p>

                        <div class="grid grid-cols-2 gap-6 mt-8">
                            {features.map((feature) => (
                                <div class="text-center p-4 bg-[#F4F7F6] rounded-xl">
                                    <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mx-auto mb-3">
                                        <i class={feature.icon}></i>
                                    </div>
                                    <h4 class="text-sm font-semibold text-[#305048] mb-1">{feature.title}</h4>
                                    <p class="text-xs text-gray-600">{feature.description}</p>
                                </div>
                            ))}
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-8">
                        {stats.map((stat) => (
                            <div class="bg-[#305048] text-white rounded-2xl p-8 text-center shadow-lg">
                                <div class="text-5xl font-bold text-[#FF8057] mb-2">{stat.number}</div>
                                <div class="text-white/90 font-semibold">{stat.label}</div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Our Services</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Golden Hills Cleaning Services</h2>
                    <p class="mt-4 text-gray-600">Professional cleaning solutions for Golden Hills homes.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
                    {services.map((service) => (
                        <div class="bg-white rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60 hover:shadow-xl transition duration-300">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mb-6">
                                <i class={service.icon}></i>
                            </div>
                            <h3 class="text-xl font-bold text-[#305048] mb-3">{service.title}</h3>
                            <p class="text-gray-600 mb-6 text-sm">{service.description}</p>
                            <ul class="space-y-2 mb-6">
                                {service.items.map((item) => (
                                    <li class="flex items-start gap-2 text-sm text-gray-700">
                                        <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                        <span>{item}</span>
                                    </li>
                                ))}
                            </ul>
                            <a href={service.link} class="block text-center bg-[#305048] text-white py-2 px-6 rounded-md hover:bg-[#305048]/90 transition duration-300 text-sm font-semibold">
                                Learn More
                            </a>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Understanding Golden Hills Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Understanding Golden Hills</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Understanding Golden Hills Living</h2>
                </div>

                <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
                    {goldenHillsLiving.map((item) => (
                        <div class="bg-[#F4F7F6] rounded-xl p-6 border border-[#E3EAE8]/60 hover:shadow-lg transition duration-300">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center">
                                    <i class={item.icon}></i>
                                </div>
                                <h4 class="text-lg font-bold text-[#305048]">{item.title}</h4>
                            </div>
                            <p class="text-gray-700 leading-relaxed text-sm">{item.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Experience Premium Golden Hills Cleaning?</h2>
                <p class="text-lg text-white/90 max-w-2xl mx-auto mb-8">
                    Join your Golden Hills neighbors who trust Palma Cleaning for exceptional cleaning services. Contact us today for your free quote!
                </p>
                <div class="flex flex-wrap justify-center gap-4 mb-8">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300 text-sm uppercase">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border border-white text-white font-bold py-4 px-10 rounded-md hover:bg-white hover:text-[#305048] transition duration-300 text-sm uppercase">
                        Call (352) 764-4747
                    </a>
                </div>
                <div class="max-w-2xl mx-auto bg-white/10 backdrop-blur rounded-xl p-6 border border-white/20">
                    <p class="text-white/90 font-semibold">
                        <i class="fa-solid fa-check-circle text-[#FF8057] mr-2"></i>
                        Licensed & Insured • Golden Hills Experienced • Satisfaction Guaranteed
                    </p>
                </div>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
