---
// Service areas page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Service Areas - House Cleaning Throughout Ocala FL | Palma Cleaning";
const description = "Professional house cleaning services throughout Ocala, Florida and surrounding areas including Stone Creek, Oak Run, The Villages, Golden Hills, and all Marion County communities.";

const areaGroups = [
  {
    title: "Ocala & Marion County",
    links: [
      { label: "Downtown Ocala", href: "/ocala" },
      { label: "Stone Creek", href: "/stone-creek" },
      { label: "Oak Run", href: "/oak-run" },
      { label: "Golden Hills", href: "/golden-hills" },
      { label: "Spruce Creek", href: null },
      { label: "All Marion County communities", href: null }
    ],
    description: "Full-service residential, commercial, and specialty cleaning across Ocala and Marion County."
  },
  {
    title: "The Villages",
    links: [
      { label: "Spanish Springs", href: "/the-villages" },
      { label: "Lake Sumter Landing", href: null },
      { label: "Brownwood Paddock Square", href: null },
      { label: "Golf cart communities", href: null },
      { label: "Villas & patio homes", href: null },
      { label: "Independent living residences", href: null }
    ],
    description: "Specialized cleaning for active adult neighborhoods, seasonal residents, and golf-course properties."
  },
  {
    title: "World Equestrian Center Area",
    links: [
      { label: "WEC Neighborhoods", href: "/wec-area" },
      { label: "Horse farms & barns", href: null },
      { label: "Luxury estates", href: null },
      { label: "Tack rooms & arenas", href: null },
      { label: "Show barns", href: null },
      { label: "Agricultural properties", href: null }
    ],
    description: "Equestrian-ready cleaning for barns, arenas, luxury estates, and event rentals surrounding WEC."
  },
  {
    title: "Surrounding Communities",
    links: [
      { label: "Belleview", href: "/belleview" },
      { label: "Dunnellon", href: "/dunnellon" },
      { label: "Rainbow Springs", href: null },
      { label: "Silver Springs", href: null },
      { label: "Citrus Springs", href: null },
      { label: "Custom routes available", href: null }
    ],
    description: "Extended service coverage throughout North Central Florida—ask if we can add your neighborhood."
  }
];

const featuredCommunities = [
  {
    icon: "fa-solid fa-house",
    title: "Stone Creek",
    description: "Luxury active-adult community with executive homes. Our team manages everything from routine upkeep to post-renovation detailing.",
    bullets: [
      "Luxury home maintenance programs",
      "Deep cleans before/after guests",
      "Move-in & staging support"
    ],
    href: "/stone-creek"
  },
  {
    icon: "fa-solid fa-golf-ball-tee",
    title: "Oak Run",
    description: "Golf community specialists offering snowbird prep, arrival cleanings, and flexible recurring care.",
    bullets: [
      "Seasonal opening & closing cleans",
      "Pet-friendly product options",
      "Easy scheduling for travel lifestyles"
    ],
    href: "/oak-run"
  },
  {
    icon: "fa-solid fa-horse",
    title: "Golden Hills",
    description: "Equestrian and estate properties receive barn-safe products and acreage-friendly cleaning plans.",
    bullets: [
      "Barn, tack room, and feed storage care",
      "Luxury estate housekeeping",
      "Show prep and event turnover"
    ],
    href: "/golden-hills"
  },
  {
    icon: "fa-solid fa-umbrella-beach",
    title: "Dunnellon & Rainbow Springs",
    description: "Vacation rentals, riverfront homes, and short-term getaway properties polished between stays.",
    bullets: [
      "Turnover and same-day services",
      "Laundry add-ons and linen resets",
      "Guest-ready staging"
    ],
    href: "/dunnellon"
  }
];

const coverageHighlights = [
  {
    icon: "fa-solid fa-route",
    title: "30+ Mile Radius",
    description: "Standard coverage extends across Greater Ocala. Ask about special trips beyond our core zone."
  },
  {
    icon: "fa-solid fa-clock",
    title: "Same-Day Options",
    description: "Emergency and last-minute cleanings available in most markets with no rush surcharges."
  },
  {
    icon: "fa-solid fa-gas-pump",
    title: "No Travel Fees",
    description: "Travel included for the majority of service calls within our Marion County footprint."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="house cleaning service areas Ocala FL, Stone Creek cleaning, Oak Run cleaning, The Villages cleaning, Marion County cleaning services">
    <link rel="canonical" href="https://palmacleaningco.com/service-areas">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "telephone": "(352) 764-4747",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Ocala",
            "addressRegion": "FL",
            "postalCode": "34471",
            "addressCountry": "US"
        },
        "areaServed": [
            { "@type": "City", "name": "Ocala", "sameAs": "https://en.wikipedia.org/wiki/Ocala,_Florida" },
            { "@type": "City", "name": "The Villages" },
            { "@type": "AdministrativeArea", "name": "Marion County", "containedInPlace": "Florida" }
        ],
        "serviceType": "House Cleaning Service",
        "description": "Professional house cleaning services throughout Ocala, Marion County, and surrounding areas including Stone Creek, Oak Run, The Villages, and more."
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#F4F7F6]">
            <div class="container mx-auto px-6 py-20 grid grid-cols-1 lg:grid-cols-[1.3fr,1fr] gap-12 items-center">
                <div class="space-y-6 text-center lg:text-left">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Serving Greater Ocala</p>
                    <h1 class="text-4xl md:text-5xl font-bold leading-tight">Service Areas Throughout Ocala & Marion County</h1>
                    <p class="text-lg text-gray-600 max-w-2xl">Palma Cleaning supports busy households, luxury estates, equestrian properties, and commercial spaces across Ocala, The Villages, Dunnellon, Belleview, and surrounding communities.</p>
                    <div class="flex flex-wrap justify-center lg:justify-start gap-4">
                        <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300">Book Now</a>
                        <a href="tel:+13527644747" class="border border-[#305048] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#305048] hover:text-white transition duration-300">Call (352) 764-4747</a>
                    </div>
                </div>
                <div class="hidden lg:block">
                    <div class="bg-[#305048] text-white rounded-2xl p-10 shadow-2xl">
                        <h2 class="text-2xl font-bold">Where we clean</h2>
                        <ul class="mt-6 space-y-3 text-white/80 text-sm">
                            <li class="flex items-center gap-3"><i class="fa-solid fa-location-dot text-[#FF8057]"></i> 30+ mile radius from Ocala</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-calendar-check text-[#FF8057]"></i> Same-day and weekend availability</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-star text-[#FF8057]"></i> Trusted by families, HOAs, and property managers</li>
                            <li class="flex items-center gap-3"><i class="fa-solid fa-horse text-[#FF8057]"></i> Equestrian-ready cleaning teams</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Area Groups -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Areas We Serve</p>
                    <h2 class="text-3xl md:text-4xl font-bold">From Ocala to The Villages & Beyond</h2>
                    <p class="mt-4 text-gray-600">Explore the neighborhoods where Palma Cleaning delivers dependable, five-star service. Don’t see your community? Reach out—we’re continually expanding our routes.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                    {areaGroups.map((group) => (
                        <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-2xl p-8 shadow-sm" key={group.title}>
                            <h3 class="text-xl font-semibold flex items-center gap-2"><i class="fa-solid fa-map-marker-alt text-[#FF8057]"></i>{group.title}</h3>
                            <ul class="mt-4 space-y-2 text-sm text-[#305048]">
                                {group.links.map((link) => (
                                    <li key={link.label}>
                                        {link.href ? (
                                            <a href={link.href} class="text-[#FF8057] hover:underline">{link.label}</a>
                                        ) : (
                                            <span>{link.label}</span>
                                        )}
                                    </li>
                                ))}
                            </ul>
                            <p class="mt-5 text-sm text-gray-600 leading-relaxed">{group.description}</p>
                        </div>
                    ))}
                </div>
                <div class="mt-10 bg-[#FF8057]/10 border border-[#FF8057]/30 rounded-xl px-6 py-5 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div class="flex items-center gap-3 text-[#305048]">
                        <i class="fa-solid fa-circle-info text-[#FF8057]"></i>
                        <p class="text-sm md:text-base">Don’t see your neighborhood listed? We regularly add new communities across Central Florida—call or text to confirm availability.</p>
                    </div>
                    <a href="tel:+13527644747" class="inline-flex items-center gap-2 bg-[#FF8057] text-[#305048] font-semibold px-4 py-2 rounded-md hover:bg-[#ff996f] transition text-sm"><i class="fa-solid fa-phone"></i>(352) 764-4747</a>
                </div>
            </div>
        </section>

        <!-- Featured Communities -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Featured Communities</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Expertise Where You Live</h2>
                    <p class="mt-4 text-gray-600">Our teams understand the unique requirements, HOA expectations, and lifestyle needs of Ocala’s most beloved neighborhoods.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
                    {featuredCommunities.map((community) => (
                        <div class="bg-white border border-[#E3EAE8]/60 rounded-2xl p-8 shadow-sm hover:shadow-xl hover:-translate-y-1 transition" key={community.title}>
                            <div class="flex items-center gap-4">
                                <span class="w-12 h-12 rounded-full bg-[#F4F7F6] flex items-center justify-center text-[#FF8057]"><i class={`${community.icon} text-xl`}></i></span>
                                <h3 class="text-xl font-semibold">{community.title}</h3>
                            </div>
                            <p class="mt-4 text-sm text-gray-600 leading-relaxed">{community.description}</p>
                            <ul class="mt-4 space-y-2 text-sm text-gray-600 list-disc list-inside">
                                {community.bullets.map((bullet) => (
                                    <li key={bullet}>{bullet}</li>
                                ))}
                            </ul>
                            <a href={community.href} class="mt-5 inline-flex items-center gap-2 text-sm font-semibold text-[#305048] hover:text-[#FF8057] transition">Learn more<i class="fa-solid fa-arrow-right text-xs"></i></a>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Coverage Highlights -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Coverage Details</p>
                    <h2 class="text-3xl md:text-4xl font-bold">How We Schedule Your Cleaning</h2>
                    <p class="mt-4 text-gray-600">Flexible routes, responsive scheduling, and no surprise travel fees for the majority of our clients.</p>
                </div>
                <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
                    {coverageHighlights.map((highlight) => (
                        <div class="bg-[#F4F7F6] border border-[#E3EAE8]/60 rounded-xl p-8 text-center shadow-sm" key={highlight.title}>
                            <i class={`${highlight.icon} text-[#FF8057] text-3xl`}></i>
                            <h3 class="mt-4 text-xl font-semibold">{highlight.title}</h3>
                            <p class="mt-3 text-sm text-gray-600 leading-relaxed">{highlight.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="py-24 bg-[#FF8057]">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold text-[#305048]">Serving Your Community With Care</h2>
                <p class="mt-4 text-[#305048]/90 text-lg max-w-2xl mx-auto">Tell us about your neighborhood, property type, and schedule. We’ll confirm coverage, provide pricing, and lock in your preferred service date.</p>
                <div class="mt-10 flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#305048] text-white font-bold py-4 px-10 rounded-md hover:bg-[#305048]/90 transition duration-300 text-sm uppercase"><i class="fa-solid fa-calendar-check mr-2"></i>Book Now</a>
                    <a href="tel:+13527644747" class="bg-transparent text-[#305048] font-bold py-4 px-10 rounded-md border border-[#305048] transition duration-300 text-sm uppercase"><i class="fa-solid fa-phone mr-2"></i>Call (352) 764-4747</a>
                </div>
                <p class="mt-6 text-[#305048]/80 text-sm">Response within 24 hours • Licensed & Insured • Satisfaction Guaranteed</p>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>