---
// The Villages area landing page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "The Villages Cleaning Services | Palma Cleaning - FL";
const description = "Professional cleaning services for The Villages, Florida. House cleaning, commercial cleaning, and specialized services for Villages residents. Licensed & insured cleaning company.";

const services = [
  {
    icon: "fa-solid fa-home",
    title: "Standard House Cleaning",
    description: "Regular cleaning service tailored for The Villages' villa lifestyle and active adult needs.",
    items: [
      "Weekly, bi-weekly, or monthly service",
      "Villa-specific cleaning approach",
      "Guest-ready standards",
      "Flexible around activities & travel"
    ],
    link: "/standard-cleaning"
  },
  {
    icon: "fa-solid fa-magic",
    title: "Deep Cleaning",
    description: "Comprehensive deep cleaning perfect for The Villages' high standards and special occasions.",
    items: [
      "Top-to-bottom detailed cleaning",
      "Pre-guest visit preparation",
      "Seasonal deep cleaning",
      "Move-in villa preparation"
    ],
    link: "/deep-cleaning"
  },
  {
    icon: "fa-solid fa-building",
    title: "Commercial Cleaning",
    description: "Professional cleaning for The Villages businesses and community facilities.",
    items: [
      "Town squares and retail",
      "Recreation centers",
      "Medical offices",
      "Restaurants and dining"
    ],
    link: "/commercial-cleaning"
  },
  {
    icon: "fa-solid fa-box-open",
    title: "Move-in/Move-out",
    description: "Complete transition cleaning for Villages property transfers and new residents.",
    items: [
      "Villa move-in preparation",
      "Real estate ready cleaning",
      "New resident welcome ready",
      "Same-day service available"
    ],
    link: "/move-in-out-cleaning"
  },
  {
    icon: "fa-solid fa-hard-hat",
    title: "Post-Construction",
    description: "Specialized cleanup after villa renovations and home improvements.",
    items: [
      "Villa renovation cleanup",
      "Construction dust removal",
      "New home final cleaning",
      "HOA compliance ready"
    ],
    link: "/post-construction-cleaning"
  },
  {
    icon: "fa-solid fa-horse",
    title: "Equestrian Properties",
    description: "Specialized cleaning for Villages area equestrian estates and horse properties.",
    items: [
      "Horse property cleaning",
      "Barn and stable maintenance",
      "Animal-safe products",
      "Equestrian-friendly scheduling"
    ],
    link: "/wec-area"
  }
];

const features = [
  {
    icon: "fa-solid fa-shield-check",
    title: "Licensed & Insured",
    description: "Fully licensed and insured for your peace of mind"
  },
  {
    icon: "fa-solid fa-user-tie",
    title: "Premium Service",
    description: "Trained, uniformed professionals you can trust"
  },
  {
    icon: "fa-solid fa-golf-ball",
    title: "Villages Experience",
    description: "Specialized experience with Villages community"
  },
  {
    icon: "fa-solid fa-leaf",
    title: "Eco-Friendly Options",
    description: "Green cleaning products available"
  }
];

const stats = [
  {
    number: "200+",
    label: "Villages Homes Served"
  },
  {
    number: "5★",
    label: "Average Rating"
  },
  {
    number: "100%",
    label: "Satisfaction Rate"
  }
];

const villagesLifestyle = [
  {
    icon: "fa-solid fa-home",
    title: "Villa Living Standards",
    description: "The Villages villas are designed for comfort and entertaining. We understand the importance of maintaining these beautiful homes to the high standards expected in America's premier active adult community."
  },
  {
    icon: "fa-solid fa-users",
    title: "Active Social Life",
    description: "With over 3,000 clubs and activities, Villages residents lead incredibly active social lives. We provide flexible cleaning services that work around your busy schedule of golf, clubs, and social events."
  },
  {
    icon: "fa-solid fa-heart",
    title: "Family & Guest Ready",
    description: "Many Villages residents frequently host family and friends. We ensure your villa is always guest-ready, with cleaning services that maintain your home beautifully between visits."
  },
  {
    icon: "fa-solid fa-golf-ball",
    title: "Golf Cart Community",
    description: "We're familiar with The Villages' unique golf cart lifestyle and understand the convenience and accessibility needs. Our team works efficiently around your community's transportation and activity patterns."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="The Villages cleaning services, The Villages house cleaning, The Villages commercial cleaning, The Villages Florida cleaning company">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://palmacleaningco.com/the-villages">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Professional cleaning services for The Villages, Florida community",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "The Villages",
            "addressRegion": "FL",
            "addressCountry": "US"
        },
        "telephone": "(352) 764-4747",
        "url": "https://palmacleaningco.com/the-villages",
        "areaServed": {
            "@type": "Place",
            "name": "The Villages, Florida"
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />
    <Navigation />

    <main>
        <!-- Hero Section -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">The Villages Cleaning Services</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Professional Cleaning for Florida's Premier Active Adult Community
                </p>
                <p class="text-white/90 mb-8 leading-relaxed">
                    Trusted cleaning services specifically designed for The Villages residents. From villa cleaning to commercial services, we understand the unique needs and lifestyle of America's friendliest hometown.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border border-white text-white px-10 py-3 rounded-md text-lg font-bold hover:bg-white hover:text-[#305048] transition-colors duration-300 inline-block">
                        Call (352) 764-4747
                    </a>
                </div>
            </div>
        </section>

        <!-- Why Choose Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Why Choose Us</p>
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">Why Villages Residents Choose Palma Cleaning</h2>
                    <p class="text-gray-600">
                        The trusted cleaning service for The Villages' active adult community.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
                    <div class="space-y-6">
                        <p class="text-lg text-gray-700 leading-relaxed">
                            The Villages is America's premier active adult community, known for its beautiful homes, active lifestyle, and high community standards. We understand the unique needs of Villages residents - from maintaining pristine villas to preparing for family visits and community events.
                        </p>
                        <p class="text-lg text-gray-700 leading-relaxed">
                            From regular house cleaning that keeps your villa guest-ready to specialized services for entertaining and activities, we provide the professional, reliable service that complements The Villages' exceptional quality of life.
                        </p>

                        <div class="grid grid-cols-2 gap-6 mt-8">
                            {features.map((feature) => (
                                <div class="text-center p-4 bg-[#F4F7F6] rounded-xl">
                                    <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mx-auto mb-3">
                                        <i class={feature.icon}></i>
                                    </div>
                                    <h4 class="text-sm font-semibold text-[#305048] mb-1">{feature.title}</h4>
                                    <p class="text-xs text-gray-600">{feature.description}</p>
                                </div>
                            ))}
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-8">
                        {stats.map((stat) => (
                            <div class="bg-[#305048] text-white rounded-2xl p-8 text-center shadow-lg">
                                <div class="text-5xl font-bold text-[#FF8057] mb-2">{stat.number}</div>
                                <div class="text-white/90 font-semibold">{stat.label}</div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Our Services</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Complete Cleaning Services for The Villages</h2>
                    <p class="mt-4 text-gray-600">Professional cleaning solutions tailored for Villages lifestyle.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {services.map((service) => (
                        <div class="bg-white rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60 hover:shadow-xl transition duration-300">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mb-6">
                                <i class={service.icon}></i>
                            </div>
                            <h3 class="text-xl font-bold text-[#305048] mb-3">{service.title}</h3>
                            <p class="text-gray-600 mb-6 text-sm">{service.description}</p>
                            <ul class="space-y-2 mb-6">
                                {service.items.map((item) => (
                                    <li class="flex items-start gap-2 text-sm text-gray-700">
                                        <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                        <span>{item}</span>
                                    </li>
                                ))}
                            </ul>
                            <a href={service.link} class="block text-center bg-[#305048] text-white py-2 px-6 rounded-md hover:bg-[#305048]/90 transition duration-300 text-sm font-semibold">
                                Learn More
                            </a>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Understanding The Villages Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Understanding The Villages</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Understanding The Villages Lifestyle</h2>
                </div>

                <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
                    {villagesLifestyle.map((item) => (
                        <div class="bg-[#F4F7F6] rounded-xl p-6 border border-[#E3EAE8]/60 hover:shadow-lg transition duration-300">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-10 h-10 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center">
                                    <i class={item.icon}></i>
                                </div>
                                <h4 class="text-lg font-bold text-[#305048]">{item.title}</h4>
                            </div>
                            <p class="text-gray-700 leading-relaxed text-sm">{item.description}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Experience Premium Villages Cleaning?</h2>
                <p class="text-lg text-white/90 max-w-2xl mx-auto mb-8">
                    Join thousands of Villages residents who trust Palma Cleaning for exceptional cleaning services. Contact us today for your free quote!
                </p>
                <div class="flex flex-wrap justify-center gap-4 mb-8">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300 text-sm uppercase">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border border-white text-white font-bold py-4 px-10 rounded-md hover:bg-white hover:text-[#305048] transition duration-300 text-sm uppercase">
                        Call (352) 764-4747
                    </a>
                </div>
                <div class="max-w-2xl mx-auto bg-white/10 backdrop-blur rounded-xl p-6 border border-white/20">
                    <p class="text-white/90 font-semibold">
                        <i class="fa-solid fa-check-circle text-[#FF8057] mr-2"></i>
                        Licensed & Insured • Villages Experienced • Satisfaction Guaranteed
                    </p>
                </div>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
