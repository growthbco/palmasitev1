---
// Commercial cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Commercial Office Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Professional commercial office cleaning services in Ocala, FL. Daily, weekly, and monthly cleaning plans for offices, medical facilities, and retail spaces. Licensed & insured.";

const services = [
  {
    title: "Office Cleaning",
    icon: "fa-solid fa-building",
    description: "Professional daily, weekly, or monthly office cleaning to maintain a productive work environment.",
    items: [
      "Desks and workstations",
      "Conference and meeting rooms",
      "Reception areas",
      "Break rooms and kitchens",
      "Restroom sanitization",
      "Trash removal and recycling",
      "Floor care (carpet and hard surface)",
      "Window cleaning",
      "Dusting and surface cleaning"
    ]
  },
  {
    title: "Retail Cleaning",
    icon: "fa-solid fa-store",
    description: "Keep your retail space spotless and welcoming for customers with our specialized retail cleaning.",
    items: [
      "Sales floor maintenance",
      "Fitting room cleaning",
      "Customer restroom sanitization",
      "Display case cleaning",
      "Entry and storefront cleaning",
      "Stock room organization",
      "Floor care and maintenance",
      "Flexible scheduling around business hours"
    ]
  },
  {
    title: "Medical Facility Cleaning",
    icon: "fa-solid fa-user-md",
    description: "Specialized cleaning and sanitization for medical offices, clinics, and healthcare facilities.",
    items: [
      "Exam room sanitization",
      "Waiting area maintenance",
      "Medical equipment cleaning",
      "Biohazard waste handling",
      "HIPAA-compliant service",
      "Hospital-grade disinfectants",
      "Infection control protocols",
      "Flexible after-hours scheduling"
    ]
  }
];

const whyChoose = [
  {
    icon: "fa-solid fa-clock",
    title: "Flexible Scheduling",
    copy: "Early morning, after-hours, or weekend cleaning to fit your business schedule without disruption."
  },
  {
    icon: "fa-solid fa-users",
    title: "Trained Professionals",
    copy: "Background-checked, uniformed staff trained in commercial cleaning protocols and safety procedures."
  },
  {
    icon: "fa-solid fa-shield-check",
    title: "Licensed & Insured",
    copy: "Full liability insurance and bonding for your peace of mind and protection of your business."
  },
  {
    icon: "fa-solid fa-leaf",
    title: "Eco-Friendly Options",
    copy: "Green cleaning products available to maintain a healthy environment for your employees and customers."
  }
];

const additionalServices = [
  {
    icon: "fa-solid fa-utensils",
    title: "Restaurant Cleaning",
    copy: "Kitchen deep cleaning, dining area maintenance, and health code compliance."
  },
  {
    icon: "fa-solid fa-car",
    title: "Auto Dealership Cleaning",
    copy: "Showroom cleaning, service area maintenance, and customer lounge upkeep."
  },
  {
    icon: "fa-solid fa-hard-hat",
    title: "Post-Construction Cleaning",
    copy: "Construction cleanup for new commercial spaces and renovation projects."
  },
  {
    icon: "fa-solid fa-warehouse",
    title: "Warehouse Cleaning",
    copy: "Large facility maintenance, loading dock cleaning, and industrial spaces."
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="commercial cleaning Ocala FL, office cleaning, janitorial services, retail cleaning, medical office cleaning, restaurant cleaning">
    <link rel="canonical" href="https://palmacleaningco.com/commercial-cleaning">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Commercial Cleaning Services",
        "alternateName": ["Office Cleaning", "Business Cleaning", "Janitorial Services"],
        "description": "Professional commercial cleaning services for office buildings, retail spaces, medical offices, restaurants, and corporate facilities with flexible scheduling and reliable service.",
        "url": "https://palmacleaningco.com/commercial-cleaning",
        "provider": {
            "@type": ["LocalBusiness", "Service"],
            "name": "Palma Cleaning",
            "@id": "https://palmacleaningco.com/#organization",
            "telephone": "(352) 764-4747",
            "email": "hello@palmacleaningco.com",
            "url": "https://palmacleaningco.com",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Ocala",
                "addressRegion": "FL",
                "postalCode": "34471",
                "addressCountry": "US"
            },
            "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "5.0",
                "reviewCount": "147"
            }
        },
        "areaServed": [
            {
                "@type": "City",
                "name": "Ocala",
                "addressRegion": "FL",
                "addressCountry": "US"
            },
            {
                "@type": "AdministrativeArea",
                "name": "Marion County",
                "containedInPlace": "Florida",
                "addressCountry": "US"
            }
        ],
        "serviceType": "Commercial Office Cleaning",
        "category": ["Commercial Cleaning", "Office Cleaning", "Janitorial Services", "Business Services"],
        "availableChannel": {
            "@type": "ServiceChannel",
            "serviceUrl": "https://palmacleaningco.com/book-now",
            "servicePhone": "(352) 764-4747"
        },
        "hoursAvailable": [
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
                "opens": "08:00",
                "closes": "18:00"
            },
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": ["Saturday", "Sunday"],
                "opens": "08:00",
                "closes": "17:00"
            }
        ],
        "offers": [
            {
                "@type": "Offer",
                "name": "Daily Office Cleaning",
                "description": "Daily cleaning service for offices and corporate facilities",
                "priceRange": "$150-$400",
                "availability": "InStock"
            },
            {
                "@type": "Offer",
                "name": "Weekly Commercial Cleaning",
                "description": "Weekly cleaning for retail spaces and small businesses",
                "priceRange": "$200-$600",
                "availability": "InStock"
            },
            {
                "@type": "Offer",
                "name": "Medical Office Cleaning",
                "description": "Specialized cleaning for medical and healthcare facilities",
                "priceRange": "$300-$800",
                "availability": "InStock"
            }
        ],
        "isRelatedTo": [
            {
                "@type": "Service",
                "name": "Post-Construction Cleaning",
                "url": "https://palmacleaningco.com/post-construction-cleaning"
            },
            {
                "@type": "Service",
                "name": "Deep Cleaning Services",
                "url": "https://palmacleaningco.com/deep-cleaning"
            }
        ]
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />

    <main>
        <!-- Hero -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">Commercial cleaning</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Maintain a clean, productive work environment with our reliable commercial cleaning services for offices, retail, and medical facilities.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    VIEW PRICING
                </a>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Our Services</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Commercial Cleaning Services</h2>
                    <p class="mt-4 text-gray-600">Comprehensive cleaning solutions tailored to your business needs.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {services.map((service) => (
                        <div class="bg-[#F4F7F6] rounded-2xl p-8 shadow-lg border border-[#E3EAE8]/60">
                            <div class="w-16 h-16 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-2xl mb-6">
                                <i class={service.icon}></i>
                            </div>
                            <h3 class="text-xl font-bold text-[#305048] mb-3">{service.title}</h3>
                            <p class="text-gray-600 mb-6 text-sm">{service.description}</p>
                            <ul class="space-y-2">
                                {service.items.map((item) => (
                                    <li class="flex items-start gap-2 text-sm text-gray-700">
                                        <i class="fa-solid fa-check text-[#305048] mt-1"></i>
                                        <span>{item}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Why Choose Us Section -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">Why Choose Us</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Why Businesses Choose Palma Cleaning</h2>
                    <p class="mt-4 text-white/80">Professional commercial cleaning services you can trust.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {whyChoose.map((item) => (
                        <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-center">
                            <div class="w-12 h-12 rounded-full bg-[#FF8057] text-[#305048] flex items-center justify-center text-xl mx-auto mb-4">
                                <i class={item.icon}></i>
                            </div>
                            <h3 class="text-lg font-semibold mb-3">{item.title}</h3>
                            <p class="text-sm text-white/80 leading-relaxed">{item.copy}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Additional Services Section -->
        <section class="py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-3xl mx-auto text-center mb-12">
                    <p class="text-sm font-semibold uppercase tracking-[0.3em] text-[#FF8057]">More Services</p>
                    <h2 class="text-3xl md:text-4xl font-bold">Additional Commercial Services</h2>
                    <p class="mt-4 text-gray-600">Specialized cleaning solutions for various commercial industries.</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    {additionalServices.map((service) => (
                        <div class="bg-white rounded-xl p-6 shadow-sm border border-[#E3EAE8]/60 text-center">
                            <i class={`${service.icon} text-3xl text-[#FF8057] mb-4`}></i>
                            <h3 class="text-lg font-semibold text-[#305048] mb-2">{service.title}</h3>
                            <p class="text-sm text-gray-600">{service.copy}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 bg-[#305048] text-white">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready for Professional Commercial Cleaning?</h2>
                <p class="text-lg text-white/90 max-w-2xl mx-auto mb-8">
                    Contact us for a free commercial cleaning assessment. We'll create a custom cleaning plan and schedule that works for your business.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/book-now" class="bg-[#FF8057] text-[#305048] font-bold py-4 px-10 rounded-md hover:bg-[#ff996f] transition duration-300 text-sm uppercase">
                        Book Now
                    </a>
                    <a href="tel:+13527644747" class="bg-transparent border border-white text-white font-bold py-4 px-10 rounded-md hover:bg-white hover:text-[#305048] transition duration-300 text-sm uppercase">
                        Call (352) 764-4747
                    </a>
                </div>
                <p class="mt-6 text-white/70 text-sm">Free on-site consultations • Flexible contracts • 24-hour response time</p>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
