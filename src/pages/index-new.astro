---
// Homepage with Design 7 - Clean professional with orange and teal
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';

const title = "Professional House Cleaning in Ocala | Palma Cleaning Co.";
const description = "Trusted house cleaning services in Ocala FL. Licensed & insured team serving Central Florida families since 2020. ⭐ Rated #1 • Flexible scheduling • 100% satisfaction guaranteed.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="house cleaning Ocala FL, professional cleaners Ocala, residential cleaning Marion County, eco-friendly cleaning Ocala, move-in cleaning, deep cleaning services">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/">
    
    <!-- Open Graph -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://palmacleaningco.com/">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/styles-v7.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <GTMBody />
    <Navigation />

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-grid">
                <div class="hero-content">
                    <div class="rating-badge">
                        <div class="stars">★★★★★</div>
                        <span>Rated #1 House Cleaning in Ocala</span>
                    </div>
                    
                    <h1 class="hero-title">
                        Professional House Cleaning in Ocala
                    </h1>
                    
                    <p class="hero-subtitle">
                        Trusted cleaners, flexible scheduling, 100% satisfaction guaranteed. 
                        Licensed & insured team serving Central Florida families since 2020.
                    </p>
                    
                    <div class="hero-buttons">
                        <a href="#contact" class="btn btn-primary">Get Free Quote</a>
                        <a href="tel:3527644747" class="btn btn-secondary">Book Online Today</a>
                    </div>
                    
                    <div class="trust-indicators">
                        <div class="trust-item">
                            <i class="fas fa-shield-alt"></i>
                            <div>
                                <strong>Licensed & Insured</strong>
                                <span>Fully protected service</span>
                            </div>
                        </div>
                        <div class="trust-item">
                            <i class="fas fa-leaf"></i>
                            <div>
                                <strong>Eco-Friendly</strong>
                                <span>Safe for family & pets</span>
                            </div>
                        </div>
                        <div class="trust-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <strong>Flexible Scheduling</strong>
                                <span>Fits your lifestyle</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="hero-image">
                    <img src="https://images.unsplash.com/photo-1527515637462-cff94eecc1ac?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" 
                         alt="Professional house cleaning in Ocala - clean modern home" 
                         loading="eager">
                    <div class="hero-stats">
                        <div class="stat-card stat-card-1">
                            <strong>500+</strong>
                            <span>Happy Clients</span>
                        </div>
                        <div class="stat-card stat-card-2">
                            <strong>4+</strong>
                            <span>Years Serving</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section" id="services">
        <div class="container">
            <div class="section-header">
                <h2>Our House Cleaning Services</h2>
                <p>Professional cleaning solutions designed to fit your lifestyle and give you more time for what matters most to your family.</p>
            </div>
            
            <div class="services-grid">
                <div class="service-card">
                    <div class="service-icon orange-bg">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3>Standard Cleaning</h3>
                    <p>Regular weekly, bi-weekly, or monthly house cleaning to maintain your home's cleanliness and comfort.</p>
                    <a href="/standard-cleaning" class="service-link">Learn More →</a>
                </div>
                
                <div class="service-card">
                    <div class="service-icon teal-bg">
                        <i class="fas fa-sparkles"></i>
                    </div>
                    <h3>Deep Cleaning</h3>
                    <p>Intensive deep clean for every corner and surface, perfect for seasonal refreshes or first-time service.</p>
                    <a href="/deep-cleaning" class="service-link">Learn More →</a>
                </div>
                
                <div class="service-card">
                    <div class="service-icon orange-bg">
                        <i class="fas fa-truck"></i>
                    </div>
                    <h3>Move-In/Move-Out</h3>
                    <p>Complete cleaning for moving transitions, ensuring your new home is pristine or deposit-ready.</p>
                    <a href="/move-in-out-cleaning" class="service-link">Learn More →</a>
                </div>
                
                <div class="service-card">
                    <div class="service-icon teal-bg">
                        <i class="fas fa-building"></i>
                    </div>
                    <h3>Commercial Cleaning</h3>
                    <p>Professional office and commercial space cleaning services for Ocala area businesses.</p>
                    <a href="/commercial-cleaning" class="service-link">Learn More →</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us -->
    <section class="why-section">
        <div class="container">
            <div class="section-header">
                <h2>Why Homeowners in Ocala Trust Us</h2>
                <p>Professional, reliable, and dedicated to delivering exceptional results that exceed your expectations.</p>
            </div>
            
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon orange-bg">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Licensed & Insured Cleaners</h3>
                    <p>Fully licensed and insured professional team for your complete peace of mind and protection.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon teal-bg">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h3>Eco-Friendly Supplies Available</h3>
                    <p>Safe, environmentally conscious cleaning products that protect your family, pets, and the planet.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon orange-bg">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h3>Flexible Scheduling</h3>
                    <p>Weekly, bi-weekly, monthly, or one-time cleaning services that adapt to your busy lifestyle.</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon teal-bg">
                        <i class="fas fa-award"></i>
                    </div>
                    <h3>100% Satisfaction Guarantee</h3>
                    <p>Not satisfied with our work? We'll return within 24 hours to make it right, guaranteed.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about-section" id="about">
        <div class="container">
            <div class="about-grid">
                <div class="about-content">
                    <h2>Proudly Serving Ocala Since 2020</h2>
                    <p class="lead">We're a locally owned cleaning service proudly serving Ocala and surrounding areas for over 4 years. Our experienced team understands the unique needs of Central Florida homes and is committed to providing exceptional cleaning services that keep your space spotless year-round.</p>
                    <p>Every member of our team is background-checked, trained in our proven cleaning methods, and dedicated to treating your home with the respect and care it deserves.</p>
                    <a href="/about" class="btn btn-primary">Learn More About Our Story →</a>
                </div>
                
                <div class="about-image">
                    <img src="https://images.unsplash.com/photo-1556909114-4c3a9b84e938?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80" 
                         alt="Professional cleaning team in Ocala" 
                         loading="lazy">
                </div>
            </div>
            
            <div class="service-areas">
                <h3>SERVICE AREAS:</h3>
                <div class="areas-grid">
                    <span class="area-badge primary">Ocala</span>
                    <span class="area-badge">The Villages</span>
                    <span class="area-badge">Oak Run</span>
                    <span class="area-badge">Stone Creek</span>
                    <span class="area-badge">Belleview</span>
                    <span class="area-badge">Golden Hills</span>
                    <span class="area-badge">Dunnellon</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials-section" id="testimonials">
        <div class="container">
            <div class="section-header">
                <h2>What Our Ocala Customers Say</h2>
                <p>Don't just take our word for it — hear from satisfied homeowners throughout Central Florida.</p>
            </div>
            
            <div class="testimonials-grid">
                <div class="testimonial-card">
                    <div class="stars">★★★★★</div>
                    <p>"Palma Cleaning has been cleaning our home in Oak Run for 2 years. They're always on time, incredibly thorough, and use eco-friendly products that don't irritate my allergies. Highly recommend!"</p>
                    <div class="testimonial-author">
                        <strong>Sarah M.</strong>
                        <span>Oak Run Homeowner</span>
                    </div>
                </div>
                
                <div class="testimonial-card">
                    <div class="stars">★★★★★</div>
                    <p>"The deep cleaning service was absolutely amazing! They got into every corner and crevice. My house hasn't been this clean since it was built. Great value for the quality of work."</p>
                    <div class="testimonial-author">
                        <strong>Mike R.</strong>
                        <span>Ocala Resident</span>
                    </div>
                </div>
                
                <div class="testimonial-card">
                    <div class="stars">★★★★★</div>
                    <p>"Professional, reliable, and trustworthy. They helped us with move-out cleaning and got our full deposit back. I've recommended them to all my friends in The Villages."</p>
                    <div class="testimonial-author">
                        <strong>Linda K.</strong>
                        <span>The Villages</span>
                    </div>
                </div>
            </div>
            
            <div class="testimonials-cta">
                <a href="/reviews" class="btn btn-primary">Read More Reviews →</a>
            </div>
        </div>
    </section>

    <!-- Before & After -->
    <section class="portfolio-section">
        <div class="container">
            <div class="section-header">
                <h2>See the Difference</h2>
                <p>Real results from our house cleaning services in Ocala. Every home tells a story of transformation.</p>
            </div>
            
            <div class="portfolio-grid">
                <div class="portfolio-item">
                    <h3>Kitchen Deep Clean Transformation</h3>
                    <div class="before-after">
                        <div class="before">
                            <img src="https://images.unsplash.com/photo-1556909909-f5d01e1b8fcb?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                                 alt="Kitchen before cleaning in Ocala home" 
                                 loading="lazy">
                            <span class="label">Before</span>
                        </div>
                        <div class="after">
                            <img src="https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                                 alt="Kitchen after professional cleaning in Ocala" 
                                 loading="lazy">
                            <span class="label">After</span>
                        </div>
                    </div>
                </div>
                
                <div class="portfolio-item">
                    <h3>Bathroom Restoration</h3>
                    <div class="before-after">
                        <div class="before">
                            <img src="https://images.unsplash.com/photo-1507652313519-d4e9174996dd?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                                 alt="Bathroom before deep cleaning service" 
                                 loading="lazy">
                            <span class="label">Before</span>
                        </div>
                        <div class="after">
                            <img src="https://images.unsplash.com/photo-1584622781564-1d987036b4d4?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80" 
                                 alt="Bathroom after house cleaning in Ocala" 
                                 loading="lazy">
                            <span class="label">After</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form -->
    <section class="contact-section" id="contact">
        <div class="container">
            <div class="contact-header">
                <h2>Ready for a Sparkling Clean Home?</h2>
                <p>Get your free estimate today and experience the Palma Cleaning difference. Join hundreds of satisfied homeowners in Central Florida.</p>
            </div>
            
            <div class="contact-form-wrapper">
                <form class="contact-form">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="name">Your Name</label>
                            <input type="text" id="name" name="name" placeholder="Enter your full name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" placeholder="your.email@example.com" required>
                        </div>
                    </div>
                    
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="phone" placeholder="(352) 123-4567" required>
                        </div>
                        <div class="form-group">
                            <label for="zip">Zip Code</label>
                            <input type="text" id="zip" name="zip" placeholder="34470" required>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="service">Service Type</label>
                        <select id="service" name="service" required>
                            <option value="">Select the service you need</option>
                            <option value="standard">Standard Cleaning</option>
                            <option value="deep">Deep Cleaning</option>
                            <option value="move">Move-In/Move-Out</option>
                            <option value="commercial">Commercial Cleaning</option>
                        </select>
                    </div>
                    
                    <div class="form-submit">
                        <button type="submit" class="btn btn-primary btn-large">Get My Free Estimate</button>
                    </div>
                </form>
            </div>
            
            <div class="contact-alternative">
                <p>Prefer to speak directly? Call us now:</p>
                <a href="tel:3527644747" class="phone-number">(352) 764-4747</a>
            </div>
        </div>
    </section>

    <!-- Service Areas Map -->
    <section class="areas-section">
        <div class="container">
            <div class="section-header">
                <h2>Proudly Serving Ocala & Surrounding Areas</h2>
                <p>Professional house cleaning services throughout Central Florida communities.</p>
            </div>
            
            <div class="areas-list">
                <div class="area-item">Ocala</div>
                <div class="area-item">The Villages</div>
                <div class="area-item">Oak Run</div>
                <div class="area-item">Stone Creek</div>
                <div class="area-item">Belleview</div>
                <div class="area-item">Golden Hills</div>
                <div class="area-item">Dunnellon</div>
                <div class="area-item">WEC Area</div>
            </div>
            
            <div class="map-container">
                <p>Complete Service Coverage Map</p>
                <div class="map-placeholder">
                    [Interactive Google Map would be embedded here]
                </div>
            </div>
        </div>
    </section>

    <Footer />
    
    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Form submission
        document.querySelector('.contact-form')?.addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Thank you! We\'ll contact you soon with your free estimate.');
        });
    </script>
</body>
</html>