---
// Mirror cleaning service page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import GTMHead from '../components/GTMHead.astro';
import GTMBody from '../components/GTMBody.astro';
import GlobalHead from '../components/GlobalHead.astro';

const title = "Professional Mirror Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Expert mirror cleaning services in Ocala, FL. Streak-free mirror polishing, frame cleaning, and glass surface maintenance. Crystal-clear mirrors throughout your home. Licensed & insured.";

const services = [
  { text: "Streak-free mirror polishing" },
  { text: "Remove fingerprints and smudges" },
  { text: "Clean mirror frames and edges" },
  { text: "Remove hard water spots" },
  { text: "Polish to crystal-clear shine" },
  { text: "Clean decorative mirror elements" },
  { text: "Remove dust and debris" },
  { text: "Clean bathroom mirrors" },
  { text: "Clean bedroom mirrors" },
  { text: "Clean hallway and entryway mirrors" },
  { text: "Clean full-length mirrors" },
  { text: "Clean decorative wall mirrors" }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <GTMHead />
    <GlobalHead />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="mirror cleaning Ocala FL, professional mirror cleaning, streak-free mirrors, mirror polishing, bathroom mirror cleaning, Ocala mirror services">
    <link rel="canonical" href="https://palmacleaningco.com/mirror-cleaning">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Mirror Cleaning Services",
        "alternateName": ["Mirror Polishing", "Streak-Free Mirror Cleaning", "Professional Mirror Cleaning"],
        "description": "Comprehensive mirror cleaning services including streak-free polishing, frame cleaning, hard water spot removal, and crystal-clear results for all mirrors throughout your home.",
        "url": "https://palmacleaningco.com/mirror-cleaning",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Palma Cleaning",
            "telephone": "(352) 764-4747",
            "email": "hello@palmacleaningco.com",
            "url": "https://palmacleaningco.com",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Ocala",
                "addressRegion": "FL",
                "addressCountry": "US"
            }
        },
        "areaServed": {
            "@type": "City",
            "name": "Ocala",
            "sameAs": "https://en.wikipedia.org/wiki/Ocala,_Florida"
        },
        "serviceType": "Mirror Cleaning",
        "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Mirror Cleaning Services",
            "itemListElement": [
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Standard Mirror Cleaning"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Deep Mirror Cleaning"
                    }
                }
            ]
        }
    }
    </script>
</head>
<body class="bg-white font-poppins text-[#305048]">
    <GTMBody />

    <Navigation />
    
    <main>
        <!-- Hero -->
        <section class="bg-[#305048] text-white h-[450px] flex items-center justify-center">
            <div class="text-center max-w-3xl mx-auto px-6">
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-4">Mirror Cleaning</h1>
                <p class="text-lg mb-8 leading-relaxed">
                    Professional mirror cleaning services that deliver streak-free, crystal-clear results. We polish mirrors throughout your home, remove hard water spots, and clean frames for a flawless finish.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    BOOK NOW
                </a>
            </div>
        </section>

        <!-- Services Section -->
        <section class="py-12 md:py-24 bg-white">
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-4xl font-bold mb-8 text-[#305048] text-center">What's Included in Our Mirror Cleaning</h2>
                    <div class="rounded-lg overflow-hidden mb-8 border-4 border-[#305048] shadow-lg">
                        <img class="w-full h-96 object-cover" src="/images/bathrrom.webp" alt="Professional mirror cleaning service showing streak-free polishing and frame cleaning" loading="lazy" />
                    </div>
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">
                        {services.map((service) => (
                            <li class="flex items-start gap-3">
                                <i class="fa-regular fa-square-check text-[#305048] mt-0.5 flex-shrink-0"></i>
                                <span class="text-base leading-relaxed">{service.text}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </section>

        <!-- Benefits Section -->
        <section class="py-12 md:py-24 bg-[#F4F7F6]">
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-4xl font-bold mb-8 text-[#305048] text-center">Why Choose Professional Mirror Cleaning?</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <i class="fa-solid fa-sparkles text-3xl text-[#305048] mb-4"></i>
                            <h3 class="text-xl font-bold mb-2 text-[#305048]">Streak-Free Results</h3>
                            <p class="text-gray-700">Professional techniques ensure crystal-clear, streak-free mirrors that reflect perfectly without smudges or water spots.</p>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <i class="fa-solid fa-droplet text-3xl text-[#305048] mb-4"></i>
                            <h3 class="text-xl font-bold mb-2 text-[#305048]">Hard Water Spot Removal</h3>
                            <p class="text-gray-700">Specialized solutions remove stubborn hard water spots and mineral deposits that regular cleaning can't eliminate.</p>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <i class="fa-solid fa-frame text-3xl text-[#305048] mb-4"></i>
                            <h3 class="text-xl font-bold mb-2 text-[#305048]">Frame Cleaning</h3>
                            <p class="text-gray-700">We clean and polish mirror frames and edges, ensuring the entire mirror looks pristine and well-maintained.</p>
                        </div>
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <i class="fa-solid fa-eye text-3xl text-[#305048] mb-4"></i>
                            <h3 class="text-xl font-bold mb-2 text-[#305048]">Enhanced Appearance</h3>
                            <p class="text-gray-700">Clean, streak-free mirrors enhance the overall appearance and brightness of any room in your home.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="bg-[#305048] py-20">
            <div class="container mx-auto px-6 text-center text-white">
                <h2 class="text-4xl font-bold text-[#FF8057] mb-4">Ready for Crystal-Clear Mirrors?</h2>
                <p class="max-w-2xl mx-auto mb-8 text-lg">
                    Book your professional mirror cleaning service today and enjoy streak-free, perfectly polished mirrors throughout your home.
                </p>
                <a href="/book-now" class="bg-[#FF8057] text-[#305048] px-10 py-3 rounded-md text-lg font-bold hover:bg-[#ff996f] transition-colors duration-300 inline-block">
                    GET STARTED
                </a>
            </div>
        </section>
    </main>

    <Footer />

    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>
