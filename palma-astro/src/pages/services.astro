---
// Services page
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
const title = "Cleaning Services in Ocala FL | Palma Cleaning";
const description = "Complete cleaning services in Ocala, FL: Standard house cleaning, deep cleaning, commercial cleaning, move-in/out, post-construction, and equestrian properties. Licensed & insured.";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="cleaning services Ocala FL, house cleaning Ocala, commercial cleaning Ocala, deep cleaning Marion County, move-in cleaning The Villages">
    <meta name="robots" content="index, follow">
    
    <link rel="canonical" href="https://palmacleaningco.com/services">
    <link rel="stylesheet" href="/styles-clean.css?v=3">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Palma Cleaning",
        "image": "https://palmacleaningco.com/images/logo.jpg",
        "description": "Complete cleaning services in Ocala, FL and surrounding areas",
        "url": "https://palmacleaningco.com/services",
        "hasOfferCatalog": {
            "@type": "OfferCatalog",
            "name": "Professional Cleaning Services",
            "itemListElement": [
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Standard House Cleaning",
                        "description": "Regular weekly, bi-weekly, or monthly house cleaning"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Deep Cleaning",
                        "description": "Comprehensive top-to-bottom deep cleaning service"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Commercial Cleaning",
                        "description": "Professional office and business cleaning"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Move-in/Move-out Cleaning",
                        "description": "Complete cleaning for property transitions"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Post-Construction Cleaning",
                        "description": "Specialized cleanup after construction and renovation"
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Equestrian Property Cleaning",
                        "description": "Specialized cleaning for horse properties and farms"
                    }
                }
            ]
        }
    }
    </script>
</head>
<body>
    <Navigation />

    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb" style="background: #f8fafa; padding: 1rem 0;">
        <div class="container">
            <div style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.9rem; color: #666;">
                <a href="/" style="color: #ff8057; text-decoration: none;">Home</a>
                <i class="fas fa-chevron-right" style="font-size: 0.7rem;"></i>
                <span style="color: #333;">Services</span>
            </div>
        </div>
    </nav>

    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">Professional Cleaning Services in Ocala FL</h1>
                <p class="hero-subtitle">Complete Cleaning Solutions for Homes & Businesses</p>
                <p class="hero-description">From regular house cleaning to specialized commercial services, we provide comprehensive cleaning solutions throughout Ocala, Marion County, and The Villages.</p>
                <div class="hero-buttons">
                    <a href="/contact" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
            </div>
            <div class="hero-image">
                <div class="hero-placeholder">
                    <i class="fas fa-broom"></i>
                </div>
            </div>
        </div>
    </section>

    <section class="services" id="residential">
        <div class="container">
            <h2 class="section-title">Residential Cleaning Services</h2>
            <div class="services-grid">
                <div class="service-card featured">
                    <div class="service-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3>Standard House Cleaning</h3>
                    <p>Regular weekly, bi-weekly, or monthly cleaning to keep your home consistently clean and fresh.</p>
                    <ul class="service-list">
                        <li>Kitchen and bathroom cleaning</li>
                        <li>Dusting all surfaces</li>
                        <li>Vacuuming carpets and rugs</li>
                        <li>Mopping hard floors</li>
                        <li>Trash removal and replacement</li>
                        <li>Light organizing and tidying</li>
                    </ul>
                    <div style="margin-top: 1.5rem; text-align: center;">
                        <p style="color: #666; margin-bottom: 1rem;"><strong>Available in:</strong></p>
                        <div style="display: flex; gap: 0.5rem; justify-content: center; flex-wrap: wrap;">
                            <a href="/stone-creek-standard-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Stone Creek</a>
                            <a href="/oak-run-standard-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Oak Run</a>
                            <a href="/the-villages-standard-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">The Villages</a>
                        </div>
                    </div>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-magic"></i>
                    </div>
                    <h3>Deep Cleaning</h3>
                    <p>Comprehensive top-to-bottom cleaning perfect for spring cleaning, moving, or getting started.</p>
                    <ul class="service-list">
                        <li>Everything in standard cleaning</li>
                        <li>Inside appliances (oven, fridge, microwave)</li>
                        <li>Baseboards and crown molding</li>
                        <li>Light fixtures and ceiling fans</li>
                        <li>Cabinet fronts and handles</li>
                        <li>Window sills and blinds</li>
                    </ul>
                    <div style="margin-top: 1.5rem; text-align: center;">
                        <p style="color: #666; margin-bottom: 1rem;"><strong>Available in:</strong></p>
                        <div style="display: flex; gap: 0.5rem; justify-content: center; flex-wrap: wrap;">
                            <a href="/stone-creek-deep-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Stone Creek</a>
                            <a href="/oak-run-deep-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Oak Run</a>
                            <a href="/the-villages-deep-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">The Villages</a>
                        </div>
                    </div>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-box-open"></i>
                    </div>
                    <h3>Move-in/Move-out Cleaning</h3>
                    <p>Complete cleaning for transitions, perfect for new homeowners and renters getting deposits back.</p>
                    <ul class="service-list">
                        <li>Empty house/apartment cleaning</li>
                        <li>All cabinets and drawers inside</li>
                        <li>Complete appliance cleaning</li>
                        <li>Detailed bathroom restoration</li>
                        <li>Real estate ready results</li>
                        <li>Same-day service available</li>
                    </ul>
                    <div style="margin-top: 1.5rem; text-align: center;">
                        <p style="color: #666; margin-bottom: 1rem;"><strong>Available in:</strong></p>
                        <div style="display: flex; gap: 0.5rem; justify-content: center; flex-wrap: wrap;">
                            <a href="/stone-creek-move-in-out-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Stone Creek</a>
                            <a href="/oak-run-move-in-out-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Oak Run</a>
                            <a href="/the-villages-move-in-out-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">The Villages</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="services" style="background: #f8fafa;" id="commercial">
        <div class="container">
            <h2 class="section-title">Commercial & Specialized Services</h2>
            <div class="services-grid">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <h3>Commercial Cleaning</h3>
                    <p>Professional office and business cleaning to maintain a clean, productive work environment.</p>
                    <ul class="service-list">
                        <li>Office buildings and suites</li>
                        <li>Retail stores and shops</li>
                        <li>Medical and dental offices</li>
                        <li>Restaurants and food service</li>
                        <li>Flexible scheduling (after hours)</li>
                        <li>COVID-19 disinfection protocols</li>
                    </ul>
                    <div style="margin-top: 1.5rem; text-align: center;">
                        <p style="color: #666; margin-bottom: 1rem;"><strong>Available in:</strong></p>
                        <div style="display: flex; gap: 0.5rem; justify-content: center; flex-wrap: wrap;">
                            <a href="/stone-creek-commercial-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Stone Creek</a>
                            <a href="/oak-run-commercial-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Oak Run</a>
                            <a href="/the-villages-commercial-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">The Villages</a>
                        </div>
                    </div>
                </div>
                
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-hard-hat"></i>
                    </div>
                    <h3>Post-Construction Cleaning</h3>
                    <p>Specialized cleanup after construction, renovation, and remodeling projects.</p>
                    <ul class="service-list">
                        <li>Construction dust removal</li>
                        <li>New home final cleaning</li>
                        <li>Renovation cleanup</li>
                        <li>Window and fixture detailing</li>
                        <li>Floor cleaning and polishing</li>
                        <li>Move-in ready preparation</li>
                    </ul>
                    <div style="margin-top: 1.5rem; text-align: center;">
                        <p style="color: #666; margin-bottom: 1rem;"><strong>Available in:</strong></p>
                        <div style="display: flex; gap: 0.5rem; justify-content: center; flex-wrap: wrap;">
                            <a href="/stone-creek-post-construction-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Stone Creek</a>
                            <a href="/oak-run-post-construction-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Oak Run</a>
                            <a href="/the-villages-post-construction-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">The Villages</a>
                        </div>
                    </div>
                </div>
                
                <div class="service-card featured">
                    <div class="service-icon">
                        <i class="fas fa-horse"></i>
                    </div>
                    <h3>Equestrian Property Cleaning</h3>
                    <p>Specialized cleaning for horse properties, barns, and equestrian facilities.</p>
                    <ul class="service-list">
                        <li>Horse property home cleaning</li>
                        <li>Barn and stable facilities</li>
                        <li>Tack rooms and feed storage</li>
                        <li>Indoor arena cleaning</li>
                        <li>Animal-safe products only</li>
                        <li>Farm-friendly scheduling</li>
                    </ul>
                    <div style="margin-top: 1.5rem; text-align: center;">
                        <p style="color: #666; margin-bottom: 1rem;"><strong>Available in:</strong></p>
                        <div style="display: flex; gap: 0.5rem; justify-content: center; flex-wrap: wrap;">
                            <a href="/stone-creek-equestrian-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Stone Creek</a>
                            <a href="/oak-run-equestrian-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">Oak Run</a>
                            <a href="/the-villages-equestrian-cleaning.html" class="btn btn-secondary" style="padding: 6px 12px; font-size: 0.8rem;">The Villages</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="about">
        <div class="container">
            <h2 class="section-title">Why Choose Our Services?</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-bottom: 3rem;">
                <div style="text-align: center; padding: 2rem; background: #f8fafa; border-radius: 15px;">
                    <div style="background: #ff8057; color: white; width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 1.5rem;">
                        <i class="fas fa-award"></i>
                    </div>
                    <h4 style="color: #2f5047; margin-bottom: 1rem;">Quality Guaranteed</h4>
                    <p style="color: #666; line-height: 1.6;">We're not satisfied until you are. Our quality guarantee ensures every cleaning meets our high standards.</p>
                </div>
                
                <div style="text-align: center; padding: 2rem; background: #f8fafa; border-radius: 15px;">
                    <div style="background: #ff8057; color: white; width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 1.5rem;">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4 style="color: #2f5047; margin-bottom: 1rem;">Licensed & Insured</h4>
                    <p style="color: #666; line-height: 1.6;">Fully licensed and insured with comprehensive liability coverage for your complete peace of mind.</p>
                </div>
                
                <div style="text-align: center; padding: 2rem; background: #f8fafa; border-radius: 15px;">
                    <div style="background: #ff8057; color: white; width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 1.5rem;">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h4 style="color: #2f5047; margin-bottom: 1rem;">Flexible Scheduling</h4>
                    <p style="color: #666; line-height: 1.6;">We work around your schedule with convenient appointment times that fit your busy lifestyle.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="areas" style="background: #f8fafa;">
        <div class="container">
            <h2 class="section-title">Service Areas</h2>
            <div class="areas-grid">
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Stone Creek Community</h4>
                    <p style="margin-bottom: 1rem;">Premium cleaning services for one of Ocala's most desirable gated communities.</p>
                    <a href="/stone-creek" class="btn btn-secondary" style="padding: 8px 16px; font-size: 0.9rem;">View Stone Creek Services</a>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Oak Run Community</h4>
                    <p style="margin-bottom: 1rem;">Specialized cleaning for the beautiful Oak Run golf community and surrounding areas.</p>
                    <a href="/oak-run" class="btn btn-secondary" style="padding: 8px 16px; font-size: 0.9rem;">View Oak Run Services</a>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> The Villages</h4>
                    <p style="margin-bottom: 1rem;">Comprehensive cleaning services throughout Florida's Premier Active Adult Community.</p>
                    <a href="/the-villages" class="btn btn-secondary" style="padding: 8px 16px; font-size: 0.9rem;">View Villages Services</a>
                </div>
                <div class="area-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Ocala & Surrounding Areas</h4>
                    <p style="margin-bottom: 1rem;">Professional cleaning throughout Marion County and Central Florida communities.</p>
                    <a href="/contact" class="btn btn-secondary" style="padding: 8px 16px; font-size: 0.9rem;">Check Service Availability</a>
                </div>
            </div>
        </div>
    </section>

    <section class="contact">
        <div class="container">
            <h2 class="section-title">Ready to Get Started?</h2>
            <div style="text-align: center; max-width: 600px; margin: 0 auto;">
                <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">Contact us today for a free, no-obligation quote for any of our cleaning services. We'll create a custom cleaning plan that fits your needs and budget.</p>
                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin-bottom: 2rem;">
                    <a href="/contact" class="btn btn-primary">Book Now</a>
                    <a href="tel:+13527644747" class="btn btn-secondary">Call (352) 764-4747</a>
                </div>
                <p style="color: #888; font-size: 0.9rem;">Response within 24 hours • Licensed & Insured • Satisfaction Guaranteed</p>
            </div>
        </div>
    </section>

    <Footer />

    <script is:inline src="/script-clean.js"></script>
    <script 
        src="https://beta.leadconnectorhq.com/loader.js"  
        data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
        data-widget-id="66fd9ee1d53ad5f3145ea591">
    </script>
</body>
</html>